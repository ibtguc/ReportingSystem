@page
@model SchedulingSystem.Pages.Admin.Rooms.DeleteModel
@{
    ViewData["Title"] = "Delete Room";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Room</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Are you sure you want to delete this room?
                        @if (Model.ScheduledLessonCount > 0)
                        {
                            <br /><strong class="text-danger">This room has @Model.ScheduledLessonCount scheduled lesson(s)! Deleting will remove room assignments.</strong>
                        }
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Room Number</dt>
                        <dd class="col-sm-8"><strong>@Model.Room.RoomNumber</strong></dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Room.Name</dd>

                        <dt class="col-sm-4">Room Type</dt>
                        <dd class="col-sm-8"><span class="badge bg-info">@(Model.Room.RoomType ?? "N/A")</span></dd>

                        <dt class="col-sm-4">Capacity</dt>
                        <dd class="col-sm-8">@Model.Room.Capacity</dd>

                        <dt class="col-sm-4">Building</dt>
                        <dd class="col-sm-8">@(Model.Room.Building ?? "-")</dd>

                        <dt class="col-sm-4">Floor</dt>
                        <dd class="col-sm-8">@(Model.Room.Floor ?? "-")</dd>

                        <dt class="col-sm-4">Scheduled Lessons</dt>
                        <dd class="col-sm-8">@Model.ScheduledLessonCount</dd>

                        <dt class="col-sm-4">Availability Constraints</dt>
                        <dd class="col-sm-8">@Model.AvailabilityCount</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Room.Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Room
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
