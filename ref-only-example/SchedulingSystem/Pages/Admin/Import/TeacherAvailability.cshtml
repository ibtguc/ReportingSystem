@page
@model SchedulingSystem.Pages.Admin.Import.TeacherAvailabilityModel
@{
    ViewData["Title"] = "Import Teacher Availability";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-upload"></i> Import Teacher Availability</h2>
            <p class="text-muted">Upload a CSV file to import teacher availability constraints</p>
        </div>
        <div class="col-auto">
            <a asp-page="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Import Hub
            </a>
        </div>
    </div>

    @if (Model.ShowResults)
    {
        @if (Model.ImportedCount > 0)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="bi bi-check-circle"></i> <strong>Success!</strong> Imported @Model.ImportedCount availability constraint(s).
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.SkippedCount > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show">
                <i class="bi bi-exclamation-triangle"></i> <strong>Note:</strong> Skipped @Model.SkippedCount record(s) due to duplicates or validation issues.
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Warnings.Any())
        {
            <div class="alert alert-warning">
                <h6><i class="bi bi-exclamation-triangle"></i> Warnings</h6>
                <ul class="mb-0">
                    @foreach (var warning in Model.Warnings)
                    {
                        <li>@warning</li>
                    }
                </ul>
            </div>
        }

        @if (Model.Errors.Any())
        {
            <div class="alert alert-danger">
                <h6><i class="bi bi-x-circle"></i> Errors</h6>
                <ul class="mb-0">
                    @foreach (var error in Model.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-arrow-up"></i> Upload CSV File</h5>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="uploadedFile" class="form-label">Select CSV File</label>
                            <input type="file" class="form-control" asp-for="UploadedFile" accept=".csv" required />
                            <div class="form-text">Upload a CSV file following the template format</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page-handler="DownloadTemplate" class="btn btn-outline-secondary">
                                <i class="bi bi-download"></i> Download Template
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-upload"></i> Import Availability
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> CSV Format</h6>
                </div>
                <div class="card-body">
                    <h6>Required Fields:</h6>
                    <ul>
                        <li><code>TeacherEmail</code> (must exist)</li>
                        <li><code>DayOfWeek</code> (0=Sunday to 4=Thursday)</li>
                        <li><code>PeriodNumber</code> (must exist)</li>
                        <li><code>Criticality</code> (0-3, see below)</li>
                    </ul>

                    <h6>Criticality Levels:</h6>
                    <ul class="small">
                        <li><code>0</code> = Available</li>
                        <li><code>1</code> = Prefer Not To</li>
                        <li><code>2</code> = Should Not</li>
                        <li><code>3</code> = Cannot</li>
                    </ul>

                    <h6>Optional Fields:</h6>
                    <ul>
                        <li><code>Reason</code> (explanation)</li>
                    </ul>

                    <h6>Example:</h6>
                    <pre class="bg-light p-2 small">TeacherEmail,DayOfWeek,PeriodNumber,Criticality
john@school.edu,0,1,3
jane@school.edu,1,5,1</pre>
                </div>
            </div>

            <div class="card shadow-sm border-warning mt-3">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Important</h6>
                </div>
                <div class="card-body">
                    <ul class="small mb-0">
                        <li>Teachers and Periods must exist before importing</li>
                        <li>DayOfWeek: 0=Sunday, 1=Monday, 2=Tuesday, 3=Wednesday, 4=Thursday</li>
                        <li>Duplicate constraints (same Teacher+Day+Period) will be skipped</li>
                        <li>Invalid rows will be reported but won't stop the import</li>
                        <li>Existing constraints won't be modified</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
