@page
@model SchedulingSystem.Pages.Admin.Lessons.IndexModel
@{
    ViewData["Title"] = "Redirecting...";
}

<div class="container mt-5 text-center">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <p class="mt-3 text-muted">Redirecting to Lesson Dashboard...</p>
</div>

<script>
    // Fallback JavaScript redirect if server-side redirect doesn't work
    setTimeout(function() {
        window.location.href = '/Admin/Lessons/Dashboard';
    }, 100);
</script>
