@page
@model SchedulingSystem.Pages.Admin.Periods.DeleteModel
@{
    ViewData["Title"] = "Delete Period";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Period</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this period?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Period Number</dt>
                        <dd class="col-sm-8">@Model.Period.PeriodNumber</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Period.Name</dd>

                        <dt class="col-sm-4">Start Time</dt>
                        <dd class="col-sm-8">@Model.Period.StartTime.ToString(@"hh\:mm")</dd>

                        <dt class="col-sm-4">End Time</dt>
                        <dd class="col-sm-8">@Model.Period.EndTime.ToString(@"hh\:mm")</dd>

                        <dt class="col-sm-4">Duration</dt>
                        <dd class="col-sm-8">@Model.Period.DurationMinutes minutes</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">
                            @if (Model.Period.IsBreak)
                            {
                                <span class="badge bg-warning text-dark">Break</span>
                            }
                            else
                            {
                                <span class="badge bg-info">Lesson</span>
                            }
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Period.Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Period
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
