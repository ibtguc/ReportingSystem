@page
@model SchedulingSystem.Pages.Admin.Periods.CreateModel
@{
    ViewData["Title"] = "Create Period";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create New Period</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Period.PeriodNumber" class="form-label"></label>
                                <input asp-for="Period.PeriodNumber" class="form-control" type="number" min="1" />
                                <span asp-validation-for="Period.PeriodNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-8 mb-3">
                                <label asp-for="Period.Name" class="form-label"></label>
                                <input asp-for="Period.Name" class="form-control" placeholder="e.g., Period 1" />
                                <span asp-validation-for="Period.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Period.StartTime" class="form-label"></label>
                                <input asp-for="Period.StartTime" class="form-control" type="time" />
                                <span asp-validation-for="Period.StartTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Period.EndTime" class="form-label"></label>
                                <input asp-for="Period.EndTime" class="form-control" type="time" />
                                <span asp-validation-for="Period.EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Period.IsBreak" class="form-check-input" type="checkbox" />
                            <label asp-for="Period.IsBreak" class="form-check-label"></label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create Period
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
