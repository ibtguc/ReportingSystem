@page
@model SchedulingSystem.Pages.Admin.Classes.DeleteModel
@{
    ViewData["Title"] = "Delete Class";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Class</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Are you sure you want to delete this class?
                        @if (Model.Class.LessonClasses.Count > 0 || Model.Class.Students.Count > 0)
                        {
                            <br /><strong>This class has @Model.Class.LessonClasses.Count lesson(s) and @Model.Class.Students.Count student(s)!</strong>
                        }
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9"><strong>@Model.Class.Name</strong></dd>

                        <dt class="col-sm-3">Year Level</dt>
                        <dd class="col-sm-9">Year @Model.Class.YearLevel</dd>

                        <dt class="col-sm-3">Student Count</dt>
                        <dd class="col-sm-9">@Model.Class.StudentCount</dd>

                        <dt class="col-sm-3">Class Type</dt>
                        <dd class="col-sm-9">@Model.Class.ClassType</dd>

                        <dt class="col-sm-3">Parent Class</dt>
                        <dd class="col-sm-9">@(Model.Class.ParentClass?.Name ?? "None")</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.Class.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Class.Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Class
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
