@page
@model SchedulingSystem.Pages.Admin.Classes.EditModel
@{
    ViewData["Title"] = "Edit Class";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Class</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Class.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Class.Name" class="form-label"></label>
                                <input asp-for="Class.Name" class="form-control" />
                                <span asp-validation-for="Class.Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Class.YearLevel" class="form-label"></label>
                                <input asp-for="Class.YearLevel" class="form-control" type="number" min="1" max="13" />
                                <span asp-validation-for="Class.YearLevel" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Class.StudentCount" class="form-label"></label>
                                <input asp-for="Class.StudentCount" class="form-control" type="number" min="0" max="100" />
                                <span asp-validation-for="Class.StudentCount" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Class.ClassType" class="form-label"></label>
                                <select asp-for="Class.ClassType" class="form-select">
                                    <option value="">-- Select Type --</option>
                                    <option value="Standard">Standard</option>
                                    <option value="Honors">Honors</option>
                                    <option value="Advanced">Advanced</option>
                                    <option value="Elective">Elective</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Class.ParentClassId" class="form-label"></label>
                            <select asp-for="Class.ParentClassId" class="form-select" asp-items="Model.ParentClassList">
                                <option value="">-- No Parent Class --</option>
                            </select>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Class.IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="Class.IsActive" class="form-check-label"></label>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <div>
                                <a asp-page="ManageAvailability" asp-route-id="@Model.Class.Id" class="btn btn-outline-info me-2">
                                    <i class="bi bi-calendar-week"></i> Manage Availability
                                </a>
                                <a asp-page="Delete" asp-route-id="@Model.Class.Id" class="btn btn-outline-danger me-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
