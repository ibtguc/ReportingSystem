@page
@model SchedulingSystem.Pages.Admin.Classes.DetailsModel
@{
    ViewData["Title"] = "Class Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> Class Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9"><strong>@Model.Class.Name</strong></dd>

                        <dt class="col-sm-3">Year Level</dt>
                        <dd class="col-sm-9">Year @Model.Class.YearLevel</dd>

                        <dt class="col-sm-3">Student Count</dt>
                        <dd class="col-sm-9">@Model.Class.StudentCount</dd>

                        <dt class="col-sm-3">Class Type</dt>
                        <dd class="col-sm-9">@(Model.Class.ClassType ?? "Not specified")</dd>

                        <dt class="col-sm-3">Parent Class</dt>
                        <dd class="col-sm-9">@(Model.Class.ParentClass?.Name ?? "None")</dd>

                        <dt class="col-sm-3">Subclasses</dt>
                        <dd class="col-sm-9">@Model.Class.SubClasses.Count</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.Class.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <h5><i class="bi bi-people-fill"></i> Students (@Model.Class.Students.Count)</h5>
                    @if (Model.Class.Students.Count == 0)
                    {
                        <p class="text-muted">No students enrolled in this class.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Student Number</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Class.Students.OrderBy(s => s.FullName))
                                    {
                                        <tr>
                                            <td>@student.StudentNumber</td>
                                            <td>@student.DisplayName</td>
                                            <td>@student.Email</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <hr />

                    <h5><i class="bi bi-calendar2-week"></i> Lessons (@Model.Class.LessonClasses.Count)</h5>
                    @if (Model.Class.LessonClasses.Count == 0)
                    {
                        <p class="text-muted">No lessons assigned to this class.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Subject</th>
                                        <th>Teacher</th>
                                        <th>Frequency/Week</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lesson in Model.Class.LessonClasses.Select(lc => lc.Lesson))
                                    {
                                        <tr>
                                            <td>@lesson?.LessonSubjects.FirstOrDefault()?.Subject?.Name</td>
                                            <td>@lesson?.LessonTeachers.FirstOrDefault()?.Teacher?.FullName</td>
                                            <td>@lesson?.FrequencyPerWeek times</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <hr />

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Time Constraints</h5>
                        <a asp-page="ManageAvailability" asp-route-id="@Model.Class.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-gear"></i> Manage Constraints
                        </a>
                    </div>
                    <p class="text-muted small">Scheduling preferences: Negative = Avoid scheduling, Positive = Try to schedule</p>
                    @if (!Model.Availabilities.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No availability constraints. Class is available all periods by default.
                            <a asp-page="ManageAvailability" asp-route-id="@Model.Class.Id" class="alert-link">Add constraints if needed</a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Day</th>
                                        <th>Period</th>
                                        <th>Importance</th>
                                        <th>Reason</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var availability in Model.Availabilities)
                                    {
                                        var (badgeClass, label) = availability.Importance switch
                                        {
                                            3 => ("bg-success", "Try +3 (strongest)"),
                                            2 => ("bg-info", "Try +2 (medium)"),
                                            1 => ("bg-light text-dark", "Try +1 (weakest)"),
                                            0 => ("bg-secondary", "Neutral (0)"),
                                            -1 => ("bg-light text-dark border", "Avoid -1 (weakest)"),
                                            -2 => ("bg-warning text-dark", "Avoid -2 (medium)"),
                                            -3 => ("bg-danger", "Avoid -3 (strongest)"),
                                            _ => ("bg-secondary", "Unknown")
                                        };
                                        <tr>
                                            <td><strong>@availability.DayOfWeek</strong></td>
                                            <td>@availability.Period?.Name</td>
                                            <td>
                                                <span class="badge @badgeClass">@label</span>
                                            </td>
                                            <td>@(availability.Reason ?? "-")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.Class.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@Model.Class.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
