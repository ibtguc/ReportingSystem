@page
@model SchedulingSystem.Pages.Admin.Absences.ReportModel
@{
    ViewData["Title"] = "Report Teacher Absence";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-calendar-x"></i> Report Teacher Absence</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Absences">Absences</a></li>
                    <li class="breadcrumb-item active">Report</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> <strong>Please correct the errors below:</strong>
            <ul class="mb-0 mt-2">
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> Absence Details</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Teacher <span class="text-danger">*</span></label>
                                <select asp-for="Input.TeacherId" class="form-select" required>
                                    <option value="">-- Select Teacher --</option>
                                    @foreach (var teacher in Model.Teachers)
                                    {
                                        <option value="@teacher.Value">@teacher.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="Input.TeacherId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Date <span class="text-danger">*</span></label>
                                <input asp-for="Input.Date" type="date" class="form-control" required />
                                <span asp-validation-for="Input.Date" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Absence Type <span class="text-danger">*</span></label>
                                <select asp-for="Input.Type" class="form-select" required>
                                    @foreach (var type in Model.AbsenceTypes)
                                    {
                                        <option value="@type.Value">@type.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="Input.Type" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-check mt-4">
                                    <input asp-for="Input.IsAllDay" type="checkbox" class="form-check-input" id="isAllDayCheck" checked />
                                    <label class="form-check-label" for="isAllDayCheck">
                                        All Day Absence
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="row" id="timeRangeSection" style="display: none;">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Start Time</label>
                                <input asp-for="Input.StartTime" type="time" class="form-control" />
                                <span asp-validation-for="Input.StartTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">End Time</label>
                                <input asp-for="Input.EndTime" type="time" class="form-control" />
                                <span asp-validation-for="Input.EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Notes / Reason</label>
                            <textarea asp-for="Input.Notes" class="form-control" rows="3"
                                      placeholder="Enter any additional notes or details about the absence..."></textarea>
                            <span asp-validation-for="Input.Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Admin/Absences" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Report Absence & Find Substitutes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Teacher Schedule Card -->
            <div class="card shadow-sm mb-3" id="scheduleCard" style="display: none;">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="bi bi-calendar3"></i> <span id="teacherName"></span>'s Schedule</h6>
                    <small id="scheduleDate"></small>
                </div>
                <div class="card-body">
                    <div id="scheduleLoading" style="display: none;" class="text-center">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <span class="ms-2">Loading schedule...</span>
                    </div>
                    <div id="scheduleContent">
                        @if (Model.TeacherSchedule.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Period</th>
                                            <th>Time</th>
                                            <th>Class</th>
                                            <th>Subject</th>
                                            <th>Room</th>
                                        </tr>
                                    </thead>
                                    <tbody id="scheduleTableBody">
                                        @foreach (var lesson in Model.TeacherSchedule)
                                        {
                                            <tr class="affected-lesson">
                                                <td><strong>@lesson.PeriodNumber</strong></td>
                                                <td><small>@lesson.PeriodTime</small></td>
                                                <td>@lesson.ClassName</td>
                                                <td>@lesson.SubjectName</td>
                                                <td>@lesson.RoomNumber</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="alert alert-info mt-3 mb-0 small">
                                <i class="bi bi-info-circle"></i> These <strong>@Model.TeacherSchedule.Count lesson(s)</strong> will need substitutes.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success mb-0">
                                <i class="bi bi-check-circle"></i> No scheduled lessons for this day.
                            </div>
                        }

                        <!-- Supervision Duties -->
                        <div id="supervisionContent" class="mt-3">
                            @if (Model.TeacherSupervisionDuties.Any())
                            {
                                <div class="alert alert-warning mb-2 small py-2">
                                    <i class="bi bi-shield-exclamation"></i> <strong>Break Supervision Duties</strong>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>Period</th>
                                                <th>Location</th>
                                            </tr>
                                        </thead>
                                        <tbody id="supervisionTableBody">
                                            @foreach (var duty in Model.TeacherSupervisionDuties)
                                            {
                                                <tr class="affected-supervision">
                                                    <td><strong>@duty.PeriodNumber</strong></td>
                                                    <td>@duty.Location</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="alert alert-warning mt-2 mb-0 small">
                                    <i class="bi bi-info-circle"></i> <strong>@Model.TeacherSupervisionDuties.Count supervision duty(ies)</strong> will need coverage.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Instructions Card -->
            <div class="card shadow-sm bg-light">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> Instructions</h6>
                </div>
                <div class="card-body">
                    <h6>Reporting an Absence</h6>
                    <ol class="small">
                        <li>Select the absent teacher from the dropdown</li>
                        <li>Choose the date of absence</li>
                        <li>Select the absence type (Sick, Personal, etc.)</li>
                        <li>Check "All Day" for full day absence, or uncheck to specify time range</li>
                        <li>Add any relevant notes</li>
                        <li>Click "Report Absence" to continue</li>
                    </ol>

                    <div class="alert alert-warning small mt-3">
                        <strong><i class="bi bi-lightbulb"></i> Next Step:</strong><br/>
                        After reporting, you'll be directed to find and assign substitute teachers for affected lessons.
                    </div>

                    <h6 class="mt-3">Absence Types</h6>
                    <ul class="small">
                        <li><strong>Sick:</strong> Illness or medical appointment</li>
                        <li><strong>Personal:</strong> Personal day off</li>
                        <li><strong>Professional:</strong> Training, conference</li>
                        <li><strong>Meeting:</strong> School meeting</li>
                        <li><strong>Emergency:</strong> Family emergency</li>
                        <li><strong>Vacation:</strong> Planned leave</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle time range visibility
        document.getElementById('isAllDayCheck').addEventListener('change', function() {
            var timeSection = document.getElementById('timeRangeSection');
            if (this.checked) {
                timeSection.style.display = 'none';
            } else {
                timeSection.style.display = 'flex';
            }
        });

        // Set default date to today
        document.addEventListener('DOMContentLoaded', function() {
            var dateInput = document.querySelector('input[type="date"]');
            if (!dateInput.value) {
                var today = new Date().toISOString().split('T')[0];
                dateInput.value = today;
            }

            // Check if teacher and date are already selected (from server)
            var teacherSelect = document.getElementById('Input_TeacherId');
            var dateField = document.getElementById('Input_Date');
            if (teacherSelect.value && dateField.value) {
                showScheduleCard();
            }
        });

        // Load schedule when teacher or date changes
        function loadTeacherSchedule() {
            var teacherSelect = document.getElementById('Input_TeacherId');
            var dateInput = document.getElementById('Input_Date');

            if (!teacherSelect.value || !dateInput.value) {
                document.getElementById('scheduleCard').style.display = 'none';
                return;
            }

            var teacherId = teacherSelect.value;
            var date = dateInput.value;
            var teacherName = teacherSelect.options[teacherSelect.selectedIndex].text;

            // Show loading
            document.getElementById('scheduleLoading').style.display = 'block';
            document.getElementById('scheduleContent').style.display = 'none';
            document.getElementById('scheduleCard').style.display = 'block';

            // Update header
            document.getElementById('teacherName').textContent = teacherName;
            var dateObj = new Date(date);
            var dateStr = dateObj.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
            document.getElementById('scheduleDate').textContent = dateStr;

            // Fetch schedule via AJAX
            fetch('?handler=Schedule&teacherId=' + teacherId + '&date=' + encodeURIComponent(date))
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        updateScheduleTable(data.schedule, data.supervisionDuties);
                    }
                    document.getElementById('scheduleLoading').style.display = 'none';
                    document.getElementById('scheduleContent').style.display = 'block';
                })
                .catch(error => {
                    console.error('Error loading schedule:', error);
                    document.getElementById('scheduleLoading').style.display = 'none';
                    document.getElementById('scheduleContent').innerHTML = '<div class="alert alert-danger">Error loading schedule</div>';
                    document.getElementById('scheduleContent').style.display = 'block';
                });
        }

        function updateScheduleTable(schedule, supervisionDuties) {
            var contentDiv = document.getElementById('scheduleContent');

            // Build lessons HTML
            var lessonsHtml = '';
            if (schedule.length === 0) {
                lessonsHtml = '<div class="alert alert-success mb-0"><i class="bi bi-check-circle"></i> No scheduled lessons for this day.</div>';
            } else {
                lessonsHtml = `
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Period</th>
                                    <th>Time</th>
                                    <th>Class</th>
                                    <th>Subject</th>
                                    <th>Room</th>
                                </tr>
                            </thead>
                            <tbody>`;

                schedule.forEach(function(lesson) {
                    lessonsHtml += `
                        <tr class="affected-lesson">
                            <td><strong>${lesson.periodNumber}</strong></td>
                            <td><small>${lesson.periodTime}</small></td>
                            <td>${lesson.className}</td>
                            <td>${lesson.subjectName}</td>
                            <td>${lesson.roomNumber}</td>
                        </tr>`;
                });

                lessonsHtml += `
                            </tbody>
                        </table>
                    </div>
                    <div class="alert alert-info mt-3 mb-0 small">
                        <i class="bi bi-info-circle"></i> These <strong>${schedule.length} lesson(s)</strong> will need substitutes.
                    </div>`;
            }

            // Build supervision duties HTML
            var supervisionHtml = '<div id="supervisionContent" class="mt-3">';
            if (supervisionDuties && supervisionDuties.length > 0) {
                supervisionHtml += `
                    <div class="alert alert-warning mb-2 small py-2">
                        <i class="bi bi-shield-exclamation"></i> <strong>Break Supervision Duties</strong>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Period</th>
                                    <th>Location</th>
                                </tr>
                            </thead>
                            <tbody>`;

                supervisionDuties.forEach(function(duty) {
                    supervisionHtml += `
                        <tr class="affected-supervision">
                            <td><strong>${duty.periodNumber}</strong></td>
                            <td>${duty.location}</td>
                        </tr>`;
                });

                supervisionHtml += `
                            </tbody>
                        </table>
                    </div>
                    <div class="alert alert-warning mt-2 mb-0 small">
                        <i class="bi bi-info-circle"></i> <strong>${supervisionDuties.length} supervision duty(ies)</strong> will need coverage.
                    </div>`;
            }
            supervisionHtml += '</div>';

            // Set the combined content
            contentDiv.innerHTML = lessonsHtml + supervisionHtml;
        }

        function showScheduleCard() {
            document.getElementById('scheduleCard').style.display = 'block';
        }

        // Add event listeners
        document.getElementById('Input_TeacherId').addEventListener('change', loadTeacherSchedule);
        document.getElementById('Input_Date').addEventListener('change', loadTeacherSchedule);
    </script>

    <style>
        .affected-lesson {
            background-color: #fff3cd;
        }
        .affected-lesson:hover {
            background-color: #ffe69c;
        }
        .affected-supervision {
            background-color: #ffe8cc;
        }
        .affected-supervision:hover {
            background-color: #ffd699;
        }
    </style>
}
