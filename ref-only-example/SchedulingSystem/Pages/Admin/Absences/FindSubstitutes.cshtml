@page
@model SchedulingSystem.Pages.Admin.Absences.FindSubstitutesModel
@{
    ViewData["Title"] = "Find Substitutes";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-person-plus"></i> Find & Assign Substitutes</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="/Admin/Absences">Absences</a></li>
                            <li class="breadcrumb-item active">Find Substitutes</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <form method="post" asp-page-handler="AutoAssignAll" style="display: inline;">
                        <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                        <button type="submit" class="btn btn-success btn-lg" title="Auto-assign best matches to all uncovered lessons"
                                onclick="return confirm('Auto-assign the best matching substitutes to all uncovered lessons?');">
                            <i class="bi bi-magic"></i> Auto-Assign All
                        </button>
                    </form>
                    <a href="/Admin/Absences" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Absence Details -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Absence Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>Teacher:</strong><br/>
                            <span class="h5">@Model.Absence.Teacher?.Name</span>
                        </div>
                        <div class="col-md-3">
                            <strong>Date:</strong><br/>
                            <span class="h5">@Model.Absence.Date.ToString("ddd, MMM dd, yyyy")</span>
                        </div>
                        <div class="col-md-3">
                            <strong>Time:</strong><br/>
                            @if (Model.Absence.StartTime.HasValue && Model.Absence.EndTime.HasValue)
                            {
                                <span class="h5">@Model.Absence.StartTime?.ToString(@"hh\:mm") - @Model.Absence.EndTime?.ToString(@"hh\:mm")</span>
                            }
                            else
                            {
                                <span class="h5">All Day</span>
                            }
                        </div>
                        <div class="col-md-3">
                            <strong>Type:</strong><br/>
                            <span class="badge bg-secondary" style="font-size: 1rem;">@Model.Absence.Type</span>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Absence.Notes))
                    {
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <strong>Notes:</strong><br/>
                                <p class="mb-0">@Model.Absence.Notes</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Affected Lessons -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-book"></i> Affected Lessons
                            <span class="badge bg-light text-dark ms-2">@Model.AffectedLessons.Count</span>
                        </h5>
                        <div class="d-flex align-items-center">
                            <label class="text-white me-2 mb-0 small">Sort by:</label>
                            <select class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()" name="sortBy" form="sortForm">
                                <option value="score" selected="@(Model.SortBy == "score")">Best Match (Score)</option>
                                <option value="reserve" selected="@(Model.SortBy == "reserve")">Reserve Teachers First</option>
                                <option value="workload" selected="@(Model.SortBy == "workload")">Lowest Workload</option>
                                <option value="qualified" selected="@(Model.SortBy == "qualified")">Qualified First</option>
                                <option value="name" selected="@(Model.SortBy == "name")">Name</option>
                            </select>
                            <form id="sortForm" method="get" asp-page="/Admin/Absences/FindSubstitutes" class="d-none">
                                <input type="hidden" name="id" value="@Model.Absence.Id" />
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.AffectedLessons.Any())
                    {
                        @foreach (var lesson in Model.AffectedLessons)
                        {
                            <div class="border-bottom p-3 @(lesson.IsAssigned ? "bg-light" : "")">
                                <div class="row align-items-center">
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center">
                                            @if (lesson.IsAssigned)
                                            {
                                                <i class="bi bi-check-circle-fill text-success me-2" style="font-size: 1.5rem;"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-exclamation-circle text-warning me-2" style="font-size: 1.5rem;"></i>
                                            }
                                            <div>
                                                <strong>@lesson.Subject</strong> - @lesson.Class<br/>
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar"></i> @lesson.DayOfWeek &nbsp;
                                                    <i class="bi bi-clock-history"></i> Period @lesson.PeriodId &nbsp;
                                                    <i class="bi bi-clock"></i> @lesson.PeriodTime &nbsp;
                                                    <i class="bi bi-door-open"></i> @lesson.Room
                                                </small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-8">
                                        @if (lesson.IsAssigned)
                                        {
                                            <div class="alert alert-success mb-0 d-flex justify-content-between align-items-center">
                                                <div>
                                                    <i class="bi bi-person-check"></i>
                                                    <strong>Assigned:</strong> @lesson.AssignedSubstitute
                                                </div>
                                                @if (lesson.SubstitutionId.HasValue)
                                                {
                                                    <form method="post" asp-page-handler="DeleteSubstitution" style="display: inline;">
                                                        <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                        <input type="hidden" name="substitutionId" value="@lesson.SubstitutionId.Value" />
                                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this substitution assignment? The lesson will become unassigned.');" title="Delete this substitution">
                                                            <i class="bi bi-trash"></i> Undo
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        }
                                        else if (lesson.AvailableSubstitutes.Any())
                                        {
                                            <div class="row g-2">
                                                @foreach (var substitute in lesson.AvailableSubstitutes)
                                                {
                                                    <div class="col-md-6 col-lg-4">
                                                        <div class="card border @(substitute.IsOnSubstitutionReserve ? "border-warning border-3 bg-warning bg-opacity-10" : (substitute.IsQualified ? "border-success" : "border-secondary")) h-100">
                                                            <div class="card-body p-2">
                                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                                    <div class="flex-grow-1">
                                                                        <strong class="small">@substitute.Name</strong>
                                                                        @if (substitute.MatchScore > 0)
                                                                        {
                                                                            <span class="badge bg-primary ms-1" style="font-size: 0.7rem;" title="Match Score">@substitute.MatchScore pts</span>
                                                                        }
                                                                        <br/>
                                                                        @if (substitute.IsOnSubstitutionReserve)
                                                                        {
                                                                            <span class="badge bg-warning text-dark" style="font-size: 0.7rem;"><i class="bi bi-star-fill"></i> ON RESERVE</span>
                                                                        }
                                                                        @if (substitute.IsQualified)
                                                                        {
                                                                            <span class="badge bg-success" style="font-size: 0.7rem;">Qualified</span>
                                                                        }
                                                                        @if (substitute.IsSameDepartment && !string.IsNullOrEmpty(substitute.DepartmentName))
                                                                        {
                                                                            <span class="badge bg-info" style="font-size: 0.7rem;" title="Same Department">@substitute.DepartmentName</span>
                                                                        }
                                                                        <span class="badge bg-secondary" style="font-size: 0.7rem;">@substitute.SubstitutionsThisWeek/week</span>
                                                                    </div>
                                                                    <div class="d-flex flex-column gap-1">
                                                                        <form method="post" asp-page-handler="Assign" style="display: inline;">
                                                                            <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                                            <input type="hidden" name="scheduledLessonId" value="@lesson.ScheduledLessonId" />
                                                                            <input type="hidden" name="substituteTeacherId" value="@substitute.TeacherId" />
                                                                            <input type="hidden" name="assignmentType" value="teacher" />
                                                                            <button type="submit" class="btn btn-sm btn-primary" title="Assign">
                                                                                <i class="bi bi-check"></i>
                                                                            </button>
                                                                        </form>
                                                                        @if (Model.PublishedTimetableId.HasValue)
                                                                        {
                                                                            <a href="/Admin/Timetables/Edit?id=@Model.PublishedTimetableId&teacherId=@substitute.TeacherId"
                                                                               class="btn btn-sm btn-outline-secondary"
                                                                               title="View Schedule"
                                                                               target="_blank">
                                                                                <i class="bi bi-calendar3"></i>
                                                                            </a>
                                                                        }
                                                                    </div>
                                                                </div>

                                                                <!-- Additional Details -->
                                                                <div class="small mb-2" style="font-size: 0.7rem;">
                                                                    @if (!string.IsNullOrEmpty(substitute.Email))
                                                                    {
                                                                        <div class="text-muted">
                                                                            <i class="bi bi-envelope"></i> @substitute.Email
                                                                        </div>
                                                                    }
                                                                    @if (!substitute.IsSameDepartment && !string.IsNullOrEmpty(substitute.DepartmentName))
                                                                    {
                                                                        <div class="text-muted">
                                                                            <i class="bi bi-building"></i> @substitute.DepartmentName
                                                                        </div>
                                                                    }
                                                                    <div class="text-muted">
                                                                        <i class="bi bi-calendar-week"></i> @substitute.SubstitutionsThisWeek substitution(s) this week
                                                                    </div>
                                                                    @if (substitute.AvailabilityImportance.HasValue)
                                                                    {
                                                                        var importance = substitute.AvailabilityImportance.Value;
                                                                        var (icon, text, cssClass) = importance switch
                                                                        {
                                                                            -3 => ("bi-x-circle-fill", "Strong Avoid", "text-danger"),
                                                                            -2 => ("bi-x-circle", "Avoid", "text-danger"),
                                                                            -1 => ("bi-dash-circle", "Prefer Not", "text-warning"),
                                                                            0 => ("bi-circle", "Neutral", "text-muted"),
                                                                            1 => ("bi-check-circle", "Prefer", "text-success"),
                                                                            2 => ("bi-check-circle-fill", "Strong Prefer", "text-success"),
                                                                            3 => ("bi-star-fill", "Required", "text-primary"),
                                                                            _ => ("bi-circle", "Unknown", "text-muted")
                                                                        };
                                                                        <div class="@cssClass">
                                                                            <i class="bi @icon"></i> Time Preference: @text
                                                                            @if (!string.IsNullOrEmpty(substitute.AvailabilityReason))
                                                                            {
                                                                                <span class="text-muted">- @substitute.AvailabilityReason</span>
                                                                            }
                                                                        </div>
                                                                    }
                                                                </div>

                                                                @if (substitute.MatchReasons != null && substitute.MatchReasons.Any())
                                                                {
                                                                    <div class="small text-muted" style="font-size: 0.65rem;">
                                                                        <strong class="text-dark">Match Details:</strong>
                                                                        @foreach (var reason in substitute.MatchReasons)
                                                                        {
                                                                            <div><i class="bi bi-check-circle-fill text-success"></i> @reason</div>
                                                                        }
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>

                                            <div class="mt-2">
                                                <strong class="small text-muted">Alternative Options:</strong>
                                                <div class="btn-group btn-group-sm mt-1" role="group">
                                                    <form method="post" asp-page-handler="Assign" style="display: inline;">
                                                        <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                        <input type="hidden" name="scheduledLessonId" value="@lesson.ScheduledLessonId" />
                                                        <input type="hidden" name="assignmentType" value="selfstudy" />
                                                        <button type="submit" class="btn btn-outline-secondary" onclick="return confirm('Assign this as Self-Study?')">
                                                            <i class="bi bi-book"></i> Self-Study
                                                        </button>
                                                    </form>
                                                    <form method="post" asp-page-handler="Assign" style="display: inline;">
                                                        <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                        <input type="hidden" name="scheduledLessonId" value="@lesson.ScheduledLessonId" />
                                                        <input type="hidden" name="assignmentType" value="cancelled" />
                                                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Cancel this lesson?')">
                                                            <i class="bi bi-x-circle"></i> Cancel Lesson
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-warning mb-0">
                                                <i class="bi bi-exclamation-triangle"></i>
                                                <strong>No available substitutes found</strong> for this time slot.
                                                <div class="mt-2">
                                                    <form method="post" asp-page-handler="Assign" style="display: inline;">
                                                        <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                        <input type="hidden" name="scheduledLessonId" value="@lesson.ScheduledLessonId" />
                                                        <input type="hidden" name="assignmentType" value="selfstudy" />
                                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                                            <i class="bi bi-book"></i> Assign Self-Study
                                                        </button>
                                                    </form>
                                                    <form method="post" asp-page-handler="Assign" style="display: inline;">
                                                        <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                        <input type="hidden" name="scheduledLessonId" value="@lesson.ScheduledLessonId" />
                                                        <input type="hidden" name="assignmentType" value="cancelled" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-x-circle"></i> Cancel Lesson
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-info-circle" style="font-size: 3rem; color: #ccc;"></i>
                            <p class="text-muted mt-3">No affected lessons found for this absence.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Affected Break Supervision Duties -->
    @if (Model.AffectedSupervisionDuties.Any())
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-shield-exclamation"></i> Affected Break Supervision Duties
                            <span class="badge bg-dark ms-2">@Model.AffectedSupervisionDuties.Count</span>
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var duty in Model.AffectedSupervisionDuties)
                        {
                            <div class="border-bottom p-3 @(duty.IsAssigned ? "bg-light" : "")">
                                <div class="row align-items-center">
                                    <div class="col-md-3">
                                        <div class="d-flex align-items-center">
                                            @if (duty.IsAssigned)
                                            {
                                                <i class="bi bi-check-circle-fill text-success me-2" style="font-size: 1.5rem;"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-exclamation-circle text-warning me-2" style="font-size: 1.5rem;"></i>
                                            }
                                            <div>
                                                <strong>@duty.Location</strong><br/>
                                                <small class="text-muted">
                                                    <i class="bi bi-cup-hot"></i> @Model.GetBreakLabel(duty.PeriodNumber)
                                                </small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-9">
                                        @if (duty.IsAssigned)
                                        {
                                            <div class="alert alert-success mb-0 d-flex justify-content-between align-items-center">
                                                <div>
                                                    <i class="bi bi-person-check"></i>
                                                    <strong>Coverage Assigned:</strong> @duty.AssignedSubstituteName
                                                </div>
                                                @if (duty.SubstitutionId.HasValue)
                                                {
                                                    <form method="post" asp-page-handler="DeleteSupervisionSubstitution" style="display: inline;">
                                                        <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                        <input type="hidden" name="substitutionId" value="@duty.SubstitutionId.Value" />
                                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this supervision assignment?');" title="Delete this substitution">
                                                            <i class="bi bi-trash"></i> Undo
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        }
                                        else if (duty.AvailableSubstitutes.Any())
                                        {
                                            <div class="row g-2">
                                                @foreach (var substitute in duty.AvailableSubstitutes.Take(6))
                                                {
                                                    <div class="col-md-4 col-lg-3">
                                                        <div class="card border @(substitute.IsFreeThisPeriod ? "border-success" : "border-secondary") h-100">
                                                            <div class="card-body p-2">
                                                                <div class="d-flex justify-content-between align-items-start">
                                                                    <div class="flex-grow-1">
                                                                        <strong class="small">@substitute.Name</strong>
                                                                        @if (substitute.MatchScore > 0)
                                                                        {
                                                                            <span class="badge bg-primary ms-1" style="font-size: 0.7rem;" title="Match Score">@substitute.MatchScore pts</span>
                                                                        }
                                                                        <br/>
                                                                        @if (substitute.IsFreeThisPeriod)
                                                                        {
                                                                            <span class="badge bg-success" style="font-size: 0.7rem;"><i class="bi bi-check-circle"></i> Free</span>
                                                                        }
                                                                        else if (substitute.HasSupervisionDutyThisPeriod)
                                                                        {
                                                                            <span class="badge bg-warning text-dark" style="font-size: 0.7rem;"><i class="bi bi-shield-fill"></i> Supervising</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="badge bg-secondary" style="font-size: 0.7rem;"><i class="bi bi-book"></i> Teaching</span>
                                                                        }
                                                                        <span class="badge bg-secondary" style="font-size: 0.7rem;">@substitute.SupervisionsThisWeek sup/week</span>
                                                                    </div>
                                                                    <div class="d-flex flex-column gap-1">
                                                                        <form method="post" asp-page-handler="AssignSupervision" style="display: inline;">
                                                                            <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                                            <input type="hidden" name="dutyId" value="@duty.DutyId" />
                                                                            <input type="hidden" name="substituteTeacherId" value="@substitute.TeacherId" />
                                                                            <input type="hidden" name="assignmentType" value="teacher" />
                                                                            <button type="submit" class="btn btn-sm btn-primary" title="Assign">
                                                                                <i class="bi bi-check"></i>
                                                                            </button>
                                                                        </form>
                                                                    </div>
                                                                </div>

                                                                @if (!string.IsNullOrEmpty(substitute.DepartmentName))
                                                                {
                                                                    <div class="small text-muted" style="font-size: 0.7rem;">
                                                                        <i class="bi bi-building"></i> @substitute.DepartmentName
                                                                    </div>
                                                                }

                                                                @if (substitute.MatchReasons.Any())
                                                                {
                                                                    <div class="small text-muted mt-1" style="font-size: 0.65rem;">
                                                                        @foreach (var reason in substitute.MatchReasons)
                                                                        {
                                                                            <div><i class="bi bi-check-circle-fill text-success"></i> @reason</div>
                                                                        }
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>

                                            @if (duty.AvailableSubstitutes.Count > 6)
                                            {
                                                <div class="mt-2">
                                                    <small class="text-muted">
                                                        <i class="bi bi-info-circle"></i>
                                                        Showing top 6 of @duty.AvailableSubstitutes.Count candidates.
                                                    </small>
                                                </div>
                                            }

                                            <div class="mt-2">
                                                <strong class="small text-muted">Alternative Options:</strong>
                                                <div class="btn-group btn-group-sm mt-1" role="group">
                                                    <form method="post" asp-page-handler="AssignSupervision" style="display: inline;">
                                                        <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                        <input type="hidden" name="dutyId" value="@duty.DutyId" />
                                                        <input type="hidden" name="assignmentType" value="combined" />
                                                        <button type="submit" class="btn btn-outline-secondary" onclick="return confirm('Mark this area as covered by nearby supervisor?')">
                                                            <i class="bi bi-arrow-left-right"></i> Combined Area
                                                        </button>
                                                    </form>
                                                    <form method="post" asp-page-handler="AssignSupervision" style="display: inline;">
                                                        <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                        <input type="hidden" name="dutyId" value="@duty.DutyId" />
                                                        <input type="hidden" name="assignmentType" value="cancelled" />
                                                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Cancel this supervision duty?')">
                                                            <i class="bi bi-x-circle"></i> Cancel
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-warning mb-0">
                                                <i class="bi bi-exclamation-triangle"></i>
                                                <strong>No available teachers found</strong> for this supervision slot.
                                                <div class="mt-2">
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <form method="post" asp-page-handler="AssignSupervision" style="display: inline;">
                                                            <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                            <input type="hidden" name="dutyId" value="@duty.DutyId" />
                                                            <input type="hidden" name="assignmentType" value="combined" />
                                                            <button type="submit" class="btn btn-outline-secondary">
                                                                <i class="bi bi-arrow-left-right"></i> Combined Area
                                                            </button>
                                                        </form>
                                                        <form method="post" asp-page-handler="AssignSupervision" style="display: inline;">
                                                            <input type="hidden" name="absenceId" value="@Model.Absence.Id" />
                                                            <input type="hidden" name="dutyId" value="@duty.DutyId" />
                                                            <input type="hidden" name="assignmentType" value="cancelled" />
                                                            <button type="submit" class="btn btn-outline-danger">
                                                                <i class="bi bi-x-circle"></i> Cancel
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-light">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i>
                            Supervision substitutions are temporary and apply only to this absence date (@Model.Absence.Date.ToString("MMM dd, yyyy")).
                            The permanent schedule in <a href="/Admin/BreakSupervision">Break Supervision Management</a> remains unchanged.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }

