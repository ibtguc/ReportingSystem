@page
@model SchedulingSystem.Pages.Admin.SchoolYears.DetailsModel
@{
    ViewData["Title"] = "School Year Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> School Year Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9"><strong>@Model.SchoolYear.Name</strong></dd>

                        <dt class="col-sm-3">Start Date</dt>
                        <dd class="col-sm-9">@Model.SchoolYear.StartDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3">End Date</dt>
                        <dd class="col-sm-9">@Model.SchoolYear.EndDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3">Duration</dt>
                        <dd class="col-sm-9">@((Model.SchoolYear.EndDate - Model.SchoolYear.StartDate).Days) days</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.SchoolYear.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <h5><i class="bi bi-calendar3"></i> Terms</h5>
                    @if (Model.SchoolYear.Terms.Count == 0)
                    {
                        <p class="text-muted">No terms defined for this school year.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Term Name</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var term in Model.SchoolYear.Terms.OrderBy(t => t.StartDate))
                                    {
                                        <tr>
                                            <td>@term.Name</td>
                                            <td>@term.StartDate.ToString("MMM dd, yyyy")</td>
                                            <td>@term.EndDate.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.SchoolYear.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@Model.SchoolYear.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
