@page
@model SchedulingSystem.Pages.Admin.SchoolYears.IndexModel
@{
    ViewData["Title"] = "School Years";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-calendar-event"></i> School Years</h2>
            <p class="text-muted">Manage academic years and terms</p>
        </div>
        <div class="col text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New School Year
            </a>
        </div>
    </div>

    @if (Model.SchoolYears.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No school years found. Click "Add New School Year" to create one.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Terms</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var year in Model.SchoolYears)
                            {
                                <tr>
                                    <td>
                                        <strong>@year.Name</strong>
                                    </td>
                                    <td>@year.StartDate.ToString("MMM dd, yyyy")</td>
                                    <td>@year.EndDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (year.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@year.Terms.Count</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="Edit" asp-route-id="@year.Id" class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Details" asp-route-id="@year.Id" class="btn btn-outline-info" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@year.Id" class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
