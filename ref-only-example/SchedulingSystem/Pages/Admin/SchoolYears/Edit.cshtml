@page
@model SchedulingSystem.Pages.Admin.SchoolYears.EditModel
@{
    ViewData["Title"] = "Edit School Year";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit School Year</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="SchoolYear.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="SchoolYear.Name" class="form-label"></label>
                            <input asp-for="SchoolYear.Name" class="form-control" />
                            <span asp-validation-for="SchoolYear.Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SchoolYear.StartDate" class="form-label"></label>
                                <input asp-for="SchoolYear.StartDate" class="form-control" type="date" />
                                <span asp-validation-for="SchoolYear.StartDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="SchoolYear.EndDate" class="form-label"></label>
                                <input asp-for="SchoolYear.EndDate" class="form-control" type="date" />
                                <span asp-validation-for="SchoolYear.EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="SchoolYear.IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="SchoolYear.IsActive" class="form-check-label"></label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
