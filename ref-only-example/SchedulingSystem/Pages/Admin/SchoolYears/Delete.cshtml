@page
@model SchedulingSystem.Pages.Admin.SchoolYears.DeleteModel
@{
    ViewData["Title"] = "Delete School Year";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete School Year</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Are you sure you want to delete this school year?
                        This action cannot be undone and will also delete all associated terms.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.SchoolYear.Name</dd>

                        <dt class="col-sm-3">Start Date</dt>
                        <dd class="col-sm-9">@Model.SchoolYear.StartDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3">End Date</dt>
                        <dd class="col-sm-9">@Model.SchoolYear.EndDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.SchoolYear.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Terms</dt>
                        <dd class="col-sm-9">@Model.SchoolYear.Terms.Count term(s)</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="SchoolYear.Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete School Year
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
