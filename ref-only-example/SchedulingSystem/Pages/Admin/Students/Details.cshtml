@page
@model SchedulingSystem.Pages.Admin.Students.DetailsModel
@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-eye"></i> Student Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Student Number</dt>
                        <dd class="col-sm-8"><strong>@Model.Student.StudentNumber</strong></dd>

                        <dt class="col-sm-4">Short Name</dt>
                        <dd class="col-sm-8">@Model.Student.Name</dd>

                        <dt class="col-sm-4">Display Name</dt>
                        <dd class="col-sm-8"><strong>@Model.Student.DisplayName</strong></dd>

                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Model.Student.FirstName</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Model.Student.FullName</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Student.GenderDisplay</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">
                            <a href="mailto:@Model.Student.Email">@Model.Student.Email</a>
                        </dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@(Model.Student.DateOfBirth?.ToString("dd/MM/yyyy") ?? "N/A")</dd>

                        <dt class="col-sm-4">Class</dt>
                        <dd class="col-sm-8">
                            @if (Model.Student.Class != null)
                            {
                                <span class="badge bg-primary">@Model.Student.Class.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">No class assigned</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.Student.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>

                    <div class="alert alert-info mt-3">
                        <i class="bi bi-info-circle"></i>
                        Students are managed through data import. To update student data, use the Import Data page.
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        @* Removed Edit and Delete buttons - Students are managed through data import *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
