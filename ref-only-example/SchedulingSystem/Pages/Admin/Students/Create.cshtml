@*
@page
@model SchedulingSystem.Pages.Admin.Students.CreateModel
@{
    ViewData["Title"] = "Create Student";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create New Student</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Student.StudentNumber" class="form-label"></label>
                                <input asp-for="Student.StudentNumber" class="form-control" placeholder="e.g., 2024001" />
                                <span asp-validation-for="Student.StudentNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Student.DateOfBirth" class="form-label"></label>
                                <input asp-for="Student.DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="Student.DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Student.FirstName" class="form-label"></label>
                                <input asp-for="Student.FirstName" class="form-control" />
                                <span asp-validation-for="Student.FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Student.FullName" class="form-label"></label>
                                <input asp-for="Student.FullName" class="form-control" />
                                <span asp-validation-for="Student.FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Student.Email" class="form-label"></label>
                            <input asp-for="Student.Email" class="form-control" type="email" />
                            <span asp-validation-for="Student.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Student.ClassId" class="form-label"></label>
                            <select asp-for="Student.ClassId" class="form-select" asp-items="Model.ClassList">
                                <option value="">-- Select Class --</option>
                            </select>
                            <span asp-validation-for="Student.ClassId" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Student.IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="Student.IsActive" class="form-check-label"></label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create Student
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
*@
