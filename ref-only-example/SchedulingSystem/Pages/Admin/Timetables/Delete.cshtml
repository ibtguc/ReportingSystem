@page "{id:int}"
@model SchedulingSystem.Pages.Admin.Timetables.DeleteModel
@{
    ViewData["Title"] = "Delete Timetable";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Delete Timetable
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-octagon"></i> Warning: This action cannot be undone!
                        </h5>
                        <p class="mb-0">
                            Are you sure you want to delete this timetable? All scheduled lessons will be permanently removed.
                        </p>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-4">Timetable Name:</dt>
                        <dd class="col-sm-8"><strong>@Model.Timetable.Name</strong></dd>

                        <dt class="col-sm-4">School Year:</dt>
                        <dd class="col-sm-8">@Model.Timetable.SchoolYear?.Name</dd>

                        <dt class="col-sm-4">Created:</dt>
                        <dd class="col-sm-8">@Model.Timetable.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Timetable.Status == SchedulingSystem.Models.TimetableStatus.Published)
                            {
                                <span class="badge bg-success">Published</span>
                            }
                            else if (Model.Timetable.Status == SchedulingSystem.Models.TimetableStatus.Draft)
                            {
                                <span class="badge bg-warning">Draft</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Archived</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Scheduled Lessons:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-danger">@Model.ScheduledLessonsCount lessons will be deleted</span>
                        </dd>

                        @if (Model.Timetable.GenerationDurationMs.HasValue)
                        {
                            <dt class="col-sm-4">Generation Duration:</dt>
                            <dd class="col-sm-8">
                                @{
                                    var duration = Model.Timetable.GenerationDurationMs.Value;
                                    if (duration < 1000)
                                    {
                                        <span>@(duration)ms</span>
                                    }
                                    else if (duration < 60000)
                                    {
                                        <span>@((duration / 1000.0).ToString("F2"))s</span>
                                    }
                                    else
                                    {
                                        var minutes = duration / 60000;
                                        var seconds = (duration % 60000) / 1000.0;
                                        <span>@(minutes)m @(seconds.ToString("F0"))s</span>
                                    }
                                }
                            </dd>
                        }
                    </dl>

                    <form method="post" class="mt-4">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Admin/Timetables/Generate" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Yes, Delete Timetable
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
