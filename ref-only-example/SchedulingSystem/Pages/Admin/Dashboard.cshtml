@page
@model SchedulingSystem.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
            <p class="text-muted">Welcome to the Scheduling System</p>
        </div>
    </div>

    <!-- Timetables Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar3"></i> Timetables</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Timetables/Index" class="btn btn-outline-primary btn-lg w-100 py-3">
                                <i class="bi bi-list-ul d-block mb-2" style="font-size: 2rem;"></i>
                                All Timetables
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Timetables/Generate" class="btn btn-outline-success btn-lg w-100 py-3">
                                <i class="bi bi-plus-circle d-block mb-2" style="font-size: 2rem;"></i>
                                Create New Timetable
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Timetables/Compare" class="btn btn-outline-info btn-lg w-100 py-3">
                                <i class="bi bi-columns-gap d-block mb-2" style="font-size: 2rem;"></i>
                                Compare Timetables
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Master Data Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-database"></i> Master Data</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 mb-3">
                            <a asp-page="/Admin/Departments/Index" class="btn btn-outline-secondary btn-lg w-100 py-3">
                                <i class="bi bi-building d-block mb-2" style="font-size: 2rem;"></i>
                                Departments
                            </a>
                        </div>
                        <div class="col-md-2 mb-3">
                            <a asp-page="/Admin/Teachers/Index" class="btn btn-outline-secondary btn-lg w-100 py-3">
                                <i class="bi bi-person-badge d-block mb-2" style="font-size: 2rem;"></i>
                                Teachers
                            </a>
                        </div>
                        <div class="col-md-2 mb-3">
                            <a asp-page="/Admin/Classes/Index" class="btn btn-outline-secondary btn-lg w-100 py-3">
                                <i class="bi bi-people d-block mb-2" style="font-size: 2rem;"></i>
                                Classes
                            </a>
                        </div>
                        <div class="col-md-2 mb-3">
                            <a asp-page="/Admin/Subjects/Index" class="btn btn-outline-secondary btn-lg w-100 py-3">
                                <i class="bi bi-book d-block mb-2" style="font-size: 2rem;"></i>
                                Subjects
                            </a>
                        </div>
                        <div class="col-md-2 mb-3">
                            <a asp-page="/Admin/Rooms/Index" class="btn btn-outline-secondary btn-lg w-100 py-3">
                                <i class="bi bi-door-open d-block mb-2" style="font-size: 2rem;"></i>
                                Rooms
                            </a>
                        </div>
                        <div class="col-md-2 mb-3">
                            <a asp-page="/Admin/Lessons/Dashboard" class="btn btn-outline-secondary btn-lg w-100 py-3">
                                <i class="bi bi-journal-text d-block mb-2" style="font-size: 2rem;"></i>
                                Lessons
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Schedule Data Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-clock"></i> Schedule Data</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/SchoolYears/Index" class="btn btn-outline-info btn-lg w-100 py-3">
                                <i class="bi bi-calendar-event d-block mb-2" style="font-size: 2rem;"></i>
                                School Years
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Periods/Index" class="btn btn-outline-info btn-lg w-100 py-3">
                                <i class="bi bi-clock d-block mb-2" style="font-size: 2rem;"></i>
                                Periods
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Students/Index" class="btn btn-outline-info btn-lg w-100 py-3">
                                <i class="bi bi-mortarboard d-block mb-2" style="font-size: 2rem;"></i>
                                Students
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/BreakSupervision/Index" class="btn btn-outline-info btn-lg w-100 py-3">
                                <i class="bi bi-eye d-block mb-2" style="font-size: 2rem;"></i>
                                Break Supervision
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Substitutions Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-person-plus"></i> Substitutions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Substitutions/Daily" class="btn btn-outline-warning btn-lg w-100 py-3">
                                <i class="bi bi-calendar-check d-block mb-2" style="font-size: 2rem;"></i>
                                Daily Board
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Absences/Report" class="btn btn-outline-warning btn-lg w-100 py-3">
                                <i class="bi bi-plus-circle d-block mb-2" style="font-size: 2rem;"></i>
                                Report Absence
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Absences/Index" class="btn btn-outline-warning btn-lg w-100 py-3">
                                <i class="bi bi-list-ul d-block mb-2" style="font-size: 2rem;"></i>
                                View All Absences
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Substitutions/Reports" class="btn btn-outline-warning btn-lg w-100 py-3">
                                <i class="bi bi-bar-chart d-block mb-2" style="font-size: 2rem;"></i>
                                Reports & Analytics
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> System</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Constraints/Index" class="btn btn-outline-dark btn-lg w-100 py-3">
                                <i class="bi bi-shield-check d-block mb-2" style="font-size: 2rem;"></i>
                                Constraints
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Import/Untis" class="btn btn-outline-dark btn-lg w-100 py-3">
                                <i class="bi bi-upload d-block mb-2" style="font-size: 2rem;"></i>
                                Import Data
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Backup/Index" class="btn btn-outline-dark btn-lg w-100 py-3">
                                <i class="bi bi-database-fill-gear d-block mb-2" style="font-size: 2rem;"></i>
                                Database Backups
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
