@page
@model SchedulingSystem.Pages.Admin.Constraints.IndexModel
@{
    ViewData["Title"] = "Scheduling Constraints";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">
                <i class="bi bi-shield-check"></i> Scheduling Constraints
            </h1>
            <p class="lead">
                Comprehensive list of all constraints that govern the scheduling system.
                These rules ensure valid timetables and optimal scheduling outcomes.
            </p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-exclamation-triangle-fill"></i> Hard Constraints
                    </h5>
                    <p class="display-6 mb-0">@Model.HardConstraints.Count</p>
                    <small>Must never be violated</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-exclamation-circle-fill"></i> Soft Constraints
                    </h5>
                    <p class="display-6 mb-0">@Model.SoftConstraints.Count</p>
                    <small>Should be respected when possible</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-people-fill"></i> Special Cases
                    </h5>
                    <p class="display-6 mb-0">@Model.SpecialCases.Count</p>
                    <small>Exempt entities</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Hard Constraints Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Hard Constraints
                    </h3>
                    <small>These constraints MUST be satisfied. Violations prevent scheduling.</small>
                </div>
                <div class="card-body">
                    @foreach (var category in Model.HardConstraintsByCategory)
                    {
                        <h4 class="mt-3 mb-3">
                            <span class="badge bg-secondary">@category.Key</span>
                        </h4>
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 10%">Code</th>
                                        <th style="width: 25%">Name</th>
                                        <th style="width: 40%">Description</th>
                                        <th style="width: 25%">Exempt Entities</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var constraint in category.Value)
                                    {
                                        <tr>
                                            <td><code>@constraint.Code</code></td>
                                            <td><strong>@constraint.Name</strong></td>
                                            <td>@constraint.Description</td>
                                            <td>
                                                @if (constraint.ExemptEntities.Any())
                                                {
                                                    foreach (var entity in constraint.ExemptEntities)
                                                    {
                                                        <span class="badge bg-secondary">@entity</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">None</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Soft Constraints Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-circle-fill"></i> Soft Constraints
                    </h3>
                    <small>These constraints SHOULD be satisfied. Violations generate warnings but allow scheduling.</small>
                </div>
                <div class="card-body">
                    @foreach (var category in Model.SoftConstraintsByCategory)
                    {
                        <h4 class="mt-3 mb-3">
                            <span class="badge bg-secondary">@category.Key</span>
                        </h4>
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 10%">Code</th>
                                        <th style="width: 25%">Name</th>
                                        <th style="width: 30%">Description</th>
                                        <th style="width: 10%">Priority</th>
                                        <th style="width: 25%">Exempt Entities</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var constraint in category.Value)
                                    {
                                        <tr>
                                            <td><code>@constraint.Code</code></td>
                                            <td><strong>@constraint.Name</strong></td>
                                            <td>@constraint.Description</td>
                                            <td>
                                                @if (constraint.Priority == Services.Constraints.ConstraintPriority.High)
                                                {
                                                    <span class="badge bg-danger">HIGH</span>
                                                }
                                                else if (constraint.Priority == Services.Constraints.ConstraintPriority.Critical)
                                                {
                                                    <span class="badge bg-dark">CRITICAL</span>
                                                }
                                                else if (constraint.Priority == Services.Constraints.ConstraintPriority.Low)
                                                {
                                                    <span class="badge bg-light text-dark">LOW</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">NORMAL</span>
                                                }
                                            </td>
                                            <td>
                                                @if (constraint.ExemptEntities.Any())
                                                {
                                                    foreach (var entity in constraint.ExemptEntities)
                                                    {
                                                        <span class="badge bg-secondary">@entity</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">None</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Special Cases Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-people-fill"></i> Special Cases & Exempt Entities
                    </h3>
                    <small>Entities that are exempt from certain constraints.</small>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Entity Name</th>
                                    <th>Type</th>
                                    <th>Description</th>
                                    <th>Exempt From</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var specialCase in Model.SpecialCases)
                                {
                                    <tr>
                                        <td><code>@specialCase.Name</code></td>
                                        <td><span class="badge bg-primary">@specialCase.Type</span></td>
                                        <td>@specialCase.Description</td>
                                        <td>
                                            @foreach (var constraint in specialCase.ExemptConstraints)
                                            {
                                                <span class="badge bg-secondary me-1">@constraint</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Current Constraint Values Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-sliders"></i> Current Constraint Values
                    </h3>
                    <small>Active constraint limits and thresholds from the database.</small>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Teacher Constraints -->
                        <div class="col-md-6 mb-4">
                            <h5><i class="bi bi-person-badge"></i> Teacher Constraints</h5>
                            <div class="table-responsive">
                                <table class="table table-sm table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Teacher</th>
                                            <th>Max Consecutive</th>
                                            <th>Max/Day</th>
                                            <th>Min/Day</th>
                                            <th>Lunch Break (min)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.TeacherConstraintValues.Any())
                                        {
                                            @foreach (var teacher in Model.TeacherConstraintValues.Take(10))
                                            {
                                                <tr>
                                                    <td><strong>@teacher.Name</strong></td>
                                                    <td class="text-center">@(teacher.MaxConsecutivePeriods?.ToString() ?? "-")</td>
                                                    <td class="text-center">@(teacher.MaxPeriodsPerDay?.ToString() ?? "-")</td>
                                                    <td class="text-center">@(teacher.MinPeriodsPerDay?.ToString() ?? "-")</td>
                                                    <td class="text-center">@(teacher.MinLunchBreak?.ToString() ?? "-")</td>
                                                </tr>
                                            }
                                            @if (Model.TeacherConstraintValues.Count > 10)
                                            {
                                                <tr>
                                                    <td colspan="5" class="text-center text-muted">
                                                        <em>... and @(Model.TeacherConstraintValues.Count - 10) more teachers</em>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center text-muted">No teacher constraints defined</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Class Constraints -->
                        <div class="col-md-6 mb-4">
                            <h5><i class="bi bi-people"></i> Class Constraints</h5>
                            <div class="table-responsive">
                                <table class="table table-sm table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Class</th>
                                            <th>Max Consecutive Subject</th>
                                            <th>Max/Day</th>
                                            <th>Min/Day</th>
                                            <th>Lunch Break (min)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.ClassConstraintValues.Any())
                                        {
                                            @foreach (var classEntity in Model.ClassConstraintValues.Take(10))
                                            {
                                                <tr>
                                                    <td><strong>@classEntity.Name</strong></td>
                                                    <td class="text-center">@(classEntity.MaxConsecutiveSubjects?.ToString() ?? "-")</td>
                                                    <td class="text-center">@(classEntity.MaxPeriodsPerDay?.ToString() ?? "-")</td>
                                                    <td class="text-center">@(classEntity.MinPeriodsPerDay?.ToString() ?? "-")</td>
                                                    <td class="text-center">@(classEntity.MinLunchBreak?.ToString() ?? "-")</td>
                                                </tr>
                                            }
                                            @if (Model.ClassConstraintValues.Count > 10)
                                            {
                                                <tr>
                                                    <td colspan="5" class="text-center text-muted">
                                                        <em>... and @(Model.ClassConstraintValues.Count - 10) more classes</em>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center text-muted">No class constraints defined</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        // Optional: Add any JavaScript for interactive features
    </script>
}
