@page
@model SchedulingSystem.Pages.Admin.Teachers.IndexModel
@{
    ViewData["Title"] = "Teachers";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-person-badge"></i> Teachers</h2>
            <p class="text-muted">Manage teachers in the system</p>
        </div>
        <div class="col text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Teacher
            </a>
        </div>
    </div>

    @if (Model.Teachers.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No teachers found. Click "Add New Teacher" to create one.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Title</th>
                                <th>Email</th>
                                <th>Quotas</th>
                                <th>Employment</th>
                                <th>Statistics</th>
                                <th>Lessons</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teacher in Model.Teachers)
                            {
                                <tr>
                                    <td>
                                        <strong>@teacher.FullName</strong>
                                        @if (teacher.DateOfBirth.HasValue)
                                        {
                                            var age = DateTime.Now.Year - teacher.DateOfBirth.Value.Year;
                                            <small class="text-muted"><br/>Age: @age</small>
                                        }
                                    </td>
                                    <td>@teacher.Title</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(teacher.Email))
                                        {
                                            <a href="mailto:@teacher.Email">@teacher.Email</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <small>
                                            @if (teacher.WeeklyQuota.HasValue)
                                            {
                                                <text>Week: @teacher.WeeklyQuota<br/></text>
                                            }
                                            @if (teacher.YearlyQuota.HasValue)
                                            {
                                                <text>Year: @teacher.YearlyQuota<br/></text>
                                            }
                                            @if (teacher.MinNonTeachingPeriods.HasValue || teacher.MaxNonTeachingPeriods.HasValue)
                                            {
                                                <text>NTP: @(teacher.MinNonTeachingPeriods ?? 0)-@(teacher.MaxNonTeachingPeriods ?? 0)</text>
                                            }
                                            @if (!teacher.WeeklyQuota.HasValue && !teacher.YearlyQuota.HasValue && !teacher.MinNonTeachingPeriods.HasValue)
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(teacher.Status))
                                        {
                                            <span class="badge bg-info">@teacher.Status</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(teacher.Statistic1) || !string.IsNullOrEmpty(teacher.Statistic2))
                                        {
                                            <small>@teacher.Statistic1 @teacher.Statistic2</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@teacher.LessonTeachers.Count</td>
                                    <td>
                                        @if (teacher.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="ManageAvailability" asp-route-id="@teacher.Id" class="btn btn-outline-secondary" title="Manage Availability">
                                                <i class="bi bi-calendar-week"></i>
                                            </a>
                                            <a asp-page="Details" asp-route-id="@teacher.Id" class="btn btn-outline-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="Edit" asp-route-id="@teacher.Id" class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@teacher.Id" class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
