@page
@model SchedulingSystem.Pages.Admin.Teachers.ManageQualificationsModel
@{
    ViewData["Title"] = "Manage Qualifications";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-mortarboard"></i> Manage Subject Qualifications</h2>
            <p class="text-muted">Teacher: <strong>@Model.Teacher.FullName</strong> (@Model.Teacher.Email)</p>
        </div>
        <div class="col-auto">
            <a asp-page="Details" asp-route-id="@Model.Teacher.Id" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Teacher
            </a>
        </div>
    </div>

    <!-- Add New Qualification Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Qualification</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="Add" asp-route-id="@Model.Teacher.Id">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="NewQualification.SubjectId" class="form-label">Subject</label>
                        <select asp-for="NewQualification.SubjectId" class="form-select" asp-items="Model.SubjectList" required>
                            <option value="">-- Select Subject --</option>
                        </select>
                        <span asp-validation-for="NewQualification.SubjectId" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="NewQualification.QualificationLevel" class="form-label">Qualification Level</label>
                        <select asp-for="NewQualification.QualificationLevel" class="form-select" asp-items="Model.QualificationLevelList" required>
                            <option value="">-- Select Level --</option>
                        </select>
                        <span asp-validation-for="NewQualification.QualificationLevel" class="text-danger"></span>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label d-block">&nbsp;</label>
                        <div class="form-check">
                            <input asp-for="NewQualification.IsPreferred" class="form-check-input" />
                            <label asp-for="NewQualification.IsPreferred" class="form-check-label">
                                Preferred
                            </label>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label d-block">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-plus-circle"></i> Add Qualification
                        </button>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-12">
                        <label asp-for="NewQualification.Notes" class="form-label">Notes (Optional)</label>
                        <input asp-for="NewQualification.Notes" class="form-control" placeholder="Additional notes about this qualification...">
                        <span asp-validation-for="NewQualification.Notes" class="text-danger"></span>
                    </div>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div>
            </form>
        </div>
    </div>

    <!-- Current Qualifications -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0"><i class="bi bi-list-check"></i> Current Qualifications (@Model.Qualifications.Count)</h5>
        </div>
        <div class="card-body">
            @if (!Model.Qualifications.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No qualifications defined. Add qualifications above to specify which subjects this teacher can teach.</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var qualification in Model.Qualifications)
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card border-start border-primary border-3 h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="card-title mb-1">@qualification.Subject?.Name</h6>
                                            <span class="badge bg-secondary">@qualification.Subject?.Code</span>
                                            @if (!string.IsNullOrEmpty(qualification.QualificationLevel))
                                            {
                                                <span class="badge bg-info">@qualification.QualificationLevel</span>
                                            }
                                        </div>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Teacher.Id" asp-route-qualificationId="@qualification.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to remove this qualification?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>

                                    <div class="mb-2">
                                        <form method="post" asp-page-handler="TogglePreferred" asp-route-id="@Model.Teacher.Id" asp-route-qualificationId="@qualification.Id">
                                            <button type="submit" class="btn btn-sm @(qualification.IsPreferred ? "btn-success" : "btn-outline-secondary") w-100">
                                                <i class="bi bi-star@(qualification.IsPreferred ? "-fill" : "")"></i>
                                                @(qualification.IsPreferred ? "Preferred Subject" : "Mark as Preferred")
                                            </button>
                                        </form>
                                    </div>

                                    @if (!string.IsNullOrEmpty(qualification.Notes))
                                    {
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                <i class="bi bi-info-circle"></i> @qualification.Notes
                                            </small>
                                        </div>
                                    }

                                    <div class="mt-2">
                                        <small class="text-muted">Category: @qualification.Subject?.Category</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Help Section -->
    <div class="alert alert-info mt-4">
        <h6><i class="bi bi-info-circle"></i> About Qualifications</h6>
        <ul class="mb-0">
            <li><strong>Qualification Level:</strong> Indicates the teacher's expertise level in the subject</li>
            <li><strong>Preferred:</strong> Mark subjects the teacher prefers to teach (helps with scheduling optimization)</li>
            <li><strong>Impact:</strong> Only qualified teachers will appear in the lesson creation/editing dropdowns</li>
        </ul>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
