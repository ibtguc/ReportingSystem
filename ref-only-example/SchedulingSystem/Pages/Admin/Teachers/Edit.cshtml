@page
@model SchedulingSystem.Pages.Admin.Teachers.EditModel
@{
    ViewData["Title"] = "Edit Teacher";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Teacher: @Model.Teacher.FullName</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Teacher.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Basic Information -->
                        <h5 class="border-bottom pb-2 mb-3"><i class="bi bi-person"></i> Basic Information</h5>
                        <div class="row">
                            <div class="col-md-2 mb-3">
                                <label asp-for="Teacher.Title" class="form-label"></label>
                                <select asp-for="Teacher.Title" class="form-select">
                                    <option value="">-</option>
                                    <option value="Mr.">Mr.</option>
                                    <option value="Mrs.">Mrs.</option>
                                    <option value="Ms.">Ms.</option>
                                    <option value="Dr.">Dr.</option>
                                    <option value="Prof.">Prof.</option>
                                </select>
                            </div>

                            <div class="col-md-5 mb-3">
                                <label asp-for="Teacher.FirstName" class="form-label"></label>
                                <input asp-for="Teacher.FirstName" class="form-control" />
                                <span asp-validation-for="Teacher.FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-5 mb-3">
                                <label asp-for="Teacher.LastName" class="form-label"></label>
                                <input asp-for="Teacher.LastName" class="form-control" />
                                <span asp-validation-for="Teacher.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Teacher.Email" class="form-label"></label>
                                <input asp-for="Teacher.Email" class="form-control" type="email" />
                                <span asp-validation-for="Teacher.Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Teacher.PhoneNumber" class="form-label"></label>
                                <input asp-for="Teacher.PhoneNumber" class="form-control" type="tel" />
                                <span asp-validation-for="Teacher.PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Teacher.MobileNumber" class="form-label"></label>
                                <input asp-for="Teacher.MobileNumber" class="form-control" type="tel" />
                                <span asp-validation-for="Teacher.MobileNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Teacher.DateOfBirth" class="form-label"></label>
                                <input asp-for="Teacher.DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="Teacher.DateOfBirth" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Teacher.Gender" class="form-label"></label>
                                <select asp-for="Teacher.Gender" class="form-select">
                                    <option value="">-</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Teacher.DepartmentId" class="form-label"></label>
                                <select asp-for="Teacher.DepartmentId" class="form-select" asp-items="Model.DepartmentList">
                                    <option value="">-- Select Department --</option>
                                </select>
                            </div>
                        </div>

                        <!-- Employment Information -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-briefcase"></i> Employment Information</h5>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Teacher.PersonnelNumber" class="form-label"></label>
                                <input asp-for="Teacher.PersonnelNumber" class="form-control" />
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Teacher.Status" class="form-label"></label>
                                <select asp-for="Teacher.Status" class="form-select">
                                    <option value="">-</option>
                                    <option value="Full-time">Full-time</option>
                                    <option value="Part-time">Part-time</option>
                                    <option value="Contract">Contract</option>
                                    <option value="Substitute">Substitute</option>
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Teacher.HomeRoom" class="form-label"></label>
                                <input asp-for="Teacher.HomeRoom" class="form-control" />
                            </div>
                        </div>

                        <!-- Teaching Constraints -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-clock"></i> Teaching Constraints</h5>
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label asp-for="Teacher.WeeklyQuota" class="form-label"></label>
                                <input asp-for="Teacher.WeeklyQuota" class="form-control" type="number" step="0.5" min="0" max="60" />
                                <small class="text-muted">Max teaching hours per week</small>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Teacher.MinPeriodsPerDay" class="form-label"></label>
                                <input asp-for="Teacher.MinPeriodsPerDay" class="form-control" type="number" min="0" max="12" />
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Teacher.MaxPeriodsPerDay" class="form-label"></label>
                                <input asp-for="Teacher.MaxPeriodsPerDay" class="form-control" type="number" min="0" max="12" />
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Teacher.MaxConsecutivePeriods" class="form-label"></label>
                                <input asp-for="Teacher.MaxConsecutivePeriods" class="form-control" type="number" min="0" max="12" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Teacher.Description" class="form-label"></label>
                                <textarea asp-for="Teacher.Description" class="form-control" rows="2"></textarea>
                            </div>

                            <div class="col-md-3 mb-3">
                                <div class="form-check mt-4 pt-2">
                                    <input asp-for="Teacher.IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="Teacher.IsActive" class="form-check-label"></label>
                                </div>
                            </div>

                            <div class="col-md-3 mb-3">
                                <div class="form-check mt-4 pt-2">
                                    <input asp-for="Teacher.AvailableForSubstitution" class="form-check-input" type="checkbox" />
                                    <label asp-for="Teacher.AvailableForSubstitution" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Links -->
                        <div class="alert alert-light mt-3">
                            <strong>Related:</strong>
                            <a asp-page="ManageAvailability" asp-route-id="@Model.Teacher.Id" class="btn btn-sm btn-outline-primary ms-2">
                                <i class="bi bi-clock-history"></i> Manage Availability
                            </a>
                            <a asp-page="ManageQualifications" asp-route-id="@Model.Teacher.Id" class="btn btn-sm btn-outline-secondary ms-2">
                                <i class="bi bi-mortarboard"></i> Manage Qualifications
                            </a>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <div>
                                <a asp-page="Delete" asp-route-id="@Model.Teacher.Id" class="btn btn-outline-danger me-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
