@page
@model SchedulingSystem.Pages.Admin.Departments.IndexModel
@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-building"></i> Departments</h2>
            <p class="text-muted">Manage school departments and divisions</p>
        </div>
        <div class="col text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Department
            </a>
        </div>
    </div>

    @if (Model.Departments.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No departments found. Click "Add New Department" to create one.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Code</th>
                                <th>Full Name</th>
                                <th>Teachers</th>
                                <th>Subjects</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dept in Model.Departments)
                            {
                                <tr>
                                    <td><strong>@dept.Name</strong></td>
                                    <td>@(dept.FullName ?? "-")</td>
                                    <td>@dept.Teachers.Count</td>
                                    <td>@dept.Subjects.Count</td>
                                    <td>
                                        @if (dept.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-page="Details" asp-route-id="@dept.Id" class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-page="Edit" asp-route-id="@dept.Id" class="btn btn-outline-primary btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-page="Delete" asp-route-id="@dept.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
