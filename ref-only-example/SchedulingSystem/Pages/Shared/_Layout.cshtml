<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scheduling System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/print.css" asp-append-version="true" media="print" />
    <link rel="stylesheet" href="~/SchedulingSystem.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Admin/Dashboard">
                    <i class="bi bi-calendar3"></i> Scheduling
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Dashboard">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Administration
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><h6 class="dropdown-header">Master Data</h6></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Departments/Index"><i class="bi bi-building"></i> Departments</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Teachers/Index"><i class="bi bi-person-badge"></i> Teachers</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Classes/Index"><i class="bi bi-people"></i> Classes</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Subjects/Index"><i class="bi bi-book"></i> Subjects</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Rooms/Index"><i class="bi bi-door-open"></i> Rooms</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Lessons/Dashboard"><i class="bi bi-journal-text"></i> Lessons</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Schedule Data</h6></li>
                                <li><a class="dropdown-item" asp-page="/Admin/SchoolYears/Index"><i class="bi bi-calendar-event"></i> School Years</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Periods/Index"><i class="bi bi-clock"></i> Periods</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Students/Index"><i class="bi bi-mortarboard"></i> Students</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">System</h6></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Users/Index"><i class="bi bi-people-fill"></i> Users</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Constraints/Index"><i class="bi bi-shield-check"></i> Constraints</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Import/Untis"><i class="bi bi-upload"></i> Import Data</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Backup/Index"><i class="bi bi-database-fill-gear"></i> Database Backups</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="timetableDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Timetables
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="timetableDropdown">
                                <li><h6 class="dropdown-header">Manage</h6></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Timetables/Index"><i class="bi bi-list-ul"></i> All Timetables</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Timetables/Generate"><i class="bi bi-plus-circle"></i> Create New Timetable</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Timetables/Compare"><i class="bi bi-columns-gap"></i> Compare Timetables</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Views (Coming Soon)</h6></li>
                                <li><a class="dropdown-item disabled" href="#">Teacher View</a></li>
                                <li><a class="dropdown-item disabled" href="#">Class View</a></li>
                                <li><a class="dropdown-item disabled" href="#">Room View</a></li>
                                <li><a class="dropdown-item disabled" href="#">Student View</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="substitutionDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-plus"></i> Substitutions
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="substitutionDropdown">
                                <li><a class="dropdown-item" asp-page="/Admin/Substitutions/Daily"><i class="bi bi-calendar-check"></i> Daily Board</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Absences/Report"><i class="bi bi-plus-circle"></i> Report Absence</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Absences/Index"><i class="bi bi-list-ul"></i> View All Absences</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Management</h6></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Substitutions/Reports"><i class="bi bi-bar-chart"></i> Reports & Analytics</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Reports</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><h6 class="dropdown-header">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Auth/Logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Auth/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2025 - Scheduling System - Educational Timetabling Solution
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>