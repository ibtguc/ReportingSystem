@page
@model SchedulingSystem.Pages.Auth.VerifyModel
@{
    ViewData["Title"] = "Verifying Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scheduling System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .spinner-border {
            width: 3rem;
            height: 3rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-body p-5 text-center">
                        @if (Model.IsVerifying)
                        {
                            <div class="spinner-border text-primary mb-4" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <h3>Verifying your login...</h3>
                            <p class="text-muted">Please wait while we log you in.</p>
                        }
                        else
                        {
                            <i class="bi bi-x-circle text-danger" style="font-size: 4rem;"></i>
                            <h3 class="mt-3 text-danger">Login Failed</h3>
                            <p class="text-muted mb-4">@Model.ErrorMessage</p>
                            <a href="/Auth/Login" class="btn btn-primary">
                                <i class="bi bi-arrow-left"></i> Back to Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
