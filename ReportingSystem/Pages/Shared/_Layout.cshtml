<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reporting System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Admin/Dashboard">
                    <i class="bi bi-diagram-3"></i> Reporting
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Dashboard">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="reportDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Reporting
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="reportDropdown">
                                <li><a class="dropdown-item" asp-page="/Admin/Reports/Index"><i class="bi bi-file-earmark-text"></i> Reports</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Reports/Create"><i class="bi bi-file-earmark-plus"></i> New Report</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Templates/Index"><i class="bi bi-file-earmark-ruled"></i> Templates</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="upwardFlowDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Upward Flow
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="upwardFlowDropdown">
                                <li><a class="dropdown-item" asp-page="/Admin/UpwardFlow/SuggestedActions/Index"><i class="bi bi-lightbulb text-info"></i> Suggested Actions</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/UpwardFlow/ResourceRequests/Index"><i class="bi bi-box-seam text-warning"></i> Resource Requests</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/UpwardFlow/SupportRequests/Index"><i class="bi bi-life-preserver text-danger"></i> Support Requests</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="workflowDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Workflow
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="workflowDropdown">
                                <li><a class="dropdown-item" asp-page="/Admin/Workflow/Comments/Index"><i class="bi bi-chat-dots text-primary"></i> Comments</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Workflow/Confirmations/Index"><i class="bi bi-person-check text-success"></i> Confirmations</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="downwardFlowDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Downward Flow
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="downwardFlowDropdown">
                                <li><a class="dropdown-item" asp-page="/Admin/Downward/Feedback/Index"><i class="bi bi-chat-square-text text-info"></i> Feedback</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Downward/Recommendations/Index"><i class="bi bi-signpost-2 text-primary"></i> Recommendations</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Downward/Decisions/Index"><i class="bi bi-clipboard-check text-success"></i> Decisions</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="aggregationDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Aggregation
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="aggregationDropdown">
                                <li><a class="dropdown-item" asp-page="/Admin/Aggregation/Summary/Index"><i class="bi bi-bar-chart-line text-primary"></i> Summary Data</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Aggregation/Rules/Index"><i class="bi bi-gear text-secondary"></i> Aggregation Rules</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-page="/Admin/AuditLog/Index"><i class="bi bi-journal-text text-info"></i> Audit Log</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="orgDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Organization
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="orgDropdown">
                                <li><a class="dropdown-item" asp-page="/Admin/OrgUnits/Index"><i class="bi bi-diagram-3-fill"></i> Organizational Units</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Delegations/Index"><i class="bi bi-arrow-left-right"></i> Delegations</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Administration
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li><h6 class="dropdown-header">System</h6></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Users/Index"><i class="bi bi-people-fill"></i> Users</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Backup/Index"><i class="bi bi-database-fill-gear"></i> Database Backups</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><h6 class="dropdown-header">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Auth/Logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Auth/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - Reporting System - Hierarchical Organizational Reporting
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
