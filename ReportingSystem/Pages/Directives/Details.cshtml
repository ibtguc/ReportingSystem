@page "{id:int}"
@model ReportingSystem.Pages.Directives.DetailsModel
@{
    ViewData["Title"] = $"Directive: {Model.Directive.Title}";
    var isOverdue = Model.Directive.Deadline.HasValue && Model.Directive.Deadline.Value < DateTime.UtcNow
        && Model.Directive.Status != ReportingSystem.Models.DirectiveStatus.Closed
        && Model.Directive.Status != ReportingSystem.Models.DirectiveStatus.Verified;
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2><i class="bi bi-megaphone"></i> Directive #@Model.Directive.Id</h2>
    <a asp-page="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Directives
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (isOverdue)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle-fill"></i> <strong>OVERDUE</strong> — This directive was due @Model.Directive.Deadline!.Value.ToString("yyyy-MM-dd HH:mm")
    </div>
}

<!-- Directive Header -->
<div class="card shadow-sm mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">@Model.Directive.Title</h5>
        <div class="d-flex gap-2">
            @{
                var priorityBadge = Model.Directive.Priority switch
                {
                    ReportingSystem.Models.DirectivePriority.Urgent => "bg-danger",
                    ReportingSystem.Models.DirectivePriority.High => "bg-warning text-dark",
                    _ => "bg-secondary"
                };
                var statusBadge = Model.Directive.Status switch
                {
                    ReportingSystem.Models.DirectiveStatus.Issued => "bg-primary",
                    ReportingSystem.Models.DirectiveStatus.Delivered => "bg-info",
                    ReportingSystem.Models.DirectiveStatus.Acknowledged => "bg-warning text-dark",
                    ReportingSystem.Models.DirectiveStatus.InProgress => "bg-info",
                    ReportingSystem.Models.DirectiveStatus.Implemented => "bg-success",
                    ReportingSystem.Models.DirectiveStatus.Verified => "bg-success",
                    ReportingSystem.Models.DirectiveStatus.Closed => "bg-dark",
                    _ => "bg-secondary"
                };
                var typeBadge = Model.Directive.DirectiveType switch
                {
                    ReportingSystem.Models.DirectiveType.Instruction => "bg-primary",
                    ReportingSystem.Models.DirectiveType.Approval => "bg-success",
                    ReportingSystem.Models.DirectiveType.CorrectiveAction => "bg-danger",
                    ReportingSystem.Models.DirectiveType.Feedback => "bg-warning text-dark",
                    ReportingSystem.Models.DirectiveType.InformationNotice => "bg-info",
                    _ => "bg-secondary"
                };
            }
            <span class="badge @typeBadge">@Model.Directive.DirectiveType</span>
            <span class="badge @priorityBadge">@Model.Directive.Priority</span>
            <span class="badge @statusBadge fs-6">@Model.Directive.Status</span>
        </div>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-3"><strong>Issued by:</strong> @Model.Directive.Issuer.Name</div>
            <div class="col-md-3"><strong>Target:</strong> @Model.Directive.TargetCommittee.Name</div>
            <div class="col-md-3">
                <strong>Deadline:</strong>
                @if (Model.Directive.Deadline.HasValue)
                {
                    <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                        @Model.Directive.Deadline.Value.ToString("yyyy-MM-dd HH:mm")
                    </span>
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </div>
            <div class="col-md-3"><strong>Created:</strong> @Model.Directive.CreatedAt.ToString("yyyy-MM-dd HH:mm")</div>
        </div>

        @if (Model.Directive.TargetUser != null)
        {
            <div class="mb-3">
                <strong>Assigned to:</strong> @Model.Directive.TargetUser.Name
            </div>
        }

        <div class="border rounded p-3 bg-light">
            @Html.Raw(Model.Directive.BodyContent.Replace("\n", "<br />"))
        </div>

        @if (!string.IsNullOrEmpty(Model.Directive.ForwardingAnnotation))
        {
            <div class="mt-3 border-start border-4 border-warning ps-3">
                <small class="text-muted"><i class="bi bi-chat-quote"></i> Forwarding Annotation:</small>
                <p class="mb-0">@Model.Directive.ForwardingAnnotation</p>
            </div>
        }

        @if (Model.Directive.RelatedReport != null)
        {
            <div class="mt-3">
                <strong><i class="bi bi-link-45deg"></i> Related Report:</strong>
                <a asp-page="/Reports/Details" asp-route-id="@Model.Directive.RelatedReport.Id">
                    @Model.Directive.RelatedReport.Title
                </a>
                <span class="badge bg-secondary">@Model.Directive.RelatedReport.Committee.Name</span>
            </div>
        }

        @if (Model.Directive.ParentDirective != null)
        {
            <div class="mt-3">
                <strong><i class="bi bi-arrow-return-left"></i> Parent Directive:</strong>
                <a asp-page="Details" asp-route-id="@Model.Directive.ParentDirective.Id">
                    #@Model.Directive.ParentDirective.Id — @Model.Directive.ParentDirective.Title
                </a>
                <small class="text-muted">by @Model.Directive.ParentDirective.Issuer.Name</small>
            </div>
        }
    </div>
</div>

<!-- Actions -->
@if (Model.IsTarget || Model.IsIssuer)
{
    <div class="card shadow-sm mb-3">
        <div class="card-header"><h6 class="mb-0"><i class="bi bi-lightning"></i> Actions</h6></div>
        <div class="card-body">
            <div class="d-flex flex-wrap gap-2 align-items-end">
                @if (Model.IsTarget && (Model.Directive.Status == ReportingSystem.Models.DirectiveStatus.Delivered
                    || Model.Directive.Status == ReportingSystem.Models.DirectiveStatus.Issued))
                {
                    <form method="post" asp-page-handler="Acknowledge" asp-route-id="@Model.Directive.Id">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check2"></i> Acknowledge
                        </button>
                    </form>
                }
                @if (Model.IsTarget && Model.Directive.Status == ReportingSystem.Models.DirectiveStatus.Acknowledged)
                {
                    <form method="post" asp-page-handler="StartProgress" asp-route-id="@Model.Directive.Id">
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-play-fill"></i> Start Progress
                        </button>
                    </form>
                }
                @if (Model.IsTarget && (Model.Directive.Status == ReportingSystem.Models.DirectiveStatus.InProgress
                    || Model.Directive.Status == ReportingSystem.Models.DirectiveStatus.Acknowledged))
                {
                    <form method="post" asp-page-handler="Implement" asp-route-id="@Model.Directive.Id" class="d-flex gap-1">
                        <input asp-for="ActionComments" class="form-control form-control-sm" placeholder="Implementation notes..." style="width: 250px;" />
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Mark Implemented
                        </button>
                    </form>
                }
                @if (Model.IsIssuer && Model.Directive.Status == ReportingSystem.Models.DirectiveStatus.Implemented)
                {
                    <form method="post" asp-page-handler="Verify" asp-route-id="@Model.Directive.Id">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-patch-check"></i> Verify
                        </button>
                    </form>
                }
                @if (Model.IsIssuer && (Model.Directive.Status == ReportingSystem.Models.DirectiveStatus.Verified
                    || Model.Directive.Status == ReportingSystem.Models.DirectiveStatus.Implemented))
                {
                    <form method="post" asp-page-handler="Close" asp-route-id="@Model.Directive.Id">
                        <button type="submit" class="btn btn-dark">
                            <i class="bi bi-x-circle"></i> Close
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
}

<!-- Forward Directive -->
@if (Model.CanForward)
{
    <div class="card shadow-sm mb-3 border-info">
        <div class="card-header bg-info text-white"><h6 class="mb-0"><i class="bi bi-arrow-return-right"></i> Forward Directive</h6></div>
        <div class="card-body">
            <form method="post" asp-page-handler="Forward" asp-route-id="@Model.Directive.Id">
                <div class="row g-2 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">Forward to Sub-Committee</label>
                        <select asp-for="ForwardToCommitteeId" class="form-select">
                            <option value="">-- Select --</option>
                            @foreach (var c in Model.ForwardableCommittees)
                            {
                                <option value="@c.Id">@c.Name (@c.HierarchyLevel)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Annotation (optional)</label>
                        <input asp-for="ForwardAnnotation" class="form-control" placeholder="Add context or instructions..." />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-info w-100">
                            <i class="bi bi-arrow-return-right"></i> Forward
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

<!-- Child Directives -->
@if (Model.Directive.ChildDirectives.Any())
{
    <div class="card shadow-sm mb-3">
        <div class="card-header"><h6 class="mb-0"><i class="bi bi-diagram-2"></i> Forwarded Directives</h6></div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Target Committee</th>
                        <th>Forwarded By</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var child in Model.Directive.ChildDirectives)
                    {
                        var childStatusBadge = child.Status switch
                        {
                            ReportingSystem.Models.DirectiveStatus.Issued => "bg-primary",
                            ReportingSystem.Models.DirectiveStatus.Delivered => "bg-info",
                            ReportingSystem.Models.DirectiveStatus.Acknowledged => "bg-warning text-dark",
                            ReportingSystem.Models.DirectiveStatus.InProgress => "bg-info",
                            ReportingSystem.Models.DirectiveStatus.Implemented => "bg-success",
                            ReportingSystem.Models.DirectiveStatus.Verified => "bg-success",
                            ReportingSystem.Models.DirectiveStatus.Closed => "bg-dark",
                            _ => "bg-secondary"
                        };
                        <tr>
                            <td>#@child.Id</td>
                            <td>@child.TargetCommittee.Name</td>
                            <td>@child.Issuer.Name</td>
                            <td><span class="badge @childStatusBadge">@child.Status</span></td>
                            <td>
                                <a asp-page="Details" asp-route-id="@child.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<!-- Propagation Tree -->
<div class="card shadow-sm mb-3">
    <div class="card-header"><h6 class="mb-0"><i class="bi bi-diagram-3"></i> Propagation Tree</h6></div>
    <div class="card-body">
        @{ await RenderPropagationNode(Model.PropagationTree, Model.Directive.Id); }
    </div>
</div>

<!-- Status History -->
@if (Model.Directive.StatusHistory.Any())
{
    <div class="card shadow-sm mb-3">
        <div class="card-header"><h6 class="mb-0"><i class="bi bi-clock-history"></i> Status History</h6></div>
        <div class="table-responsive">
            <table class="table table-sm mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Changed By</th>
                        <th>Comments</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var h in Model.Directive.StatusHistory.OrderByDescending(h => h.ChangedAt))
                    {
                        <tr>
                            <td class="small">@h.ChangedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td><span class="badge bg-secondary">@h.OldStatus</span></td>
                            <td><span class="badge bg-primary">@h.NewStatus</span></td>
                            <td class="small">@h.ChangedBy.Name</td>
                            <td class="small">@h.Comments</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@functions {
    async Task RenderPropagationNode(ReportingSystem.Services.DirectivePropagationNode node, int currentDirectiveId)
    {
        var isCurrent = node.Directive.Id == currentDirectiveId;
        var indent = node.Depth * 24;
        var statusClass = node.Directive.Status switch
        {
            ReportingSystem.Models.DirectiveStatus.Closed => "text-muted",
            ReportingSystem.Models.DirectiveStatus.Verified => "text-success",
            ReportingSystem.Models.DirectiveStatus.Implemented => "text-success",
            _ => ""
        };

        <div class="d-flex align-items-center py-1 @statusClass" style="padding-left: @(indent)px;">
            @if (node.Depth > 0)
            {
                <i class="bi bi-arrow-return-right text-muted me-2"></i>
            }
            else
            {
                <i class="bi bi-megaphone me-2"></i>
            }
            @if (isCurrent)
            {
                <strong class="me-2">
                    #@node.Directive.Id @node.Directive.TargetCommittee.Name
                </strong>
            }
            else
            {
                <a asp-page="Details" asp-route-id="@node.Directive.Id" class="me-2">
                    #@node.Directive.Id @node.Directive.TargetCommittee.Name
                </a>
            }
            @{
                var nodeStatusBadge = node.Directive.Status switch
                {
                    ReportingSystem.Models.DirectiveStatus.Issued => "bg-primary",
                    ReportingSystem.Models.DirectiveStatus.Delivered => "bg-info",
                    ReportingSystem.Models.DirectiveStatus.Acknowledged => "bg-warning text-dark",
                    ReportingSystem.Models.DirectiveStatus.InProgress => "bg-info",
                    ReportingSystem.Models.DirectiveStatus.Implemented => "bg-success",
                    ReportingSystem.Models.DirectiveStatus.Verified => "bg-success",
                    ReportingSystem.Models.DirectiveStatus.Closed => "bg-dark",
                    _ => "bg-secondary"
                };
            }
            <span class="badge @nodeStatusBadge">@node.Directive.Status</span>
            <small class="text-muted ms-2">by @node.Directive.Issuer.Name</small>
        </div>
        @foreach (var child in node.Children)
        {
            await RenderPropagationNode(child, currentDirectiveId);
        }
    }
}
