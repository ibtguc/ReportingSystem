@page "{id:int}"
@model ReportingSystem.Pages.Reports.EditModel
@{
    ViewData["Title"] = Model.Revise ? "Revise Report" : "Edit Report";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="card shadow-sm">
                <div class="card-header @(Model.Revise ? "bg-info" : "bg-warning") text-white">
                    <h4 class="mb-0">
                        @if (Model.Revise)
                        {
                            <i class="bi bi-pencil-square"></i> @:Create Revision
                        }
                        else
                        {
                            <i class="bi bi-pencil"></i> @:Edit Draft Report
                        }
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.Revise)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            Creating a new version from the feedback. The original report will be preserved.
                        </div>
                    }

                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" name="revise" value="@Model.Revise.ToString().ToLower()" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Title & Committee -->
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Report.Title" class="form-label fw-semibold">Report Title *</label>
                                <input asp-for="Report.Title" class="form-control" />
                                <span asp-validation-for="Report.Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Report.CommitteeId" class="form-label fw-semibold">Committee *</label>
                                <select asp-for="Report.CommitteeId" class="form-select" asp-items="Model.CommitteeOptions">
                                    <option value="">Select committee...</option>
                                </select>
                            </div>
                        </div>

                        <!-- Type & Confidential -->
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Report.ReportType" class="form-label fw-semibold">Report Type</label>
                                <select asp-for="Report.ReportType" class="form-select"
                                        asp-items="Html.GetEnumSelectList<ReportingSystem.Models.ReportType>()">
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="form-check mt-4 pt-2">
                                    <input asp-for="Report.IsConfidential" class="form-check-input" type="checkbox" />
                                    <label asp-for="Report.IsConfidential" class="form-check-label">
                                        <i class="bi bi-lock-fill"></i> Mark as Confidential
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Body Content -->
                        <div class="mb-3">
                            <label asp-for="Report.BodyContent" class="form-label fw-semibold">Report Body *</label>
                            <textarea asp-for="Report.BodyContent" class="form-control" rows="12"></textarea>
                            <span asp-validation-for="Report.BodyContent" class="text-danger"></span>
                        </div>

                        <!-- Optional Sections -->
                        <div class="accordion mb-3" id="optionalSections">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button @(HasOptionalContent() ? "" : "collapsed")" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#additionalFields">
                                        <i class="bi bi-plus-circle me-2"></i> Additional Sections (Optional)
                                    </button>
                                </h2>
                                <div id="additionalFields" class="accordion-collapse collapse @(HasOptionalContent() ? "show" : "")">
                                    <div class="accordion-body">
                                        <div class="mb-3">
                                            <label asp-for="Report.SuggestedAction" class="form-label">Suggested Action</label>
                                            <textarea asp-for="Report.SuggestedAction" class="form-control" rows="3"></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Report.NeededResources" class="form-label">Needed Resources</label>
                                            <textarea asp-for="Report.NeededResources" class="form-control" rows="3"></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Report.NeededSupport" class="form-label">Needed Support</label>
                                            <textarea asp-for="Report.NeededSupport" class="form-control" rows="3"></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Report.SpecialRemarks" class="form-label">Special Remarks</label>
                                            <textarea asp-for="Report.SpecialRemarks" class="form-control" rows="3"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Attachments -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="bi bi-paperclip"></i> Add Attachments</label>
                            <input asp-for="NewAttachments" class="form-control" type="file" multiple />
                            <div class="form-text">Select additional files to attach.</div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Details" asp-route-id="@(Model.Revise ? 0 : Model.Report.Id)" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn @(Model.Revise ? "btn-info" : "btn-warning")">
                                @if (Model.Revise)
                                {
                                    <i class="bi bi-pencil-square"></i> @:Create Revision
                                }
                                else
                                {
                                    <i class="bi bi-save"></i> @:Save Changes
                                }
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@functions {
    bool HasOptionalContent() =>
        !string.IsNullOrEmpty(Model.Report?.SuggestedAction)
        || !string.IsNullOrEmpty(Model.Report?.NeededResources)
        || !string.IsNullOrEmpty(Model.Report?.NeededSupport)
        || !string.IsNullOrEmpty(Model.Report?.SpecialRemarks);
}
