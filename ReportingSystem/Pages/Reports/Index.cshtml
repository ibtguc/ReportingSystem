@page
@model ReportingSystem.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2><i class="bi bi-file-earmark-text"></i> Reports</h2>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Report
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filters -->
<div class="card shadow-sm mb-3">
    <div class="card-body py-2">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-3">
                <label class="form-label mb-0 small">Committee</label>
                <select asp-for="CommitteeId" class="form-select form-select-sm" asp-items="Model.CommitteeOptions">
                    <option value="">All Committees</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label mb-0 small">Status</label>
                <select asp-for="Status" class="form-select form-select-sm"
                        asp-items="Html.GetEnumSelectList<ReportingSystem.Models.ReportStatus>()">
                    <option value="">All Statuses</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label mb-0 small">Type</label>
                <select asp-for="ReportType" class="form-select form-select-sm"
                        asp-items="Html.GetEnumSelectList<ReportingSystem.Models.ReportType>()">
                    <option value="">All Types</option>
                </select>
            </div>
            <div class="col-md-2">
                <div class="form-check mt-3">
                    <input asp-for="ShowMine" class="form-check-input" type="checkbox" />
                    <label asp-for="ShowMine" class="form-check-label small">My Reports</label>
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-check mt-3">
                    <input asp-for="IncludeArchived" class="form-check-input" type="checkbox" />
                    <label asp-for="IncludeArchived" class="form-check-label small">Archived</label>
                </div>
            </div>
            <div class="col-md-2 text-end">
                <button type="submit" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-funnel"></i> Filter
                </button>
                <a asp-page="Index" class="btn btn-sm btn-outline-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<!-- Report List -->
<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Committee</th>
                    <th>Author</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Version</th>
                    <th>Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Reports.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            <i class="bi bi-inbox"></i> No reports found matching your filters.
                        </td>
                    </tr>
                }
                @foreach (var report in Model.Reports)
                {
                    <tr>
                        <td>
                            <a asp-page="Details" asp-route-id="@report.Id" class="text-decoration-none fw-semibold">
                                @report.Title
                            </a>
                            @if (report.IsConfidential)
                            {
                                <span class="badge bg-danger ms-1"><i class="bi bi-lock-fill"></i></span>
                            }
                            @if (report.Attachments.Any())
                            {
                                <span class="badge bg-secondary ms-1"><i class="bi bi-paperclip"></i> @report.Attachments.Count</span>
                            }
                        </td>
                        <td class="small">@report.Committee.Name</td>
                        <td class="small">@report.Author.Name</td>
                        <td>
                            @{
                                var typeBadge = report.ReportType switch
                                {
                                    ReportingSystem.Models.ReportType.Detailed => "bg-info",
                                    ReportingSystem.Models.ReportType.Summary => "bg-warning text-dark",
                                    ReportingSystem.Models.ReportType.ExecutiveSummary => "bg-dark",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @typeBadge">@report.ReportType</span>
                        </td>
                        <td>
                            @{
                                var statusBadge = report.Status switch
                                {
                                    ReportingSystem.Models.ReportStatus.Draft => "bg-secondary",
                                    ReportingSystem.Models.ReportStatus.Submitted => "bg-primary",
                                    ReportingSystem.Models.ReportStatus.UnderReview => "bg-warning text-dark",
                                    ReportingSystem.Models.ReportStatus.FeedbackRequested => "bg-danger",
                                    ReportingSystem.Models.ReportStatus.Revised => "bg-info",
                                    ReportingSystem.Models.ReportStatus.Summarized => "bg-purple",
                                    ReportingSystem.Models.ReportStatus.Approved => "bg-success",
                                    ReportingSystem.Models.ReportStatus.Archived => "bg-dark",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusBadge">@report.Status</span>
                        </td>
                        <td class="small">v@(report.Version)</td>
                        <td class="small">@report.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <a asp-page="Details" asp-route-id="@report.Id" class="btn btn-sm btn-outline-primary" title="View">
                                <i class="bi bi-eye"></i>
                            </a>
                            @if (report.Status == ReportingSystem.Models.ReportStatus.Draft)
                            {
                                <a asp-page="Edit" asp-route-id="@report.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-2 text-muted small">
    Showing @Model.Reports.Count report(s)
</div>
