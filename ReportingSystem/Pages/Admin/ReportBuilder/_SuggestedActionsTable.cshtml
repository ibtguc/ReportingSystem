@using ReportingSystem.Models
@model List<SuggestedAction>

<table class="table table-hover table-sm mb-0">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Category</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Report</th>
            <th>Created</th>
            <th>Reviewed By</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Id</td>
                <td>
                    @a.Title
                    @if (!string.IsNullOrEmpty(a.Description))
                    {
                        <br /><small class="text-muted">@(a.Description.Length > 50 ? a.Description.Substring(0, 50) + "..." : a.Description)</small>
                    }
                </td>
                <td><span class="badge bg-secondary">@ActionCategory.DisplayName(a.Category)</span></td>
                <td><span class="badge @ActionPriority.BadgeClass(a.Priority)">@a.Priority</span></td>
                <td><span class="badge @ActionStatus.BadgeClass(a.Status)">@ActionStatus.DisplayName(a.Status)</span></td>
                <td>@a.Report.ReportTemplate.Name</td>
                <td>@a.CreatedAt.ToString("MMM dd, yyyy")</td>
                <td>@(a.ReviewedBy?.Name ?? "-")</td>
            </tr>
        }
    </tbody>
</table>
