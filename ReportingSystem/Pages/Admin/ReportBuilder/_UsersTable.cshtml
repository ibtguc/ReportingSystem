@using ReportingSystem.Models
@model List<User>

<table class="table table-hover table-sm mb-0">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Organization</th>
            <th>Created</th>
            <th>Last Login</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Name</td>
                <td>@u.Email</td>
                <td><span class="badge bg-primary">@SystemRoles.DisplayName(u.Role)</span></td>
                <td>@(u.OrganizationalUnit?.Name ?? "-")</td>
                <td>@u.CreatedAt.ToString("MMM dd, yyyy")</td>
                <td>@(u.LastLoginAt?.ToString("MMM dd, yyyy") ?? "Never")</td>
                <td>
                    <a asp-page="/Admin/Users/Edit" asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
