@using ReportingSystem.Models
@model List<Report>

<table class="table table-hover table-sm mb-0">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Template</th>
            <th>Period</th>
            <th>Status</th>
            <th>Submitted By</th>
            <th>Organization</th>
            <th>Created</th>
            <th>Submitted</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.ReportTemplate.Name</td>
                <td>@r.ReportPeriod.Name</td>
                <td>
                    <span class="badge @ReportStatus.BadgeClass(r.Status)">
                        @ReportStatus.DisplayName(r.Status)
                    </span>
                </td>
                <td>@r.SubmittedBy?.Name</td>
                <td>@(r.SubmittedBy?.OrganizationalUnit?.Name ?? "-")</td>
                <td>@r.CreatedAt.ToString("MMM dd, yyyy")</td>
                <td>@(r.SubmittedAt?.ToString("MMM dd, yyyy") ?? "-")</td>
                <td>
                    <a asp-page="/Admin/Reports/View" asp-route-id="@r.Id" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-eye"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
