@page
@model ReportingSystem.Pages.Admin.ReportBuilder.IndexModel
@using ReportingSystem.Models
@{
    ViewData["Title"] = "Report Builder";
    var allRoles = new[] { SystemRoles.Administrator, SystemRoles.ReportOriginator, SystemRoles.ReportReviewer,
                           SystemRoles.TeamManager, SystemRoles.DepartmentHead, SystemRoles.Executive, SystemRoles.Auditor };
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-table"></i> Report Builder</h2>
            <p class="text-muted">Create custom ad-hoc reports with filters and export options</p>
        </div>
        <div class="col-auto">
            <a asp-page="SavedReports" class="btn btn-outline-primary me-2">
                <i class="bi bi-bookmark"></i> My Saved Reports
            </a>
            <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form method="get" id="reportBuilderForm">
        <!-- Report Type Selection -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-1-circle"></i> Select Report Type</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var type in SavedReportType.GetAll())
                    {
                        <div class="col-md-3 col-sm-6 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ReportType"
                                       id="type_@type.Value" value="@type.Value"
                                       checked="@(Model.ReportType == type.Value)"
                                       onchange="this.form.submit()">
                                <label class="form-check-label" for="type_@type.Value">
                                    @type.Display
                                </label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-2-circle"></i> Apply Filters</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @if (Model.ReportType == SavedReportType.Reports ||
                         Model.ReportType == SavedReportType.SuggestedActions ||
                         Model.ReportType == SavedReportType.ResourceRequests ||
                         Model.ReportType == SavedReportType.SupportRequests)
                    {
                        <div class="col-md-3">
                            <label class="form-label">Template</label>
                            <select name="TemplateId" class="form-select">
                                <option value="">All Templates</option>
                                @foreach (var t in Model.Templates)
                                {
                                    <option value="@t.Id" selected="@(Model.TemplateId == t.Id)">@t.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Period</label>
                            <select name="PeriodId" class="form-select">
                                <option value="">All Periods</option>
                                @foreach (var p in Model.Periods)
                                {
                                    <option value="@p.Id" selected="@(Model.PeriodId == p.Id)">@p.Name</option>
                                }
                            </select>
                        </div>
                    }

                    @if (Model.ReportType == SavedReportType.Reports)
                    {
                        <div class="col-md-2">
                            <label class="form-label">Status</label>
                            <select name="Status" class="form-select">
                                <option value="">All Statuses</option>
                                <option value="@ReportStatus.Draft" selected="@(Model.Status == ReportStatus.Draft)">Draft</option>
                                <option value="@ReportStatus.Submitted" selected="@(Model.Status == ReportStatus.Submitted)">Submitted</option>
                                <option value="@ReportStatus.UnderReview" selected="@(Model.Status == ReportStatus.UnderReview)">Under Review</option>
                                <option value="@ReportStatus.Approved" selected="@(Model.Status == ReportStatus.Approved)">Approved</option>
                                <option value="@ReportStatus.Rejected" selected="@(Model.Status == ReportStatus.Rejected)">Rejected</option>
                            </select>
                        </div>
                    }

                    <div class="col-md-2">
                        <label class="form-label">From Date</label>
                        <input type="date" name="FromDate" class="form-control" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">To Date</label>
                        <input type="date" name="ToDate" class="form-control" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))">
                    </div>

                    @if (Model.ReportType == SavedReportType.Users)
                    {
                        <div class="col-md-3">
                            <label class="form-label">Role</label>
                            <select name="Role" class="form-select">
                                <option value="">All Roles</option>
                                @foreach (var role in allRoles)
                                {
                                    <option value="@role" selected="@(Model.Role == role)">@SystemRoles.DisplayName(role)</option>
                                }
                            </select>
                        </div>
                    }

                    @if (Model.ReportType == SavedReportType.AuditLog)
                    {
                        <div class="col-md-3">
                            <label class="form-label">Action</label>
                            <select name="Action" class="form-select">
                                <option value="">All Actions</option>
                                @foreach (var action in Model.AuditActions)
                                {
                                    <option value="@action" selected="@(Model.Action == action)">@action</option>
                                }
                            </select>
                        </div>
                    }
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-play-fill"></i> Run Report
                    </button>
                    <a href="?ReportType=@Model.ReportType" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset Filters
                    </a>
                </div>
            </div>
        </div>
    </form>

    <!-- Results -->
    @if (Model.HasResults)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-3-circle"></i> Results (@Model.TotalCount records)</h5>
                <div>
                    <div class="dropdown d-inline-block me-2">
                        <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-download"></i> Export
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="/Admin/Export/Download?type=@Model.GetExportType()&format=csv@Model.GetExportQueryString()">
                                    <i class="bi bi-filetype-csv"></i> Export as CSV
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Admin/Export/Download?type=@Model.GetExportType()&format=excel@Model.GetExportQueryString()">
                                    <i class="bi bi-file-earmark-excel"></i> Export as Excel
                                </a>
                            </li>
                        </ul>
                    </div>
                    <button type="button" class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#saveReportModal">
                        <i class="bi bi-bookmark-plus"></i> Save Report
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    @if (Model.ReportType == SavedReportType.Reports)
                    {
                        @await Html.PartialAsync("_ReportsTable", Model.ReportsData)
                    }
                    else if (Model.ReportType == SavedReportType.SuggestedActions)
                    {
                        @await Html.PartialAsync("_SuggestedActionsTable", Model.SuggestedActionsData)
                    }
                    else if (Model.ReportType == SavedReportType.ResourceRequests)
                    {
                        @await Html.PartialAsync("_ResourceRequestsTable", Model.ResourceRequestsData)
                    }
                    else if (Model.ReportType == SavedReportType.Users)
                    {
                        @await Html.PartialAsync("_UsersTable", Model.UsersData)
                    }
                    else if (Model.ReportType == SavedReportType.AuditLog)
                    {
                        @await Html.PartialAsync("_AuditLogTable", Model.AuditLogData)
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-info-circle display-4"></i>
                            <p class="mt-2">Select a report type and apply filters to see results.</p>
                        </div>
                    }
                </div>
            </div>
            @if (Model.TotalCount > 100)
            {
                <div class="card-footer text-muted">
                    Showing first 100 of @Model.TotalCount records. Export to see all records.
                </div>
            }
        </div>
    }
    else if (Model.ReportType != null)
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No Results</h4>
                <p class="text-muted">Try adjusting your filters or selecting a different report type.</p>
            </div>
        </div>
    }
</div>

<!-- Save Report Modal -->
<div class="modal fade" id="saveReportModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="SaveReport">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-bookmark-plus"></i> Save Report Configuration</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Report Name *</label>
                        <input type="text" name="SavedReportName" class="form-control" required placeholder="My Custom Report">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="SavedReportDescription" class="form-control" rows="2" placeholder="Optional description..."></textarea>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" name="IsPublic" value="true" class="form-check-input" id="isPublicCheck">
                            <label class="form-check-label" for="isPublicCheck">
                                Share with other users
                            </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" name="IsPinned" value="true" class="form-check-input" id="isPinnedCheck">
                            <label class="form-check-label" for="isPinnedCheck">
                                Pin to my dashboard
                            </label>
                        </div>
                    </div>
                    <!-- Hidden fields for filter state -->
                    <input type="hidden" name="ReportType" value="@Model.ReportType">
                    <input type="hidden" name="FilterConfig" value="@Model.GetFilterConfigJson()">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-bookmark-check"></i> Save Report</button>
                </div>
            </form>
        </div>
    </div>
</div>
