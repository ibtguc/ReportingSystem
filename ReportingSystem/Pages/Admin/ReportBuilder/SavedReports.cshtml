@page
@model ReportingSystem.Pages.Admin.ReportBuilder.SavedReportsModel
@using ReportingSystem.Models
@{
    ViewData["Title"] = "Saved Reports";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-bookmark-fill"></i> Saved Reports</h2>
            <p class="text-muted">View and manage your saved report configurations</p>
        </div>
        <div class="col-auto">
            <a asp-page="Index" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Report
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- My Reports -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-person"></i> My Saved Reports (@Model.MyReports.Count)</h5>
        </div>
        <div class="card-body">
            @if (Model.MyReports.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Created</th>
                                <th>Last Run</th>
                                <th>Runs</th>
                                <th>Options</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model.MyReports)
                            {
                                <tr>
                                    <td>
                                        <strong>@report.Name</strong>
                                        @if (report.IsPinnedToDashboard)
                                        {
                                            <i class="bi bi-pin-fill text-warning ms-1" title="Pinned to dashboard"></i>
                                        }
                                    </td>
                                    <td><span class="badge bg-info">@SavedReportType.DisplayName(report.ReportType)</span></td>
                                    <td><small class="text-muted">@(report.Description ?? "-")</small></td>
                                    <td>@report.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>@(report.LastRunAt?.ToString("MMM dd, yyyy") ?? "Never")</td>
                                    <td>@report.RunCount</td>
                                    <td>
                                        @if (report.IsPublic)
                                        {
                                            <span class="badge bg-success">Shared</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Private</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-page="Index" asp-route-savedId="@report.Id" class="btn btn-sm btn-primary" title="Run Report">
                                            <i class="bi bi-play-fill"></i> Run
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@report.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this saved report?');" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-bookmark display-4 text-muted"></i>
                    <p class="text-muted mt-2 mb-0">You haven't saved any reports yet.</p>
                    <a asp-page="Index" class="btn btn-primary mt-2">Create Your First Report</a>
                </div>
            }
        </div>
    </div>

    <!-- Shared Reports -->
    @if (Model.SharedReports.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-people"></i> Shared Reports (@Model.SharedReports.Count)</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Created By</th>
                                <th>Created</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model.SharedReports)
                            {
                                <tr>
                                    <td><strong>@report.Name</strong></td>
                                    <td><span class="badge bg-info">@SavedReportType.DisplayName(report.ReportType)</span></td>
                                    <td><small class="text-muted">@(report.Description ?? "-")</small></td>
                                    <td>@report.CreatedBy.Name</td>
                                    <td>@report.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td class="text-end">
                                        <a asp-page="Index" asp-route-savedId="@report.Id" class="btn btn-sm btn-primary" title="Run Report">
                                            <i class="bi bi-play-fill"></i> Run
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
