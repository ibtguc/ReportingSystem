@page
@model ReportingSystem.Pages.Admin.Users.IndexModel
@using System.Security.Claims
@{
    ViewData["Title"] = "Users";
    var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    var currentRole = User.FindFirst(ClaimTypes.Role)?.Value;
    var isAdmin = currentRole == nameof(SystemRole.SystemAdmin);
    var isNotImpersonating = User.FindFirst("OriginalUserId") == null;
    var showImpersonate = Model.IsDevelopment && isAdmin && isNotImpersonating;
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-people-fill"></i> Users</h2>
            <p class="text-muted">Manage administrator accounts</p>
        </div>
        <div class="col text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New User
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Users.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No users found. Click "Add New User" to create one.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Committees</th>
                                <th>Status</th>
                                <th>Last Login</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                var committees = Model.UserCommittees.GetValueOrDefault(user.Id);
                                <tr>
                                    <td><a asp-page="Details" asp-route-id="@user.Id" class="text-decoration-none"><strong>@user.Name</strong></a></td>
                                    <td>
                                        <small><a href="mailto:@user.Email">@user.Email</a></small>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@user.SystemRole</span>
                                    </td>
                                    <td>
                                        @if (committees != null && committees.Any())
                                        {
                                            @foreach (var cm in committees)
                                            {
                                                var roleBadge = cm.Role == CommitteeRole.Head ? "bg-warning text-dark" : "bg-light text-dark border";
                                                <div class="mb-1">
                                                    <small>@cm.HierarchyPath</small>
                                                    <span class="badge @roleBadge" style="font-size:.65em;">@cm.Role</span>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <small class="text-muted">-</small>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.LastLoginAt.HasValue)
                                        {
                                            <small>@user.LastLoginAt.Value.ToString("yyyy-MM-dd HH:mm")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="Details" asp-route-id="@user.Id" class="btn btn-outline-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                            @if (showImpersonate && currentUserId != user.Id.ToString())
                                            {
                                                <form asp-page="Impersonate" asp-route-id="@user.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-outline-dark btn-sm" title="Impersonate (dev only)">
                                                        <i class="bi bi-incognito"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
