@page "{id:int}"
@model ReportingSystem.Pages.Admin.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete User</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this user? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9"><strong>@Model.User.Name</strong></dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.User.Email</dd>

                        <dt class="col-sm-3">Role</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Model.User.SystemRole</span>
                        </dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.User.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.User.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>

                    @if (Model.MagicLinkCount > 0)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            This user has <strong>@Model.MagicLinkCount</strong> magic link(s) that will also be deleted.
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="User.Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
