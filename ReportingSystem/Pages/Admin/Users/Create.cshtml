@page
@model ReportingSystem.Pages.Admin.Users.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create New User</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="User.Name" class="form-label"></label>
                                <input asp-for="User.Name" class="form-control" placeholder="Full name" />
                                <span asp-validation-for="User.Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="User.Email" class="form-label"></label>
                                <input asp-for="User.Email" class="form-control" type="email" placeholder="email@example.com" />
                                <span asp-validation-for="User.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="User.SystemRole" class="form-label">System Role</label>
                                <select asp-for="User.SystemRole" class="form-select"
                                        asp-items="Html.GetEnumSelectList<ReportingSystem.Models.SystemRole>()">
                                </select>
                                <span asp-validation-for="User.SystemRole" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="User.Title" class="form-label">Job Title</label>
                                <input asp-for="User.Title" class="form-control" placeholder="e.g. Director, Engineer" />
                            </div>

                            <div class="col-md-4 mb-3">
                                <div class="form-check mt-4 pt-2">
                                    <input asp-for="User.IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="User.IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Note:</strong> Users authenticate via magic link email. No password is required.
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Create User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
