@page "{id:int}"
@model ReportingSystem.Pages.Admin.Users.DetailsModel
@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-person-fill"></i> User Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9"><strong>@Model.User.Name</strong></dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">
                            <a href="mailto:@Model.User.Email">@Model.User.Email</a>
                        </dd>

                        <dt class="col-sm-3">Role</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Model.User.SystemRole</span>
                        </dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.User.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.User.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                        <dt class="col-sm-3">Last Login</dt>
                        <dd class="col-sm-9">
                            @if (Model.User.LastLoginAt.HasValue)
                            {
                                @Model.User.LastLoginAt.Value.ToString("yyyy-MM-dd HH:mm:ss")
                            }
                            else
                            {
                                <span class="text-muted">Never</span>
                            }
                        </dd>
                    </dl>

                    @if (Model.RecentMagicLinks.Any())
                    {
                        <hr />
                        <h5><i class="bi bi-link-45deg"></i> Recent Magic Links</h5>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Created</th>
                                        <th>Expires</th>
                                        <th>Status</th>
                                        <th>IP Address</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var link in Model.RecentMagicLinks)
                                    {
                                        <tr>
                                            <td><small>@link.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small></td>
                                            <td><small>@link.ExpiresAt.ToString("yyyy-MM-dd HH:mm")</small></td>
                                            <td>
                                                @if (link.IsUsed)
                                                {
                                                    <span class="badge bg-success">Used</span>
                                                }
                                                else if (link.ExpiresAt < DateTime.UtcNow)
                                                {
                                                    <span class="badge bg-secondary">Expired</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Pending</span>
                                                }
                                            </td>
                                            <td><small>@(link.IpAddress ?? "-")</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Model.BackUrl" class="btn btn-secondary">
                            <i class="bi @Model.BackIcon"></i> @Model.BackLabel
                        </a>
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.User.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@Model.User.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
