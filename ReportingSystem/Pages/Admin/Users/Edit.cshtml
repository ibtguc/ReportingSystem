@page "{id:int}"
@model ReportingSystem.Pages.Admin.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit User</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="User.Id" />
                        <input type="hidden" asp-for="User.CreatedAt" />
                        <input type="hidden" asp-for="User.LastLoginAt" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="User.Name" class="form-label"></label>
                                <input asp-for="User.Name" class="form-control" placeholder="Full name" />
                                <span asp-validation-for="User.Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="User.Email" class="form-label"></label>
                                <input asp-for="User.Email" class="form-control" type="email" placeholder="email@example.com" />
                                <span asp-validation-for="User.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="User.Role" class="form-label"></label>
                                <select asp-for="User.Role" asp-items="Model.RoleOptions" class="form-select"></select>
                                <span asp-validation-for="User.Role" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="User.JobTitle" class="form-label"></label>
                                <input asp-for="User.JobTitle" class="form-control" placeholder="e.g. Senior Developer" />
                                <span asp-validation-for="User.JobTitle" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="User.OrganizationalUnitId" class="form-label"></label>
                                <select asp-for="User.OrganizationalUnitId" asp-items="Model.OrgUnitOptions" class="form-select"></select>
                                <span asp-validation-for="User.OrganizationalUnitId" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <div class="form-check mt-4 pt-2">
                                    <input asp-for="User.IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="User.IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <p class="text-muted mb-1"><small><strong>Created:</strong> @Model.User.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small></p>
                            </div>
                            <div class="col-md-6">
                                <p class="text-muted mb-1">
                                    <small>
                                        <strong>Last Login:</strong>
                                        @if (Model.User.LastLoginAt.HasValue)
                                        {
                                            @Model.User.LastLoginAt.Value.ToString("yyyy-MM-dd HH:mm")
                                        }
                                        else
                                        {
                                            <text>Never</text>
                                        }
                                    </small>
                                </p>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
