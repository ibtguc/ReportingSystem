@page "{id:int}"
@model ReportingSystem.Pages.Admin.Organization.Committees.DeleteModel
@{
    ViewData["Title"] = "Delete Committee";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Committee</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this committee?
                        This will also remove all memberships and shadow assignments.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9"><strong>@Model.Committee.Name</strong></dd>

                        <dt class="col-sm-3">Level</dt>
                        <dd class="col-sm-9"><span class="badge bg-primary">@Model.Committee.HierarchyLevel</span></dd>

                        <dt class="col-sm-3">Sector</dt>
                        <dd class="col-sm-9">@(Model.Committee.Sector ?? "-")</dd>

                        <dt class="col-sm-3">Members</dt>
                        <dd class="col-sm-9">@Model.MemberCount active member(s)</dd>
                    </dl>

                    @if (Model.SubCommitteeCount > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle"></i>
                            This committee has <strong>@Model.SubCommitteeCount</strong> sub-committee(s).
                            You must remove all sub-committees before deleting this one.
                        </div>
                    }

                    <form method="post" asp-route-id="@Model.Committee.Id">
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            @if (!Model.HasDependencies || Model.SubCommitteeCount == 0)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete Committee
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
