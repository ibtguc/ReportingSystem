@page
@model ReportingSystem.Pages.Admin.Organization.Committees.CreateModel
@{
    ViewData["Title"] = "Create Committee";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create Committee</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Committee.Name" class="form-label">Committee Name</label>
                            <input asp-for="Committee.Name" class="form-control" placeholder="e.g. Academic Programs Directorate" />
                            <span asp-validation-for="Committee.Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Committee.HierarchyLevel" class="form-label">Hierarchy Level</label>
                                <select asp-for="Committee.HierarchyLevel" class="form-select">
                                    <option value="@((int)ReportingSystem.Models.HierarchyLevel.TopLevel)">TopLevel</option>
                                    <option value="@((int)ReportingSystem.Models.HierarchyLevel.Directors)">Directors</option>
                                    <option value="@((int)ReportingSystem.Models.HierarchyLevel.Functions)">Functions</option>
                                    <option value="@((int)ReportingSystem.Models.HierarchyLevel.Processes)">Processes</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Committee.ParentCommitteeId" class="form-label">Parent Committee</label>
                                <select asp-for="Committee.ParentCommitteeId" class="form-select"
                                        asp-items="Model.ParentOptions">
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Committee.Sector" class="form-label">Sector</label>
                                <input asp-for="Committee.Sector" class="form-control" placeholder="e.g. Academic Affairs" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-check mt-4 pt-2">
                                    <input asp-for="Committee.IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="Committee.IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Committee.Description" class="form-label">Description</label>
                            <textarea asp-for="Committee.Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Create Committee
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
