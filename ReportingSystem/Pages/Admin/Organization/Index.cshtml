@page
@model ReportingSystem.Pages.Admin.Organization.IndexModel
@{
    ViewData["Title"] = "Organization Structure";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-diagram-3-fill"></i> Organization Structure</h2>
            <p class="text-muted">Hierarchical view of the organizational reporting structure</p>
        </div>
        <div class="col-auto">
            <a asp-page="Committees/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Committee
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-bg-primary shadow-sm">
                <div class="card-body text-center">
                    <h3 class="mb-0">@Model.Stats.committees</h3>
                    <small>Active Committees</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-success shadow-sm">
                <div class="card-body text-center">
                    <h3 class="mb-0">@Model.Stats.users</h3>
                    <small>Active Users</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-info shadow-sm">
                <div class="card-body text-center">
                    <h3 class="mb-0">@Model.Stats.memberships</h3>
                    <small>Active Memberships</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-warning shadow-sm">
                <div class="card-body text-center">
                    <h3 class="mb-0">@Model.Stats.shadows</h3>
                    <small>Shadow Assignments</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Chairman & Office -->
    @if (Model.Chairman != null)
    {
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-dark text-white">
                <i class="bi bi-star-fill"></i> Chairman / CEO
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-person-fill fs-3 me-3 text-dark"></i>
                    <div>
                        <a asp-page="/Admin/Users/Details" asp-route-id="@Model.Chairman.Id" asp-route-returnTo="org" class="text-decoration-none"><strong>@Model.Chairman.Name</strong></a><br />
                        <small class="text-muted">@Model.Chairman.Title &mdash; @Model.Chairman.Email</small>
                    </div>
                </div>

                @if (Model.ChairmanOfficeMembers.Any())
                {
                    <h6 class="mt-3"><i class="bi bi-building"></i> Chairman's Office</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Rank</th>
                                    <th>Name</th>
                                    <th>Title</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in Model.ChairmanOfficeMembers)
                                {
                                    <tr>
                                        <td><span class="badge bg-secondary">@member.ChairmanOfficeRank</span></td>
                                        <td><a asp-page="/Admin/Users/Details" asp-route-id="@member.Id" asp-route-returnTo="org" class="text-decoration-none">@member.Name</a></td>
                                        <td><small>@member.Title</small></td>
                                        <td><small><a href="mailto:@member.Email">@member.Email</a></small></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Committee Hierarchy Tree -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span><i class="bi bi-diagram-3"></i> Committee Hierarchy</span>
            <button class="btn btn-sm btn-light" onclick="toggleAllTree()">
                <i class="bi bi-arrows-expand"></i> Expand/Collapse All
            </button>
        </div>
        <div class="card-body">
            @if (!Model.GetRootCommittees().Any())
            {
                <div class="alert alert-info mb-0">
                    <i class="bi bi-info-circle"></i> No committees defined yet.
                    <a asp-page="Committees/Create">Create the first committee</a>.
                </div>
            }
            else
            {
                @foreach (var root in Model.GetRootCommittees())
                {
                    @await Html.PartialAsync("_CommitteeTreeNode", (root, Model, 0))
                }
            }
        </div>
    </div>
</div>

@section Scripts {
<style>
    @@keyframes highlight-pulse {
        0%   { background-color: rgba(255, 193, 7, 0.5); }
        50%  { background-color: rgba(255, 193, 7, 0.2); }
        100% { background-color: transparent; }
    }
    .highlight-pulse {
        animation: highlight-pulse 2s ease-in-out;
        border-radius: 4px;
    }
</style>
<script>
    function toggleChildren(id) {
        var el = document.getElementById('children-' + id);
        var icon = document.getElementById('icon-' + id);
        if (el) {
            el.classList.toggle('d-none');
            if (icon) {
                icon.classList.toggle('bi-chevron-right');
                icon.classList.toggle('bi-chevron-down');
            }
        }
    }
    var allExpanded = false;
    function toggleAllTree() {
        allExpanded = !allExpanded;
        document.querySelectorAll('[id^="children-"]').forEach(function(el) {
            if (allExpanded) el.classList.remove('d-none');
            else el.classList.add('d-none');
        });
        document.querySelectorAll('[id^="icon-"]').forEach(function(icon) {
            if (allExpanded) {
                icon.classList.remove('bi-chevron-right');
                icon.classList.add('bi-chevron-down');
            } else {
                icon.classList.remove('bi-chevron-down');
                icon.classList.add('bi-chevron-right');
            }
        });
    }

    @if (Model.Highlight.HasValue)
    {
        <text>
        (function() {
            var ancestorIds = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.HighlightAncestorIds));
            ancestorIds.forEach(function(id) {
                var el = document.getElementById('children-' + id);
                var icon = document.getElementById('icon-' + id);
                if (el) {
                    el.classList.remove('d-none');
                    if (icon) {
                        icon.classList.remove('bi-chevron-right');
                        icon.classList.add('bi-chevron-down');
                    }
                }
            });

            var node = document.getElementById('node-@Model.Highlight.Value');
            if (node) {
                setTimeout(function() {
                    node.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    var row = node.querySelector('.d-flex');
                    if (row) row.classList.add('highlight-pulse');
                }, 200);
            }
        })();
        </text>
    }
</script>
}
