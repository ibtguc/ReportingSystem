@page
@using ReportingSystem.Models
@model ReportingSystem.Pages.Admin.Templates.IndexModel
@{
    ViewData["Title"] = "Report Templates";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-file-earmark-ruled"></i> Report Templates</h2>
            <p class="text-muted">Manage report templates and their field definitions</p>
        </div>
        <div class="col text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Template
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Templates.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No report templates found. Click "New Template" to create one.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var template in Model.Templates)
            {
                var fieldCount = Model.FieldCounts.GetValueOrDefault(template.Id);
                var periodCount = Model.PeriodCounts.GetValueOrDefault(template.Id);
                var reportCount = Model.ReportCounts.GetValueOrDefault(template.Id);
                var assignmentCount = Model.AssignmentCounts.GetValueOrDefault(template.Id);

                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card shadow-sm h-100 @(!template.IsActive ? "border-secondary opacity-75" : "")">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                @template.Name
                                @if (!template.IsActive)
                                {
                                    <span class="badge bg-secondary ms-1">Inactive</span>
                                }
                            </h5>
                            <span class="badge bg-info">v@(template.Version)</span>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(template.Description))
                            {
                                <p class="card-text text-muted small mb-3">@template.Description</p>
                            }

                            <div class="row text-center mb-3">
                                <div class="col-3">
                                    <div class="fw-bold">@fieldCount</div>
                                    <small class="text-muted">Fields</small>
                                </div>
                                <div class="col-3">
                                    <div class="fw-bold">@periodCount</div>
                                    <small class="text-muted">Periods</small>
                                </div>
                                <div class="col-3">
                                    <div class="fw-bold">@reportCount</div>
                                    <small class="text-muted">Reports</small>
                                </div>
                                <div class="col-3">
                                    <div class="fw-bold">@assignmentCount</div>
                                    <small class="text-muted">Assigned</small>
                                </div>
                            </div>

                            <div class="mb-2">
                                <span class="badge bg-primary">@ReportSchedule.DisplayName(template.Schedule)</span>
                                @if (template.IncludeSuggestedActions)
                                {
                                    <span class="badge bg-outline-secondary border">Actions</span>
                                }
                                @if (template.IncludeNeededResources)
                                {
                                    <span class="badge bg-outline-secondary border">Resources</span>
                                }
                                @if (template.IncludeNeededSupport)
                                {
                                    <span class="badge bg-outline-secondary border">Support</span>
                                }
                            </div>

                            <small class="text-muted d-block">
                                Created @template.CreatedAt.ToString("MMM dd, yyyy")
                                @if (template.CreatedBy != null)
                                {
                                    <span>by @template.CreatedBy.Name</span>
                                }
                            </small>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group btn-group-sm w-100">
                                <a asp-page="Details" asp-route-id="@template.Id" class="btn btn-outline-primary" title="View details & fields">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-page="Edit" asp-route-id="@template.Id" class="btn btn-outline-secondary" title="Edit template">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-page="/Admin/Periods/Index" asp-route-templateId="@template.Id" class="btn btn-outline-info" title="Manage periods">
                                    <i class="bi bi-calendar3"></i> Periods
                                </a>
                                <a asp-page="Delete" asp-route-id="@template.Id" class="btn btn-outline-danger" title="Delete template">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
