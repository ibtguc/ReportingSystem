@page
@model ReportingSystem.Pages.Admin.Templates.IndexModel
@{
    ViewData["Title"] = "Report Templates";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3><i class="bi bi-file-earmark-ruled"></i> Report Templates</h3>
            <p class="text-muted mb-0">Manage configurable report templates for committees and hierarchy levels</p>
        </div>
        <div class="d-flex gap-2">
            <div class="form-check form-switch mt-2">
                <input class="form-check-input" type="checkbox" id="showInactive"
                       onchange="window.location.href='?ShowInactive=' + this.checked"
                       @(Model.ShowInactive ? "checked" : "")>
                <label class="form-check-label" for="showInactive">Show inactive</label>
            </div>
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Template
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Templates.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-file-earmark-ruled display-1 text-muted"></i>
            <h5 class="mt-3 text-muted">No templates found</h5>
            <p class="text-muted">Create your first report template to get started.</p>
            <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create Template</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var template in Model.Templates)
            {
                var usageCount = Model.UsageCounts.GetValueOrDefault(template.Id);
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm @(!template.IsActive ? "border-secondary opacity-75" : "")">
                        <div class="card-header d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="card-title mb-1">
                                    @template.Name
                                    @if (template.IsDefault)
                                    {
                                        <span class="badge bg-info ms-1">Default</span>
                                    }
                                    @if (!template.IsActive)
                                    {
                                        <span class="badge bg-secondary ms-1">Inactive</span>
                                    }
                                </h5>
                            </div>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(template.Description))
                            {
                                <p class="card-text text-muted small">@template.Description</p>
                            }
                            <div class="mb-2">
                                @if (template.ReportType.HasValue)
                                {
                                    <span class="badge bg-primary me-1"><i class="bi bi-file-text"></i> @template.ReportType</span>
                                }
                                @if (template.HierarchyLevel.HasValue)
                                {
                                    <span class="badge bg-success me-1"><i class="bi bi-diagram-3"></i> @template.HierarchyLevel</span>
                                }
                                @if (template.Committee != null)
                                {
                                    <span class="badge bg-warning text-dark me-1"><i class="bi bi-people"></i> @template.Committee.Name</span>
                                }
                                @if (template.CommitteeId == null && template.HierarchyLevel == null)
                                {
                                    <span class="badge bg-secondary me-1"><i class="bi bi-globe"></i> Universal</span>
                                }
                            </div>
                            <div class="small text-muted">
                                <div class="row">
                                    <div class="col-6">
                                        <i class="bi bi-file-earmark-text"></i> Used in <strong>@usageCount</strong> reports
                                    </div>
                                    <div class="col-6 text-end">
                                        <i class="bi bi-person"></i> @template.CreatedBy?.Name
                                    </div>
                                </div>
                            </div>
                            <hr class="my-2">
                            <div class="small">
                                <strong>Sections:</strong>
                                @if (template.IncludeSuggestedAction)
                                {
                                    <span class="badge @(template.RequireSuggestedAction ? "bg-danger" : "bg-outline-secondary border") me-1">
                                        Suggested Action @(template.RequireSuggestedAction ? "*" : "")
                                    </span>
                                }
                                @if (template.IncludeNeededResources)
                                {
                                    <span class="badge @(template.RequireNeededResources ? "bg-danger" : "bg-outline-secondary border") me-1">
                                        Resources @(template.RequireNeededResources ? "*" : "")
                                    </span>
                                }
                                @if (template.IncludeNeededSupport)
                                {
                                    <span class="badge @(template.RequireNeededSupport ? "bg-danger" : "bg-outline-secondary border") me-1">
                                        Support @(template.RequireNeededSupport ? "*" : "")
                                    </span>
                                }
                                @if (template.IncludeSpecialRemarks)
                                {
                                    <span class="badge @(template.RequireSpecialRemarks ? "bg-danger" : "bg-outline-secondary border") me-1">
                                        Remarks @(template.RequireSpecialRemarks ? "*" : "")
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-page="Details" asp-route-id="@template.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <div>
                                <a asp-page="Edit" asp-route-id="@template.Id" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                @if (!template.IsDefault)
                                {
                                    <a asp-page="Delete" asp-route-id="@template.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
