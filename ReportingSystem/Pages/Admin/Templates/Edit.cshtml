@page "{id:int}"
@model ReportingSystem.Pages.Admin.Templates.EditModel
@{
    ViewData["Title"] = "Edit Template";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Template: @Model.Template.Name</h4>
                </div>
                <div class="card-body">
                    @if (Model.UsageCount > 0)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            This template is used by <strong>@Model.UsageCount</strong> report@(Model.UsageCount != 1 ? "s" : "").
                            Changes will not affect existing reports.
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Template.Name" class="form-label fw-semibold">Template Name *</label>
                            <input asp-for="Template.Name" class="form-control" />
                            <span asp-validation-for="Template.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Template.Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Template.Description" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header"><i class="bi bi-funnel"></i> Template Scope</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Template.ReportType" class="form-label">Report Type</label>
                                        <select asp-for="Template.ReportType" class="form-select">
                                            <option value="">Any type</option>
                                            @foreach (var rt in Enum.GetValues<ReportingSystem.Models.ReportType>())
                                            {
                                                <option value="@rt">@rt</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Template.HierarchyLevel" class="form-label">Hierarchy Level</label>
                                        <select asp-for="Template.HierarchyLevel" class="form-select">
                                            <option value="">Any level</option>
                                            @foreach (var hl in Enum.GetValues<ReportingSystem.Models.HierarchyLevel>())
                                            {
                                                <option value="@hl">@hl</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Template.CommitteeId" class="form-label">Specific Committee</label>
                                        <select asp-for="Template.CommitteeId" class="form-select">
                                            <option value="">Any committee</option>
                                            @foreach (var opt in Model.CommitteeOptions)
                                            {
                                                <option value="@opt.Value">@opt.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Template.BodyTemplate" class="form-label fw-semibold">Body Template</label>
                            <div class="form-text mb-2">HTML content that pre-fills the report body when using this template.</div>
                            <textarea asp-for="Template.BodyTemplate" class="form-control rich-text-source" rows="10"></textarea>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header"><i class="bi bi-layout-text-sidebar"></i> Optional Sections</div>
                            <div class="card-body">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Section</th>
                                            <th class="text-center">Include</th>
                                            <th class="text-center">Required</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Suggested Action</td>
                                            <td class="text-center"><input asp-for="Template.IncludeSuggestedAction" class="form-check-input" type="checkbox" /></td>
                                            <td class="text-center"><input asp-for="Template.RequireSuggestedAction" class="form-check-input" type="checkbox" /></td>
                                        </tr>
                                        <tr>
                                            <td>Needed Resources</td>
                                            <td class="text-center"><input asp-for="Template.IncludeNeededResources" class="form-check-input" type="checkbox" /></td>
                                            <td class="text-center"><input asp-for="Template.RequireNeededResources" class="form-check-input" type="checkbox" /></td>
                                        </tr>
                                        <tr>
                                            <td>Needed Support</td>
                                            <td class="text-center"><input asp-for="Template.IncludeNeededSupport" class="form-check-input" type="checkbox" /></td>
                                            <td class="text-center"><input asp-for="Template.RequireNeededSupport" class="form-check-input" type="checkbox" /></td>
                                        </tr>
                                        <tr>
                                            <td>Special Remarks</td>
                                            <td class="text-center"><input asp-for="Template.IncludeSpecialRemarks" class="form-check-input" type="checkbox" /></td>
                                            <td class="text-center"><input asp-for="Template.RequireSpecialRemarks" class="form-check-input" type="checkbox" /></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Template.IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="Template.IsActive" class="form-check-label">Active</label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Details" asp-route-id="@Model.Template.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
