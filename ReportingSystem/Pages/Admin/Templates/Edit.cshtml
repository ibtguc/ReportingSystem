@page "{id:int}"
@model ReportingSystem.Pages.Admin.Templates.EditModel
@{
    ViewData["Title"] = "Edit Template";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Template: @Model.Template.Name</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Template.Id" />
                        <input type="hidden" asp-for="Template.CreatedAt" />
                        <input type="hidden" asp-for="Template.CreatedById" />
                        <input type="hidden" asp-for="Template.Version" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <h5 class="border-bottom pb-2 mb-3">Basic Information</h5>

                        <div class="mb-3">
                            <label asp-for="Template.Name" class="form-label"></label>
                            <input asp-for="Template.Name" class="form-control" />
                            <span asp-validation-for="Template.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Template.Description" class="form-label"></label>
                            <textarea asp-for="Template.Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Template.Schedule" class="form-label"></label>
                                <select asp-for="Template.Schedule" asp-items="Model.ScheduleOptions" class="form-select"></select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Status</label>
                                <div class="form-check form-switch mt-2">
                                    <input asp-for="Template.IsActive" class="form-check-input" />
                                    <label asp-for="Template.IsActive" class="form-check-label">Active</label>
                                </div>
                            </div>
                        </div>

                        <h5 class="border-bottom pb-2 mb-3 mt-4">Standard Sections</h5>

                        <div class="mb-2 form-check">
                            <input asp-for="Template.IncludeSuggestedActions" class="form-check-input" />
                            <label asp-for="Template.IncludeSuggestedActions" class="form-check-label">
                                Suggested Actions
                            </label>
                        </div>

                        <div class="mb-2 form-check">
                            <input asp-for="Template.IncludeNeededResources" class="form-check-input" />
                            <label asp-for="Template.IncludeNeededResources" class="form-check-label">
                                Needed Resources
                            </label>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Template.IncludeNeededSupport" class="form-check-input" />
                            <label asp-for="Template.IncludeNeededSupport" class="form-check-label">
                                Needed Support
                            </label>
                        </div>

                        <h5 class="border-bottom pb-2 mb-3 mt-4">Settings</h5>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Template.AutoSaveIntervalSeconds" class="form-label"></label>
                                <input asp-for="Template.AutoSaveIntervalSeconds" class="form-control" type="number" min="10" max="600" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Template.MaxAttachmentSizeMb" class="form-label"></label>
                                <input asp-for="Template.MaxAttachmentSizeMb" class="form-control" type="number" min="1" max="100" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Template.AllowedFileTypes" class="form-label"></label>
                            <input asp-for="Template.AllowedFileTypes" class="form-control" />
                        </div>

                        <div class="mb-2 form-check">
                            <input asp-for="Template.AllowPrePopulation" class="form-check-input" />
                            <label asp-for="Template.AllowPrePopulation" class="form-check-label">
                                Allow pre-populating from previous period
                            </label>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Template.AllowBulkImport" class="form-check-input" />
                            <label asp-for="Template.AllowBulkImport" class="form-check-label">
                                Allow bulk data import
                            </label>
                        </div>

                        <h5 class="border-bottom pb-2 mb-3 mt-4">Version Control</h5>
                        <p class="text-muted small">Current version: <strong>v@(Model.Template.Version)</strong></p>

                        <div class="mb-2 form-check">
                            <input asp-for="BumpVersion" class="form-check-input" />
                            <label asp-for="BumpVersion" class="form-check-label">
                                Bump version number (v@(Model.Template.Version) â†’ v@(Model.Template.Version + 1))
                            </label>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewVersionNotes" class="form-label">Version Notes</label>
                            <input asp-for="NewVersionNotes" class="form-control" placeholder="Describe what changed in this version" />
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Details" asp-route-id="@Model.Template.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
