@page "{id:int}"
@model ReportingSystem.Pages.Admin.Templates.DetailsModel
@{
    ViewData["Title"] = $"Template: {Model.Template.Name}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-file-earmark-ruled"></i> @Model.Template.Name
                        @if (Model.Template.IsDefault)
                        {
                            <span class="badge bg-info ms-2">Default</span>
                        }
                        @if (!Model.Template.IsActive)
                        {
                            <span class="badge bg-secondary ms-2">Inactive</span>
                        }
                    </h4>
                    <div>
                        <a asp-page="Edit" asp-route-id="@Model.Template.Id" class="btn btn-sm btn-light">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Template.Description))
                    {
                        <p class="lead text-muted">@Model.Template.Description</p>
                    }

                    <!-- Metadata -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <strong>Report Type:</strong><br />
                            @if (Model.Template.ReportType.HasValue)
                            {
                                <span class="badge bg-primary">@Model.Template.ReportType</span>
                            }
                            else
                            {
                                <span class="text-muted">Any type</span>
                            }
                        </div>
                        <div class="col-md-3">
                            <strong>Scope:</strong><br />
                            @if (Model.Template.Committee != null)
                            {
                                <span class="badge bg-warning text-dark">@Model.Template.Committee.Name</span>
                            }
                            else if (Model.Template.HierarchyLevel.HasValue)
                            {
                                <span class="badge bg-success">Level: @Model.Template.HierarchyLevel</span>
                            }
                            else
                            {
                                <span class="text-muted">Universal</span>
                            }
                        </div>
                        <div class="col-md-3">
                            <strong>Usage:</strong><br />
                            @Model.UsageCount report@(Model.UsageCount != 1 ? "s" : "")
                        </div>
                        <div class="col-md-3">
                            <strong>Created:</strong><br />
                            @Model.Template.CreatedAt.ToString("d MMM yyyy") by @if (Model.Template.CreatedBy != null) { <a asp-page="/Admin/Users/Details" asp-route-id="@Model.Template.CreatedById" class="text-decoration-none">@Model.Template.CreatedBy.Name</a> }
                        </div>
                    </div>

                    <!-- Sections Configuration -->
                    <h5><i class="bi bi-layout-text-sidebar"></i> Section Configuration</h5>
                    <table class="table table-sm table-bordered mb-4">
                        <thead class="table-light">
                            <tr>
                                <th>Section</th>
                                <th class="text-center">Included</th>
                                <th class="text-center">Required</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Suggested Action</td>
                                <td class="text-center">
                                    @if (Model.Template.IncludeSuggestedAction) { <i class="bi bi-check-circle-fill text-success"></i> } else { <i class="bi bi-x-circle text-muted"></i> }
                                </td>
                                <td class="text-center">
                                    @if (Model.Template.RequireSuggestedAction) { <i class="bi bi-check-circle-fill text-danger"></i> } else { <i class="bi bi-dash text-muted"></i> }
                                </td>
                            </tr>
                            <tr>
                                <td>Needed Resources</td>
                                <td class="text-center">
                                    @if (Model.Template.IncludeNeededResources) { <i class="bi bi-check-circle-fill text-success"></i> } else { <i class="bi bi-x-circle text-muted"></i> }
                                </td>
                                <td class="text-center">
                                    @if (Model.Template.RequireNeededResources) { <i class="bi bi-check-circle-fill text-danger"></i> } else { <i class="bi bi-dash text-muted"></i> }
                                </td>
                            </tr>
                            <tr>
                                <td>Needed Support</td>
                                <td class="text-center">
                                    @if (Model.Template.IncludeNeededSupport) { <i class="bi bi-check-circle-fill text-success"></i> } else { <i class="bi bi-x-circle text-muted"></i> }
                                </td>
                                <td class="text-center">
                                    @if (Model.Template.RequireNeededSupport) { <i class="bi bi-check-circle-fill text-danger"></i> } else { <i class="bi bi-dash text-muted"></i> }
                                </td>
                            </tr>
                            <tr>
                                <td>Special Remarks</td>
                                <td class="text-center">
                                    @if (Model.Template.IncludeSpecialRemarks) { <i class="bi bi-check-circle-fill text-success"></i> } else { <i class="bi bi-x-circle text-muted"></i> }
                                </td>
                                <td class="text-center">
                                    @if (Model.Template.RequireSpecialRemarks) { <i class="bi bi-check-circle-fill text-danger"></i> } else { <i class="bi bi-dash text-muted"></i> }
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Body Template Preview -->
                    @if (!string.IsNullOrEmpty(Model.Template.BodyTemplate))
                    {
                        <h5><i class="bi bi-file-text"></i> Body Template Preview</h5>
                        <div class="card mb-4">
                            <div class="card-body bg-light">
                                @Html.Raw(Model.Template.BodyTemplate)
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Templates
                    </a>
                    <div>
                        <a asp-page="Edit" asp-route-id="@Model.Template.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        @if (!Model.Template.IsDefault)
                        {
                            <a asp-page="Delete" asp-route-id="@Model.Template.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
