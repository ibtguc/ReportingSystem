@page "{id:int}"
@using ReportingSystem.Models
@model ReportingSystem.Pages.Admin.Templates.DetailsModel
@{
    ViewData["Title"] = $"Template: {Model.Template.Name}";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Template Header -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h2>
                <i class="bi bi-file-earmark-ruled"></i> @Model.Template.Name
                <span class="badge bg-info fs-6">v@(Model.Template.Version)</span>
                @if (!Model.Template.IsActive)
                {
                    <span class="badge bg-secondary fs-6">Inactive</span>
                }
            </h2>
            @if (!string.IsNullOrEmpty(Model.Template.Description))
            {
                <p class="text-muted">@Model.Template.Description</p>
            }
        </div>
        <div class="btn-group">
            <a asp-page="Edit" asp-route-id="@Model.Template.Id" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-page="/Admin/Periods/Index" asp-route-templateId="@Model.Template.Id" class="btn btn-outline-info">
                <i class="bi bi-calendar3"></i> Periods
            </a>
            <a asp-page="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card text-center">
                <div class="card-body py-2">
                    <h5 class="mb-0">@ReportSchedule.DisplayName(Model.Template.Schedule)</h5>
                    <small class="text-muted">Schedule</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center">
                <div class="card-body py-2">
                    <h5 class="mb-0">@Model.Fields.Count(f => f.IsActive)</h5>
                    <small class="text-muted">Fields</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center">
                <div class="card-body py-2">
                    <h5 class="mb-0">@Model.ActivePeriodCount</h5>
                    <small class="text-muted">Periods</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center">
                <div class="card-body py-2">
                    <h5 class="mb-0">@Model.TotalReportCount</h5>
                    <small class="text-muted">Reports</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center">
                <div class="card-body py-2">
                    <h5 class="mb-0">@Model.Assignments.Count</h5>
                    <small class="text-muted">Assigned</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center">
                <div class="card-body py-2">
                    <h5 class="mb-0">@(Model.Template.AutoSaveIntervalSeconds)s</h5>
                    <small class="text-muted">Auto-Save</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Fields Section (Left) -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-input-cursor-text"></i> Fields</h5>
                    <button class="btn btn-sm btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#addFieldForm">
                        <i class="bi bi-plus"></i> Add Field
                    </button>
                </div>

                <!-- Add Field Form (collapsible) -->
                <div class="collapse" id="addFieldForm">
                    <div class="card-body border-bottom bg-light">
                        <form method="post" asp-page-handler="AddField" asp-route-id="@Model.Template.Id">
                            <input type="hidden" asp-for="NewField.ReportTemplateId" value="@Model.Template.Id" />
                            <div class="row g-2">
                                <div class="col-md-4">
                                    <label asp-for="NewField.Label" class="form-label form-label-sm">Label *</label>
                                    <input asp-for="NewField.Label" class="form-control form-control-sm" required />
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="NewField.Type" class="form-label form-label-sm">Type</label>
                                    <select asp-for="NewField.Type" asp-items="Model.FieldTypeOptions" class="form-select form-select-sm"></select>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="NewField.Section" class="form-label form-label-sm">Section</label>
                                    <input asp-for="NewField.Section" class="form-control form-control-sm" placeholder="e.g., General, KPIs" />
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="NewField.SectionOrder" class="form-label form-label-sm">Sec. Order</label>
                                    <input asp-for="NewField.SectionOrder" class="form-control form-control-sm" type="number" />
                                </div>
                                <div class="col-md-1 d-flex align-items-end">
                                    <div class="form-check">
                                        <input asp-for="NewField.IsRequired" class="form-check-input" />
                                        <label asp-for="NewField.IsRequired" class="form-check-label form-label-sm">Req</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-2 mt-1">
                                <div class="col-md-4">
                                    <label asp-for="NewField.HelpText" class="form-label form-label-sm">Help Text</label>
                                    <input asp-for="NewField.HelpText" class="form-control form-control-sm" />
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="NewField.OptionsJson" class="form-label form-label-sm">Options (JSON)</label>
                                    <input asp-for="NewField.OptionsJson" class="form-control form-control-sm" placeholder='["Opt1","Opt2"]' />
                                </div>
                                <div class="col-md-2">
                                    <label asp-for="NewField.DefaultValue" class="form-label form-label-sm">Default</label>
                                    <input asp-for="NewField.DefaultValue" class="form-control form-control-sm" />
                                </div>
                                <div class="col-md-3 d-flex align-items-end">
                                    <button type="submit" class="btn btn-sm btn-success me-2">
                                        <i class="bi bi-plus-circle"></i> Add
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#addFieldForm">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (Model.Fields.Count == 0)
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-input-cursor-text fs-1"></i>
                            <p class="mt-2">No fields defined yet. Click "Add Field" to start building the template.</p>
                        </div>
                    }
                    else
                    {
                        var sections = Model.Fields
                            .GroupBy(f => f.Section ?? "(No Section)")
                            .OrderBy(g => g.Min(f => f.SectionOrder));

                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th style="width:5%">#</th>
                                        <th style="width:25%">Label</th>
                                        <th style="width:12%">Type</th>
                                        <th style="width:15%">Section</th>
                                        <th style="width:8%">Required</th>
                                        <th style="width:20%">Details</th>
                                        <th style="width:15%" class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ var idx = 0; }
                                    @foreach (var field in Model.Fields)
                                    {
                                        idx++;
                                        <tr class="@(!field.IsActive ? "table-secondary" : "")">
                                            <td>@idx</td>
                                            <td>
                                                <strong>@field.Label</strong>
                                                @if (!string.IsNullOrEmpty(field.FieldKey))
                                                {
                                                    <br /><code class="small">@field.FieldKey</code>
                                                }
                                                @if (!field.IsActive)
                                                {
                                                    <span class="badge bg-secondary ms-1">Inactive</span>
                                                }
                                            </td>
                                            <td><span class="badge bg-primary">@field.TypeDisplayName</span></td>
                                            <td>@(field.Section ?? "-")</td>
                                            <td>
                                                @if (field.IsRequired)
                                                {
                                                    <span class="badge bg-danger">Required</span>
                                                }
                                            </td>
                                            <td class="small">
                                                @if (field.IsCalculated && !string.IsNullOrEmpty(field.Formula))
                                                {
                                                    <span class="text-info"><i class="bi bi-calculator"></i> @field.Formula</span><br />
                                                }
                                                @if (!string.IsNullOrEmpty(field.HelpText))
                                                {
                                                    <span class="text-muted">@field.HelpText</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <form method="post" asp-page-handler="DeleteField"
                                                      asp-route-id="@Model.Template.Id"
                                                      asp-route-fieldId="@field.Id"
                                                      class="d-inline"
                                                      onsubmit="return confirm('Delete field \'@field.Label\'?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            <!-- Settings Info -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Template Settings</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-6">Standard Sections</dt>
                                <dd class="col-sm-6">
                                    @if (Model.Template.IncludeSuggestedActions) { <span class="badge bg-outline-secondary border me-1">Actions</span> }
                                    @if (Model.Template.IncludeNeededResources) { <span class="badge bg-outline-secondary border me-1">Resources</span> }
                                    @if (Model.Template.IncludeNeededSupport) { <span class="badge bg-outline-secondary border">Support</span> }
                                </dd>
                                <dt class="col-sm-6">Pre-Population</dt>
                                <dd class="col-sm-6">@(Model.Template.AllowPrePopulation ? "Enabled" : "Disabled")</dd>
                                <dt class="col-sm-6">Bulk Import</dt>
                                <dd class="col-sm-6">@(Model.Template.AllowBulkImport ? "Enabled" : "Disabled")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-6">Max Attachment Size</dt>
                                <dd class="col-sm-6">@(Model.Template.MaxAttachmentSizeMb) MB</dd>
                                <dt class="col-sm-6">Allowed File Types</dt>
                                <dd class="col-sm-6"><small>@(Model.Template.AllowedFileTypes ?? "All")</small></dd>
                                <dt class="col-sm-6">Created</dt>
                                <dd class="col-sm-6">@Model.Template.CreatedAt.ToString("MMM dd, yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Assignments Section (Right) -->
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Assignments</h5>
                    <button class="btn btn-sm btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#addAssignmentForm">
                        <i class="bi bi-plus"></i> Assign
                    </button>
                </div>

                <!-- Add Assignment Form (collapsible) -->
                <div class="collapse" id="addAssignmentForm">
                    <div class="card-body border-bottom bg-light">
                        <form method="post" asp-page-handler="AddAssignment" asp-route-id="@Model.Template.Id">
                            <input type="hidden" asp-for="NewAssignment.ReportTemplateId" value="@Model.Template.Id" />
                            <div class="mb-2">
                                <label asp-for="NewAssignment.AssignmentType" class="form-label form-label-sm">Type</label>
                                <select asp-for="NewAssignment.AssignmentType" asp-items="Model.AssignmentTypeOptions"
                                        class="form-select form-select-sm" id="assignmentType"
                                        onchange="toggleAssignmentFields()"></select>
                            </div>
                            <div class="mb-2" id="orgUnitField">
                                <label class="form-label form-label-sm">Org Unit</label>
                                <select asp-for="NewAssignment.TargetId" asp-items="Model.OrgUnitOptions" class="form-select form-select-sm">
                                    <option value="">-- Select --</option>
                                </select>
                                <div class="form-check mt-1">
                                    <input asp-for="NewAssignment.IncludeSubUnits" class="form-check-input" />
                                    <label asp-for="NewAssignment.IncludeSubUnits" class="form-check-label small">Include sub-units</label>
                                </div>
                            </div>
                            <div class="mb-2 d-none" id="roleField">
                                <label class="form-label form-label-sm">Role</label>
                                <select asp-for="NewAssignment.RoleValue" asp-items="Model.RoleOptions" class="form-select form-select-sm">
                                    <option value="">-- Select --</option>
                                </select>
                            </div>
                            <div class="mb-2 d-none" id="userField">
                                <label class="form-label form-label-sm">User</label>
                                <select name="NewAssignment.TargetId" asp-items="Model.UserOptions" class="form-select form-select-sm" id="userSelect">
                                    <option value="">-- Select --</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="bi bi-plus-circle"></i> Add Assignment
                            </button>
                        </form>
                    </div>
                </div>

                <div class="list-group list-group-flush">
                    @if (Model.Assignments.Count == 0)
                    {
                        <div class="list-group-item text-center text-muted py-4">
                            No assignments yet.
                        </div>
                    }
                    @foreach (var assignment in Model.Assignments)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <span class="badge bg-secondary me-1">@TemplateAssignmentType.DisplayName(assignment.AssignmentType)</span>
                                @if (assignment.AssignmentType == TemplateAssignmentType.Role)
                                {
                                    <span>@SystemRoles.DisplayName(assignment.RoleValue ?? "")</span>
                                }
                                else if (assignment.TargetId.HasValue)
                                {
                                    @if (assignment.AssignmentType == TemplateAssignmentType.OrgUnit)
                                    {
                                        var ou = Model.OrgUnitOptions.FirstOrDefault(o => o.Value == assignment.TargetId.ToString());
                                        <span>@(ou?.Text ?? $"Unit #{assignment.TargetId}")</span>
                                    }
                                    else
                                    {
                                        var user = Model.UserOptions.FirstOrDefault(u => u.Value == assignment.TargetId.ToString());
                                        <span>@(user?.Text ?? $"User #{assignment.TargetId}")</span>
                                    }
                                }
                                @if (assignment.IncludeSubUnits && assignment.AssignmentType == TemplateAssignmentType.OrgUnit)
                                {
                                    <br /><small class="text-muted">+ sub-units</small>
                                }
                            </div>
                            <form method="post" asp-page-handler="DeleteAssignment"
                                  asp-route-id="@Model.Template.Id"
                                  asp-route-assignmentId="@assignment.Id"
                                  onsubmit="return confirm('Remove this assignment?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-x"></i>
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Template.VersionNotes))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-clock-history"></i> Version Notes (v@(Model.Template.Version))</h6>
                    </div>
                    <div class="card-body small">
                        @Model.Template.VersionNotes
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleAssignmentFields() {
            var type = document.getElementById('assignmentType').value;
            document.getElementById('orgUnitField').classList.toggle('d-none', type !== 'OrgUnit');
            document.getElementById('roleField').classList.toggle('d-none', type !== 'Role');
            document.getElementById('userField').classList.toggle('d-none', type !== 'Individual');
        }
        toggleAssignmentFields();
    </script>
}
