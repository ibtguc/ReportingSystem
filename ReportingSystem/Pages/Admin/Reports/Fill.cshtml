@page "{id:int}"
@using ReportingSystem.Models
@using System.Text.Json
@model ReportingSystem.Pages.Admin.Reports.FillModel
@{
    ViewData["Title"] = $"Fill Report - {Model.Report.ReportTemplate.Name}";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Report Header -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h2><i class="bi bi-file-earmark-text"></i> @Model.Report.ReportTemplate.Name</h2>
            <p class="text-muted mb-1">
                Period: <strong>@Model.Report.ReportPeriod.Name</strong>
                <span class="badge @ReportStatus.BadgeClass(Model.Report.Status) ms-2">@Model.Report.StatusDisplayName</span>
            </p>
            <p class="text-muted">
                Author: <strong>@Model.Report.SubmittedBy.Name</strong>
                @if (Model.Report.SubmittedBy.OrganizationalUnit != null)
                {
                    <text> - @Model.Report.SubmittedBy.OrganizationalUnit.Name</text>
                }
            </p>
            @if (Model.Report.WasPrePopulated)
            {
                <div class="alert alert-info py-1 px-2 d-inline-block">
                    <small><i class="bi bi-info-circle"></i> Some fields were pre-populated from a previous period.</small>
                </div>
            }
        </div>
        <a asp-page="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <form method="post" asp-route-id="@Model.Report.Id" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        @{
            var sections = Model.Fields
                .GroupBy(f => f.Section ?? "General")
                .OrderBy(g => g.Min(f => f.SectionOrder));
        }

        @foreach (var section in sections)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">@(section.Key)</h5>
                </div>
                <div class="card-body">
                    @foreach (var field in section.OrderBy(f => f.FieldOrder))
                    {
                        var currentValue = Model.Values.GetValueOrDefault(field.Id);
                        var fieldValue = Model.FieldValues.GetValueOrDefault(field.Id);
                        var inputName = $"Values[{field.Id}]";

                        <div class="mb-3">
                            <label class="form-label" for="field_@field.Id">
                                @field.Label
                                @if (field.IsRequired)
                                {
                                    <span class="text-danger">*</span>
                                }
                                @if (field.IsCalculated)
                                {
                                    <span class="badge bg-info ms-1">Calculated</span>
                                }
                                @if (fieldValue?.WasPrePopulated == true)
                                {
                                    <span class="badge bg-warning text-dark ms-1">Pre-populated</span>
                                }
                            </label>

                            @switch (field.Type)
                            {
                                case FieldType.Text:
                                    if (field.MaxLength > 200)
                                    {
                                        <textarea name="@inputName" id="field_@field.Id" class="form-control"
                                                  rows="3" maxlength="@(field.MaxLength ?? 2000)">@currentValue</textarea>
                                    }
                                    else
                                    {
                                        <input type="text" name="@inputName" id="field_@field.Id"
                                               class="form-control" value="@currentValue"
                                               maxlength="@(field.MaxLength ?? 500)" />
                                    }
                                    break;

                                case FieldType.Numeric:
                                    <input type="number" name="@inputName" id="field_@field.Id"
                                           class="form-control" value="@currentValue"
                                           step="any"
                                           min="@(field.MinValue?.ToString() ?? "")"
                                           max="@(field.MaxValue?.ToString() ?? "")" />
                                    break;

                                case FieldType.Date:
                                    <input type="date" name="@inputName" id="field_@field.Id"
                                           class="form-control" value="@currentValue" />
                                    break;

                                case FieldType.Dropdown:
                                    <select name="@inputName" id="field_@field.Id" class="form-select">
                                        <option value="">-- Select --</option>
                                        @if (!string.IsNullOrEmpty(field.OptionsJson))
                                        {
                                            try
                                            {
                                                var options = JsonSerializer.Deserialize<string[]>(field.OptionsJson);
                                                if (options != null)
                                                {
                                                    foreach (var opt in options)
                                                    {
                                                        <option value="@opt" selected="@(currentValue == opt)">@opt</option>
                                                    }
                                                }
                                            }
                                            catch { }
                                        }
                                    </select>
                                    break;

                                case FieldType.Checkbox:
                                    <div class="form-check">
                                        <input type="hidden" name="@inputName" value="false" />
                                        <input type="checkbox" name="@inputName" id="field_@field.Id"
                                               class="form-check-input" value="true"
                                               checked="@(currentValue == "true")" />
                                        <label class="form-check-label" for="field_@field.Id">Yes</label>
                                    </div>
                                    break;

                                case FieldType.RichText:
                                    <textarea name="@inputName" id="field_@field.Id" class="form-control"
                                              rows="6">@currentValue</textarea>
                                    <div class="form-text">HTML formatting is supported.</div>
                                    break;

                                case FieldType.FileUpload:
                                    <input type="text" name="@inputName" id="field_@field.Id"
                                           class="form-control" value="@currentValue"
                                           placeholder="File upload will be available in a future update" readonly />
                                    break;

                                case FieldType.TableGrid:
                                    <textarea name="@inputName" id="field_@field.Id" class="form-control"
                                              rows="4" placeholder="Enter JSON data for table rows">@currentValue</textarea>
                                    <div class="form-text">Enter data as JSON array of objects.</div>
                                    break;
                            }

                            @if (!string.IsNullOrEmpty(field.HelpText))
                            {
                                <div class="form-text">@field.HelpText</div>
                            }

                            <span asp-validation-for="@($"Values[{field.Id}]")" class="text-danger"></span>
                        </div>
                    }
                </div>
            </div>
        }

        @if (Model.Fields.Count == 0)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                No fields have been defined for this template yet. Add fields in the
                <a asp-page="/Admin/Templates/Details" asp-route-id="@Model.Report.ReportTemplateId">template designer</a>.
            </div>
        }

    <!-- Upward Flow Sections (Phase 4) -->
    @if (Model.Report.ReportTemplate.IncludeSuggestedActions)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-lightbulb"></i> Suggested Actions</h5>
                <span class="badge bg-light text-dark">@Model.SuggestedActions.Count items</span>
            </div>
            <div class="card-body">
                @if (Model.SuggestedActions.Count > 0)
                {
                    <div class="table-responsive mb-3">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Priority</th>
                                    <th>Status</th>
                                    <th style="width:80px"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var action in Model.SuggestedActions)
                                {
                                    <tr>
                                        <td>
                                            <strong>@action.Title</strong>
                                            @if (!string.IsNullOrEmpty(action.Description))
                                            {
                                                <br /><small class="text-muted">@(action.Description.Length > 100 ? action.Description.Substring(0, 100) + "..." : action.Description)</small>
                                            }
                                        </td>
                                        <td><span class="badge bg-secondary">@ActionCategory.DisplayName(action.Category)</span></td>
                                        <td><span class="badge @ActionPriority.BadgeClass(action.Priority)">@action.Priority</span></td>
                                        <td><span class="badge @ActionStatus.BadgeClass(action.Status)">@ActionStatus.DisplayName(action.Status)</span></td>
                                        <td>
                                            @if (Model.Report.IsEditable)
                                            {
                                                <form method="post" asp-page-handler="RemoveSuggestedAction" asp-route-id="@Model.Report.Id" asp-route-actionId="@action.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Remove this suggested action?');">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

                @if (Model.Report.IsEditable)
                {
                    <div class="border rounded p-3 bg-light">
                        <h6><i class="bi bi-plus-circle"></i> Add Suggested Action</h6>
                        <form method="post" asp-page-handler="AddSuggestedAction" asp-route-id="@Model.Report.Id">
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <input type="text" name="NewSuggestedAction.Title" class="form-control" placeholder="Title *" required />
                                </div>
                                <div class="col-md-3 mb-2">
                                    <select name="NewSuggestedAction.Category" class="form-select">
                                        @foreach (var cat in ActionCategory.All)
                                        {
                                            <option value="@cat">@ActionCategory.DisplayName(cat)</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <select name="NewSuggestedAction.Priority" class="form-select">
                                        @foreach (var pri in ActionPriority.All)
                                        {
                                            <option value="@pri" selected="@(pri == ActionPriority.Medium)">@pri</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="mb-2">
                                <textarea name="NewSuggestedAction.Description" class="form-control" rows="2" placeholder="Description *" required></textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-2">
                                    <textarea name="NewSuggestedAction.Justification" class="form-control" rows="2" placeholder="Justification (optional)"></textarea>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <textarea name="NewSuggestedAction.ExpectedOutcome" class="form-control" rows="2" placeholder="Expected Outcome (optional)"></textarea>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <input type="text" name="NewSuggestedAction.Timeline" class="form-control" placeholder="Timeline (optional)" />
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info"><i class="bi bi-plus"></i> Add Action</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    }

    @if (Model.Report.ReportTemplate.IncludeNeededResources)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-box-seam"></i> Resource Requests</h5>
                <span class="badge bg-light text-dark">@Model.ResourceRequests.Count items</span>
            </div>
            <div class="card-body">
                @if (Model.ResourceRequests.Count > 0)
                {
                    <div class="table-responsive mb-3">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Urgency</th>
                                    <th>Est. Cost</th>
                                    <th>Status</th>
                                    <th style="width:80px"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model.ResourceRequests)
                                {
                                    <tr>
                                        <td>
                                            <strong>@request.Title</strong>
                                            @if (!string.IsNullOrEmpty(request.Quantity))
                                            {
                                                <span class="badge bg-secondary ms-1">Qty: @request.Quantity</span>
                                            }
                                        </td>
                                        <td><span class="badge bg-secondary">@ResourceCategory.DisplayName(request.Category)</span></td>
                                        <td><span class="badge @ResourceUrgency.BadgeClass(request.Urgency)">@request.Urgency</span></td>
                                        <td>@(request.EstimatedCost.HasValue ? $"{request.EstimatedCost:N2} {request.Currency}" : "-")</td>
                                        <td><span class="badge @ResourceStatus.BadgeClass(request.Status)">@ResourceStatus.DisplayName(request.Status)</span></td>
                                        <td>
                                            @if (Model.Report.IsEditable)
                                            {
                                                <form method="post" asp-page-handler="RemoveResourceRequest" asp-route-id="@Model.Report.Id" asp-route-requestId="@request.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Remove this resource request?');">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

                @if (Model.Report.IsEditable)
                {
                    <div class="border rounded p-3 bg-light">
                        <h6><i class="bi bi-plus-circle"></i> Add Resource Request</h6>
                        <form method="post" asp-page-handler="AddResourceRequest" asp-route-id="@Model.Report.Id">
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <input type="text" name="NewResourceRequest.Title" class="form-control" placeholder="Title *" required />
                                </div>
                                <div class="col-md-3 mb-2">
                                    <select name="NewResourceRequest.Category" class="form-select">
                                        @foreach (var cat in ResourceCategory.All)
                                        {
                                            <option value="@cat">@ResourceCategory.DisplayName(cat)</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <select name="NewResourceRequest.Urgency" class="form-select">
                                        @foreach (var urg in ResourceUrgency.All)
                                        {
                                            <option value="@urg" selected="@(urg == ResourceUrgency.Medium)">@urg</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="mb-2">
                                <textarea name="NewResourceRequest.Description" class="form-control" rows="2" placeholder="Description *" required></textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-3 mb-2">
                                    <input type="number" name="NewResourceRequest.Quantity" class="form-control" placeholder="Quantity" min="1" />
                                </div>
                                <div class="col-md-3 mb-2">
                                    <input type="number" name="NewResourceRequest.EstimatedCost" class="form-control" placeholder="Est. Cost" step="0.01" min="0" />
                                </div>
                                <div class="col-md-2 mb-2">
                                    <input type="text" name="NewResourceRequest.Currency" class="form-control" value="EGP" placeholder="Currency" />
                                </div>
                                <div class="col-md-4 mb-2">
                                    <textarea name="NewResourceRequest.Justification" class="form-control" rows="1" placeholder="Justification (optional)"></textarea>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-warning"><i class="bi bi-plus"></i> Add Request</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    }

    @if (Model.Report.ReportTemplate.IncludeNeededSupport)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-life-preserver"></i> Support Requests</h5>
                <span class="badge bg-light text-dark">@Model.SupportRequests.Count items</span>
            </div>
            <div class="card-body">
                @if (Model.SupportRequests.Count > 0)
                {
                    <div class="table-responsive mb-3">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Urgency</th>
                                    <th>Status</th>
                                    <th style="width:80px"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model.SupportRequests)
                                {
                                    <tr>
                                        <td>
                                            <strong>@request.Title</strong>
                                            @if (!string.IsNullOrEmpty(request.CurrentSituation))
                                            {
                                                <br /><small class="text-muted">@(request.CurrentSituation.Length > 80 ? request.CurrentSituation.Substring(0, 80) + "..." : request.CurrentSituation)</small>
                                            }
                                        </td>
                                        <td><span class="badge bg-secondary">@SupportCategory.DisplayName(request.Category)</span></td>
                                        <td><span class="badge @SupportUrgency.BadgeClass(request.Urgency)">@request.Urgency</span></td>
                                        <td><span class="badge @SupportStatus.BadgeClass(request.Status)">@SupportStatus.DisplayName(request.Status)</span></td>
                                        <td>
                                            @if (Model.Report.IsEditable)
                                            {
                                                <form method="post" asp-page-handler="RemoveSupportRequest" asp-route-id="@Model.Report.Id" asp-route-requestId="@request.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Remove this support request?');">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

                @if (Model.Report.IsEditable)
                {
                    <div class="border rounded p-3 bg-light">
                        <h6><i class="bi bi-plus-circle"></i> Add Support Request</h6>
                        <form method="post" asp-page-handler="AddSupportRequest" asp-route-id="@Model.Report.Id">
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <input type="text" name="NewSupportRequest.Title" class="form-control" placeholder="Title *" required />
                                </div>
                                <div class="col-md-3 mb-2">
                                    <select name="NewSupportRequest.Category" class="form-select">
                                        @foreach (var cat in SupportCategory.All)
                                        {
                                            <option value="@cat">@SupportCategory.DisplayName(cat)</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <select name="NewSupportRequest.Urgency" class="form-select">
                                        @foreach (var urg in SupportUrgency.All)
                                        {
                                            <option value="@urg" selected="@(urg == SupportUrgency.Medium)">@urg</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="mb-2">
                                <textarea name="NewSupportRequest.Description" class="form-control" rows="2" placeholder="Description *" required></textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <textarea name="NewSupportRequest.CurrentSituation" class="form-control" rows="2" placeholder="Current Situation (optional)"></textarea>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <textarea name="NewSupportRequest.DesiredOutcome" class="form-control" rows="2" placeholder="Desired Outcome (optional)"></textarea>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-danger"><i class="bi bi-plus"></i> Add Request</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    }

        <!-- Action Buttons -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Reports
                    </a>
                    <div>
                        <button type="submit" name="SubmitAction" value="save" class="btn btn-outline-primary me-2">
                            <i class="bi bi-floppy"></i> Save Draft
                        </button>
                        <button type="submit" name="SubmitAction" value="submit" class="btn btn-success"
                                onclick="return confirm('Submit this report? It will be sent for review.');">
                            <i class="bi bi-send"></i> Submit Report
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
