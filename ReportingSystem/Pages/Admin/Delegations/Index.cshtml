@page
@model ReportingSystem.Pages.Admin.Delegations.IndexModel
@{
    ViewData["Title"] = "Delegations";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-arrow-left-right"></i> Delegations</h2>
            <p class="text-muted">Manage temporary authority transfers between users</p>
        </div>
        <div class="col text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Delegation
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @{
        var active = Model.Delegations.Where(d => d.IsCurrentlyEffective).ToList();
        var upcoming = Model.Delegations.Where(d => d.IsActive && d.RevokedAt == null && d.StartDate > DateTime.UtcNow).ToList();
        var past = Model.Delegations.Where(d => !d.IsCurrentlyEffective && !(d.IsActive && d.RevokedAt == null && d.StartDate > DateTime.UtcNow)).ToList();
    }

    @if (active.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-check-circle"></i> Active Delegations (@active.Count)</h5>
            </div>
            <div class="card-body">
                @await Html.PartialAsync("_DelegationTable", active)
            </div>
        </div>
    }

    @if (upcoming.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-clock"></i> Upcoming Delegations (@upcoming.Count)</h5>
            </div>
            <div class="card-body">
                @await Html.PartialAsync("_DelegationTable", upcoming)
            </div>
        </div>
    }

    @if (past.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="bi bi-archive"></i> Past / Revoked Delegations (@past.Count)</h5>
            </div>
            <div class="card-body">
                @await Html.PartialAsync("_DelegationTable", past)
            </div>
        </div>
    }

    @if (!Model.Delegations.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No delegations found. Click "New Delegation" to create one.
        </div>
    }
</div>
