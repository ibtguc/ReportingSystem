@page
@model ReportingSystem.Pages.Admin.Delegations.CreateModel
@{
    ViewData["Title"] = "Create Delegation";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create Delegation</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Delegation.DelegatorId" class="form-label">Delegator (From)</label>
                                <select asp-for="Delegation.DelegatorId" asp-items="Model.UserOptions" class="form-select">
                                    <option value="">-- Select Delegator --</option>
                                </select>
                                <span asp-validation-for="Delegation.DelegatorId" class="text-danger"></span>
                                <small class="text-muted">The user who is delegating their authority</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Delegation.DelegateId" class="form-label">Delegate (To)</label>
                                <select asp-for="Delegation.DelegateId" asp-items="Model.UserOptions" class="form-select">
                                    <option value="">-- Select Delegate --</option>
                                </select>
                                <span asp-validation-for="Delegation.DelegateId" class="text-danger"></span>
                                <small class="text-muted">The user who will receive the delegated authority</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Delegation.StartDate" class="form-label"></label>
                                <input asp-for="Delegation.StartDate" class="form-control" type="date" />
                                <span asp-validation-for="Delegation.StartDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Delegation.EndDate" class="form-label"></label>
                                <input asp-for="Delegation.EndDate" class="form-control" type="date" />
                                <span asp-validation-for="Delegation.EndDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Delegation.Scope" class="form-label"></label>
                                <select asp-for="Delegation.Scope" asp-items="Model.ScopeOptions" class="form-select"></select>
                                <span asp-validation-for="Delegation.Scope" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Delegation.Reason" class="form-label"></label>
                            <textarea asp-for="Delegation.Reason" class="form-control" rows="3" placeholder="e.g. Annual leave, business travel"></textarea>
                            <span asp-validation-for="Delegation.Reason" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Create Delegation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
