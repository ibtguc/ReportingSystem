@page
@using ReportingSystem.Models
@model ReportingSystem.Pages.Admin.Downward.Recommendations.IndexModel
@{
    ViewData["Title"] = "Recommendations";
}

<div class="container-fluid mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-signpost-2 text-primary"></i> Recommendations</h2>
            <p class="text-muted mb-0">Guidance and directives from management</p>
        </div>
        <div>
            @if (Model.OverdueCount > 0)
            {
                <span class="badge bg-danger fs-6 me-2">
                    <i class="bi bi-exclamation-triangle"></i> @Model.OverdueCount overdue
                </span>
            }
            <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Dashboard
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select asp-for="StatusFilter" class="form-select">
                        <option value="">All Statuses</option>
                        @foreach (var status in RecommendationStatus.All)
                        {
                            <option value="@status">@RecommendationStatus.DisplayName(status)</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Category</label>
                    <select asp-for="CategoryFilter" class="form-select">
                        <option value="">All Categories</option>
                        @foreach (var category in RecommendationCategory.All)
                        {
                            <option value="@category">@RecommendationCategory.DisplayName(category)</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Priority</label>
                    <select asp-for="PriorityFilter" class="form-select">
                        <option value="">All Priorities</option>
                        @foreach (var priority in RecommendationPriority.All)
                        {
                            <option value="@priority">@RecommendationPriority.DisplayName(priority)</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Scope</label>
                    <select asp-for="ScopeFilter" class="form-select">
                        <option value="">All Scopes</option>
                        @foreach (var scope in RecommendationScope.All)
                        {
                            <option value="@scope">@RecommendationScope.DisplayName(scope)</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <div class="form-check mt-4">
                        <input asp-for="OnlyOverdue" class="form-check-input" type="checkbox" />
                        <label class="form-check-label" asp-for="OnlyOverdue">Only Overdue</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Results</h5>
            <span class="badge bg-primary">@Model.TotalCount recommendations</span>
        </div>
        <div class="card-body p-0">
            @if (Model.Recommendations.Count == 0)
            {
                <div class="alert alert-info m-3">
                    <i class="bi bi-info-circle"></i> No recommendations found matching your criteria.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Issued By</th>
                                <th>Target</th>
                                <th>Category</th>
                                <th>Priority</th>
                                <th>Status</th>
                                <th>Due</th>
                                <th style="width:180px">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rec in Model.Recommendations)
                            {
                                <tr class="@(rec.IsOverdue ? "table-danger" : "")">
                                    <td>
                                        <strong>@rec.Title</strong>
                                        <br /><small class="text-muted">@(rec.Description.Length > 60 ? rec.Description.Substring(0, 60) + "..." : rec.Description)</small>
                                        @if (rec.Report != null)
                                        {
                                            <br /><a asp-page="/Admin/Reports/View" asp-route-id="@rec.ReportId" class="small">
                                                <i class="bi bi-file-text"></i> View Report
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        <strong>@rec.IssuedBy.Name</strong>
                                        <br /><small class="text-muted">@rec.IssuedBy.Email</small>
                                    </td>
                                    <td>
                                        <span class="badge @RecommendationScope.BadgeClass(rec.TargetScope)">
                                            @RecommendationScope.DisplayName(rec.TargetScope)
                                        </span>
                                        @if (rec.TargetOrgUnit != null)
                                        {
                                            <br /><small>@rec.TargetOrgUnit.Name</small>
                                        }
                                        @if (rec.TargetUser != null)
                                        {
                                            <br /><small>@rec.TargetUser.Name</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @RecommendationCategory.BadgeClass(rec.Category)">
                                            @RecommendationCategory.DisplayName(rec.Category)
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @RecommendationPriority.BadgeClass(rec.Priority)">
                                            @RecommendationPriority.DisplayName(rec.Priority)
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @RecommendationStatus.BadgeClass(rec.Status)">
                                            @RecommendationStatus.DisplayName(rec.Status)
                                        </span>
                                    </td>
                                    <td>
                                        @if (rec.DueDate.HasValue)
                                        {
                                            <small>@rec.DueDate.Value.ToString("MMM dd, yyyy")</small>
                                            @if (rec.IsOverdue)
                                            {
                                                <br /><span class="badge bg-danger">Overdue</span>
                                            }
                                            else if (rec.DaysUntilDue <= 7)
                                            {
                                                <br /><span class="badge bg-warning text-dark">@rec.DaysUntilDue days</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    Status
                                                </button>
                                                <ul class="dropdown-menu">
                                                    @foreach (var status in RecommendationStatus.All.Where(s => s != rec.Status))
                                                    {
                                                        <li>
                                                            <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                                <input type="hidden" name="id" value="@rec.Id" />
                                                                <input type="hidden" name="newStatus" value="@status" />
                                                                <button type="submit" class="dropdown-item">
                                                                    @RecommendationStatus.DisplayName(status)
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                            <form method="post" asp-page-handler="Delete" class="d-inline ms-1">
                                                <input type="hidden" name="id" value="@rec.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Delete this recommendation?')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
