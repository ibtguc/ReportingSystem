@page
@using ReportingSystem.Models
@model ReportingSystem.Pages.Admin.Downward.Feedback.IndexModel
@{
    ViewData["Title"] = "Feedback";
}

<div class="container-fluid mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-chat-square-text text-info"></i> Feedback</h2>
            <p class="text-muted mb-0">Management feedback on reports flowing downward</p>
        </div>
        <div>
            @if (Model.PendingAcknowledgmentCount > 0)
            {
                <span class="badge bg-warning text-dark fs-6 me-2">
                    <i class="bi bi-clock"></i> @Model.PendingAcknowledgmentCount pending acknowledgment
                </span>
            }
            <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Dashboard
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select asp-for="StatusFilter" class="form-select">
                        <option value="">All Statuses</option>
                        @foreach (var status in FeedbackStatus.All)
                        {
                            <option value="@status">@FeedbackStatus.DisplayName(status)</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Category</label>
                    <select asp-for="CategoryFilter" class="form-select">
                        <option value="">All Categories</option>
                        @foreach (var category in FeedbackCategory.All)
                        {
                            <option value="@category">@FeedbackCategory.DisplayName(category)</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Visibility</label>
                    <select asp-for="VisibilityFilter" class="form-select">
                        <option value="">All Visibility</option>
                        @foreach (var visibility in FeedbackVisibility.All)
                        {
                            <option value="@visibility">@FeedbackVisibility.DisplayName(visibility)</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Search</label>
                    <input asp-for="SearchTerm" class="form-control" placeholder="Search subject, content, author..." />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Results</h5>
            <span class="badge bg-info">@Model.TotalCount feedback items</span>
        </div>
        <div class="card-body p-0">
            @if (Model.Feedbacks.Count == 0)
            {
                <div class="alert alert-info m-3">
                    <i class="bi bi-info-circle"></i> No feedback found matching your criteria.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Subject</th>
                                <th>Report</th>
                                <th>Author</th>
                                <th>Category</th>
                                <th>Visibility</th>
                                <th>Status</th>
                                <th>Ack</th>
                                <th>Created</th>
                                <th style="width:180px">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var feedback in Model.Feedbacks)
                            {
                                <tr class="@(feedback.IsPendingAcknowledgment ? "table-warning" : "")">
                                    <td>
                                        <strong>@feedback.Subject</strong>
                                        <br /><small class="text-muted">@(feedback.Content.Length > 60 ? feedback.Content.Substring(0, 60) + "..." : feedback.Content)</small>
                                    </td>
                                    <td>
                                        <a asp-page="/Admin/Reports/View" asp-route-id="@feedback.ReportId">
                                            @feedback.Report.ReportTemplate.Name
                                        </a>
                                        <br /><small class="text-muted">by @feedback.Report.SubmittedBy.Name</small>
                                    </td>
                                    <td>
                                        <strong>@feedback.Author.Name</strong>
                                        <br /><small class="text-muted">@feedback.Author.Email</small>
                                    </td>
                                    <td>
                                        <span class="badge @FeedbackCategory.BadgeClass(feedback.Category)">
                                            <i class="bi @FeedbackCategory.Icon(feedback.Category)"></i>
                                            @FeedbackCategory.DisplayName(feedback.Category)
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @FeedbackVisibility.BadgeClass(feedback.Visibility)">
                                            @FeedbackVisibility.DisplayName(feedback.Visibility)
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @FeedbackStatus.BadgeClass(feedback.Status)">
                                            @FeedbackStatus.DisplayName(feedback.Status)
                                        </span>
                                    </td>
                                    <td>
                                        @if (feedback.IsAcknowledged)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check"></i></span>
                                        }
                                        else if (feedback.RequiresAcknowledgment)
                                        {
                                            <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i></span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@feedback.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    Status
                                                </button>
                                                <ul class="dropdown-menu">
                                                    @foreach (var status in FeedbackStatus.All.Where(s => s != feedback.Status))
                                                    {
                                                        <li>
                                                            <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                                <input type="hidden" name="id" value="@feedback.Id" />
                                                                <input type="hidden" name="newStatus" value="@status" />
                                                                <button type="submit" class="dropdown-item">
                                                                    @FeedbackStatus.DisplayName(status)
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                            <form method="post" asp-page-handler="Delete" class="d-inline ms-1">
                                                <input type="hidden" name="id" value="@feedback.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Delete this feedback?')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
