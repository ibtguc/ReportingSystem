@page
@using ReportingSystem.Models
@model ReportingSystem.Pages.Admin.OrgUnits.IndexModel
@{
    ViewData["Title"] = "Organizational Units";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-diagram-3-fill"></i> Organizational Units</h2>
            <p class="text-muted">Manage the organizational hierarchy</p>
        </div>
        <div class="col text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Unit
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @{
        var rootUnits = Model.OrgUnits.Where(ou => ou.ParentId == null).ToList();
    }

    @if (rootUnits.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No organizational units found. Click "Add New Unit" to create one.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="org-tree">
                    @foreach (var root in rootUnits)
                    {
                        @await Html.PartialAsync("_OrgUnitTreeNode", root)
                    }
                </div>
            </div>
        </div>
    }

    <!-- Statistics -->
    @if (Model.OrgUnits.Count > 0)
    {
        <div class="row mt-4">
            @foreach (var level in Enum.GetValues<OrgUnitLevel>())
            {
                var count = Model.OrgUnits.Count(ou => ou.Level == level && ou.IsActive);
                if (count > 0)
                {
                    <div class="col-md-2 mb-3">
                        <div class="card text-center">
                            <div class="card-body py-2">
                                <h5 class="card-title mb-0">@count</h5>
                                <small class="text-muted">@level</small>
                            </div>
                        </div>
                    </div>
                }
            }
            <div class="col-md-2 mb-3">
                <div class="card text-center">
                    <div class="card-body py-2">
                        <h5 class="card-title mb-0">@Model.OrgUnits.Sum(ou => ou.Users.Count)</h5>
                        <small class="text-muted">Total Users</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
