@page "{id:int}"
@model ReportingSystem.Pages.Admin.OrgUnits.EditModel
@{
    ViewData["Title"] = "Edit Organizational Unit";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Organizational Unit</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="OrgUnit.Id" />
                        <input type="hidden" asp-for="OrgUnit.CreatedAt" />

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="OrgUnit.Name" class="form-label"></label>
                                <input asp-for="OrgUnit.Name" class="form-control" />
                                <span asp-validation-for="OrgUnit.Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="OrgUnit.Code" class="form-label"></label>
                                <input asp-for="OrgUnit.Code" class="form-control" />
                                <span asp-validation-for="OrgUnit.Code" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="OrgUnit.ParentId" class="form-label"></label>
                                <select asp-for="OrgUnit.ParentId" asp-items="Model.ParentOptions" class="form-select"></select>
                                <span asp-validation-for="OrgUnit.ParentId" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="OrgUnit.Level" class="form-label"></label>
                                <select asp-for="OrgUnit.Level" asp-items="Model.LevelOptions" class="form-select"></select>
                                <span asp-validation-for="OrgUnit.Level" class="text-danger"></span>
                            </div>

                            <div class="col-md-2 mb-3">
                                <label asp-for="OrgUnit.SortOrder" class="form-label"></label>
                                <input asp-for="OrgUnit.SortOrder" class="form-control" type="number" />
                                <span asp-validation-for="OrgUnit.SortOrder" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OrgUnit.Description" class="form-label"></label>
                            <textarea asp-for="OrgUnit.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="OrgUnit.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="OrgUnit.IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="OrgUnit.IsActive" class="form-check-label"></label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <p class="text-muted mb-1"><small><strong>Created:</strong> @Model.OrgUnit.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small></p>
                            </div>
                            @if (Model.OrgUnit.UpdatedAt.HasValue)
                            {
                                <div class="col-md-6">
                                    <p class="text-muted mb-1"><small><strong>Last Updated:</strong> @Model.OrgUnit.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</small></p>
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
