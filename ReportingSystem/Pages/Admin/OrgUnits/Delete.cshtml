@page "{id:int}"
@model ReportingSystem.Pages.Admin.OrgUnits.DeleteModel
@{
    ViewData["Title"] = "Delete Organizational Unit";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Organizational Unit</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this organizational unit? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9"><strong>@Model.OrgUnit.Name</strong></dd>

                        <dt class="col-sm-3">Code</dt>
                        <dd class="col-sm-9">@(Model.OrgUnit.Code ?? "â€”")</dd>

                        <dt class="col-sm-3">Level</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.OrgUnit.Level</span>
                        </dd>

                        <dt class="col-sm-3">Parent</dt>
                        <dd class="col-sm-9">@(Model.OrgUnit.Parent?.Name ?? "(Top Level)")</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.OrgUnit.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>

                    @if (Model.ChildCount > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-octagon-fill"></i>
                            <strong>Cannot delete:</strong> This unit has <strong>@Model.ChildCount</strong> child unit(s).
                            You must delete or move them first.
                        </div>
                    }

                    @if (Model.UserCount > 0)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            This unit has <strong>@Model.UserCount</strong> user(s) assigned. They will be unassigned upon deletion.
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="OrgUnit.Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            @if (Model.ChildCount == 0)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete Unit
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
