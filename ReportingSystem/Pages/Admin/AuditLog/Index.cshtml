@page
@model ReportingSystem.Pages.Admin.AuditLog.IndexModel
@{
    ViewData["Title"] = "Audit Log";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2><i class="bi bi-journal-text"></i> Audit Log</h2>
    <a asp-page-handler="ExportCsv" asp-route-FilterUserId="@Model.FilterUserId"
       asp-route-ActionType="@Model.ActionType" asp-route-ItemType="@Model.ItemType"
       asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
       asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")"
       class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-download"></i> Export CSV
    </a>
</div>

<!-- Stats -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body py-2">
                <div class="fs-4 fw-bold text-primary">@Model.Stats.total</div>
                <small class="text-muted">Total Entries</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body py-2">
                <div class="fs-4 fw-bold text-success">@Model.Stats.today</div>
                <small class="text-muted">Today</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body py-2">
                <div class="fs-4 fw-bold text-info">@Model.Stats.thisWeek</div>
                <small class="text-muted">This Week</small>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-2">
                <label class="form-label">User</label>
                <select name="FilterUserId" class="form-select form-select-sm">
                    <option value="">All Users</option>
                    @foreach (var u in Model.Users)
                    {
                        <option value="@u.Value" selected="@(u.Value == Model.FilterUserId?.ToString())">@u.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Action Type</label>
                <select name="ActionType" class="form-select form-select-sm">
                    <option value="">All Actions</option>
                    @foreach (var at in Enum.GetValues<ReportingSystem.Models.AuditActionType>())
                    {
                        <option value="@at" selected="@(Model.ActionType == at)">@at</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Item Type</label>
                <select name="ItemType" class="form-select form-select-sm">
                    <option value="">All Types</option>
                    <option value="Report" selected="@(Model.ItemType == "Report")">Report</option>
                    <option value="Directive" selected="@(Model.ItemType == "Directive")">Directive</option>
                    <option value="Meeting" selected="@(Model.ItemType == "Meeting")">Meeting</option>
                    <option value="ActionItem" selected="@(Model.ItemType == "ActionItem")">Action Item</option>
                    <option value="User" selected="@(Model.ItemType == "User")">User</option>
                    <option value="Committee" selected="@(Model.ItemType == "Committee")">Committee</option>
                    <option value="Confidentiality" selected="@(Model.ItemType == "Confidentiality")">Confidentiality</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">From Date</label>
                <input type="date" name="FromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")"
                       class="form-control form-control-sm" />
            </div>
            <div class="col-md-2">
                <label class="form-label">To Date</label>
                <input type="date" name="ToDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")"
                       class="form-control form-control-sm" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary btn-sm w-100">Filter</button>
            </div>
        </form>
    </div>
</div>

<!-- Audit Log Table -->
<div class="card">
    <div class="table-responsive">
        <table class="table table-sm table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Timestamp</th>
                    <th>User</th>
                    <th>Action</th>
                    <th>Item</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.AuditLogs.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">No audit log entries found.</td>
                    </tr>
                }
                @foreach (var log in Model.AuditLogs)
                {
                    <tr>
                        <td class="text-nowrap">
                            <small>@log.Timestamp.ToString("dd MMM yyyy HH:mm:ss")</small>
                        </td>
                        <td>
                            <small>@(log.UserName ?? $"User #{log.UserId}")</small>
                        </td>
                        <td>
                            @{
                                var badgeClass = log.ActionType switch
                                {
                                    ReportingSystem.Models.AuditActionType.Create => "bg-success",
                                    ReportingSystem.Models.AuditActionType.Delete => "bg-danger",
                                    ReportingSystem.Models.AuditActionType.StatusChange => "bg-info",
                                    ReportingSystem.Models.AuditActionType.AccessDenied => "bg-danger",
                                    ReportingSystem.Models.AuditActionType.AccessGranted => "bg-success",
                                    ReportingSystem.Models.AuditActionType.Login => "bg-primary",
                                    ReportingSystem.Models.AuditActionType.Logout => "bg-secondary",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@log.ActionType</span>
                        </td>
                        <td>
                            <small>
                                @log.ItemType
                                @if (log.ItemId.HasValue)
                                {
                                    <span class="text-muted">#@log.ItemId</span>
                                }
                                @if (!string.IsNullOrEmpty(log.ItemTitle))
                                {
                                    <br /><span class="text-muted">@(log.ItemTitle.Length > 50 ? log.ItemTitle[..50] + "..." : log.ItemTitle)</span>
                                }
                            </small>
                        </td>
                        <td>
                            <small>
                                @if (!string.IsNullOrEmpty(log.BeforeValue) && !string.IsNullOrEmpty(log.AfterValue))
                                {
                                    <span class="text-danger">@log.BeforeValue</span>
                                    <i class="bi bi-arrow-right"></i>
                                    <span class="text-success">@log.AfterValue</span>
                                }
                                else if (!string.IsNullOrEmpty(log.Details))
                                {
                                    @(log.Details.Length > 80 ? log.Details[..80] + "..." : log.Details)
                                }
                            </small>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                <a class="page-link" asp-page="Index" asp-route-Page="@(Model.Page - 1)"
                   asp-route-FilterUserId="@Model.FilterUserId" asp-route-ActionType="@Model.ActionType"
                   asp-route-ItemType="@Model.ItemType" asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                   asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")">Previous</a>
            </li>
            @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" asp-page="Index" asp-route-Page="@i"
                       asp-route-FilterUserId="@Model.FilterUserId" asp-route-ActionType="@Model.ActionType"
                       asp-route-ItemType="@Model.ItemType" asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                       asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")">@i</a>
                </li>
            }
            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-page="Index" asp-route-Page="@(Model.Page + 1)"
                   asp-route-FilterUserId="@Model.FilterUserId" asp-route-ActionType="@Model.ActionType"
                   asp-route-ItemType="@Model.ItemType" asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                   asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")">Next</a>
            </li>
        </ul>
        <p class="text-center text-muted small">
            Page @Model.Page of @Model.TotalPages (@Model.TotalCount total entries)
        </p>
    </nav>
}
