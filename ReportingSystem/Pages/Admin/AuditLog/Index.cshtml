@page
@model ReportingSystem.Pages.Admin.AuditLog.IndexModel
@{
    ViewData["Title"] = "Audit Log";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">Audit Log</h1>
        <p class="text-muted mb-0">Track all data changes for compliance and lineage</p>
    </div>
    <form method="post" asp-page-handler="Export">
        <button type="submit" class="btn btn-outline-primary">
            <i class="bi bi-download"></i> Export CSV
        </button>
    </form>
</div>

<!-- Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h3 class="mb-0">@Model.TotalCount</h3>
                <small class="text-muted">Total (filtered)</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h3 class="mb-0">@Model.TodayCount</h3>
                <small>Today</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h3 class="mb-0">@Model.ThisWeekCount</h3>
                <small>This Week</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body py-2">
                <small class="text-muted d-block mb-1">This Week by Action</small>
                @foreach (var action in Model.ActionCounts.OrderByDescending(x => x.Value).Take(3))
                {
                    <span class="badge @ReportingSystem.Models.AuditAction.BadgeClass(action.Key) me-1">
                        @action.Key: @action.Value
                    </span>
                }
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-2">
                <label class="form-label">Action</label>
                <select asp-for="ActionFilter" asp-items="Model.ActionOptions" class="form-select">
                    <option value="">All Actions</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Entity Type</label>
                <select asp-for="EntityTypeFilter" asp-items="Model.EntityTypeOptions" class="form-select">
                    <option value="">All Types</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">User</label>
                <select asp-for="UserId" asp-items="Model.UserOptions" class="form-select">
                    <option value="">All Users</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">From Date</label>
                <input asp-for="DateFrom" type="date" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">To Date</label>
                <input asp-for="DateTo" type="date" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Search</label>
                <input asp-for="SearchTerm" class="form-control" placeholder="Search..." />
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-filter"></i> Filter
                </button>
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Audit Log Table -->
<div class="card">
    <div class="table-responsive">
        <table class="table table-hover table-sm mb-0">
            <thead class="table-light">
                <tr>
                    <th>Timestamp</th>
                    <th>Action</th>
                    <th>Entity</th>
                    <th>Change</th>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.AuditLogs.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            No audit log entries found.
                        </td>
                    </tr>
                }
                @foreach (var log in Model.AuditLogs)
                {
                    <tr>
                        <td>
                            <small class="text-nowrap">
                                @log.Timestamp.ToString("MMM dd, yyyy HH:mm:ss")
                            </small>
                        </td>
                        <td>
                            <span class="badge @ReportingSystem.Models.AuditAction.BadgeClass(log.Action)">
                                @log.ActionDisplayName
                            </span>
                        </td>
                        <td>
                            <span class="fw-medium">@log.EntityType</span>
                            @if (!string.IsNullOrEmpty(log.EntityName))
                            {
                                <br /><small class="text-muted">@log.EntityName</small>
                            }
                            else
                            {
                                <br /><small class="text-muted">ID: @log.EntityId</small>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(log.FieldName))
                            {
                                <span class="fw-medium">@log.FieldName:</span><br />
                            }
                            @if (log.IsCreate)
                            {
                                <span class="text-success">
                                    @if (!string.IsNullOrEmpty(log.NewValue))
                                    {
                                        <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@log.NewValue">
                                            @log.NewValue
                                        </span>
                                    }
                                    else
                                    {
                                        <em>Created</em>
                                    }
                                </span>
                            }
                            else if (log.IsDelete)
                            {
                                <span class="text-danger">
                                    @if (!string.IsNullOrEmpty(log.OldValue))
                                    {
                                        <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@log.OldValue">
                                            @log.OldValue
                                        </span>
                                    }
                                    else
                                    {
                                        <em>Deleted</em>
                                    }
                                </span>
                            }
                            else if (log.IsUpdate)
                            {
                                <span class="text-muted text-truncate d-inline-block" style="max-width: 100px;" title="@log.OldValue">
                                    @(log.OldValue ?? "(empty)")
                                </span>
                                <i class="bi bi-arrow-right mx-1"></i>
                                <span class="text-primary text-truncate d-inline-block" style="max-width: 100px;" title="@log.NewValue">
                                    @(log.NewValue ?? "(empty)")
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">@log.ChangeSummary</span>
                            }
                        </td>
                        <td>
                            @if (log.User != null)
                            {
                                <span>@log.User.Name</span>
                            }
                            else if (!string.IsNullOrEmpty(log.UserName))
                            {
                                <span>@log.UserName</span>
                            }
                            else
                            {
                                <span class="text-muted"><em>System</em></span>
                            }
                            @if (!string.IsNullOrEmpty(log.IpAddress))
                            {
                                <br /><small class="text-muted">@log.IpAddress</small>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.TotalPages > 1)
    {
        <div class="card-footer">
            <nav>
                <ul class="pagination pagination-sm mb-0 justify-content-center">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="./Index" asp-route-PageNumber="@(Model.PageNumber - 1)"
                               asp-route-ActionFilter="@Model.ActionFilter"
                               asp-route-EntityTypeFilter="@Model.EntityTypeFilter"
                               asp-route-UserId="@Model.UserId"
                               asp-route-DateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")"
                               asp-route-DateTo="@Model.DateTo?.ToString("yyyy-MM-dd")"
                               asp-route-SearchTerm="@Model.SearchTerm">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-PageNumber="@i"
                               asp-route-ActionFilter="@Model.ActionFilter"
                               asp-route-EntityTypeFilter="@Model.EntityTypeFilter"
                               asp-route-UserId="@Model.UserId"
                               asp-route-DateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")"
                               asp-route-DateTo="@Model.DateTo?.ToString("yyyy-MM-dd")"
                               asp-route-SearchTerm="@Model.SearchTerm">
                                @i
                            </a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="./Index" asp-route-PageNumber="@(Model.PageNumber + 1)"
                               asp-route-ActionFilter="@Model.ActionFilter"
                               asp-route-EntityTypeFilter="@Model.EntityTypeFilter"
                               asp-route-UserId="@Model.UserId"
                               asp-route-DateFrom="@Model.DateFrom?.ToString("yyyy-MM-dd")"
                               asp-route-DateTo="@Model.DateTo?.ToString("yyyy-MM-dd")"
                               asp-route-SearchTerm="@Model.SearchTerm">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
            <div class="text-center mt-2">
                <small class="text-muted">
                    Showing @((Model.PageNumber - 1) * Model.PageSize + 1) - @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount) of @Model.TotalCount entries
                </small>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        if (typeof initFilterState === 'function') {
            initFilterState();
        }
    </script>
}
