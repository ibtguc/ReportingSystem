@page
@model ReportingSystem.Pages.Admin.Dashboards.OriginatorModel
@using ReportingSystem.Models
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-person-circle"></i> My Dashboard</h2>
            <p class="text-muted">
                Your reports, requests, and pending items
                @if (Model.CurrentUser != null)
                {
                    <span class="badge bg-secondary ms-2">@Model.CurrentUser.Name</span>
                }
            </p>
        </div>
        <div class="col-auto">
            <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Main Dashboard
            </a>
        </div>
    </div>

    <!-- Key Metrics Row -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-primary">
                <div class="card-body text-center">
                    <div class="display-4 text-primary">@Model.Data.TotalMyReports</div>
                    <div class="text-muted">My Reports</div>
                    <small class="text-secondary">@Model.Data.DraftReports draft(s)</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-warning">
                <div class="card-body text-center">
                    <div class="display-4 text-warning">@Model.Data.FeedbackPendingMyAcknowledgment</div>
                    <div class="text-muted">Feedback to Acknowledge</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-info">
                <div class="card-body text-center">
                    <div class="display-4 text-info">@Model.Data.ConfirmationTagsToRespond</div>
                    <div class="text-muted">Confirmations Pending</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-success">
                <div class="card-body text-center">
                    <div class="display-4 text-success">@Model.Data.ActiveRecommendationsForMe</div>
                    <div class="text-muted">Active Recommendations</div>
                </div>
            </div>
        </div>
    </div>

    <!-- My Reports Section -->
    <div class="row mb-4">
        <div class="col-md-8 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> My Recent Reports</h5>
                </div>
                <div class="card-body">
                    @if (Model.Data.MyReports.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Template</th>
                                        <th>Period</th>
                                        <th>Status</th>
                                        <th>Submitted</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var report in Model.Data.MyReports)
                                    {
                                        <tr>
                                            <td>@report.TemplateName</td>
                                            <td>@report.PeriodName</td>
                                            <td>
                                                <span class="badge @ReportStatus.BadgeClass(report.Status)">
                                                    @ReportStatus.DisplayName(report.Status)
                                                </span>
                                            </td>
                                            <td>@(report.SubmittedAt?.ToString("MMM dd, yyyy") ?? "Not submitted")</td>
                                            <td>
                                                @if (report.IsEditable)
                                                {
                                                    <a asp-page="/Admin/Reports/Fill" asp-route-id="@report.ReportId"
                                                       class="btn btn-sm btn-primary">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a asp-page="/Admin/Reports/View" asp-route-id="@report.ReportId"
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-file-earmark-x display-4 text-muted"></i>
                            <p class="text-muted mt-2 mb-0">No reports yet</p>
                            <a asp-page="/Admin/Reports/Create" class="btn btn-primary mt-3">
                                <i class="bi bi-plus-circle"></i> Create Your First Report
                            </a>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-page="/Admin/Reports/Index" class="btn btn-sm btn-outline-primary me-2">
                        <i class="bi bi-list"></i> View All Reports
                    </a>
                    <a asp-page="/Admin/Reports/Create" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle"></i> New Report
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Reports by Status</h5>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    @if (Model.Data.MyReportsByStatus.Any())
                    {
                        <canvas id="myReportsStatusChart" height="200"></canvas>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-inbox display-4 text-muted"></i>
                            <p class="text-muted mt-2 mb-0">No data</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Upward Flow Status with Chart -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> My Upward Flow Items</h5>
                </div>
                <div class="card-body">
                    <canvas id="upwardFlowChart" height="180"></canvas>
                </div>
                <div class="card-footer">
                    <a asp-page="/Admin/UpwardFlow/SuggestedActions/Index" class="btn btn-sm btn-outline-info me-1">
                        Actions
                    </a>
                    <a asp-page="/Admin/UpwardFlow/ResourceRequests/Index" class="btn btn-sm btn-outline-warning me-1">
                        Resources
                    </a>
                    <a asp-page="/Admin/UpwardFlow/SupportRequests/Index" class="btn btn-sm btn-outline-danger">
                        Support
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-list-check"></i> Upward Flow Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4 text-center mb-3">
                            <i class="bi bi-lightbulb text-info" style="font-size: 2rem;"></i>
                            <div class="h4 mb-0">@Model.Data.MySuggestedActionsByStatus.Sum(s => s.Count)</div>
                            <small class="text-muted">Suggested Actions</small>
                        </div>
                        <div class="col-4 text-center mb-3">
                            <i class="bi bi-box-seam text-warning" style="font-size: 2rem;"></i>
                            <div class="h4 mb-0">@Model.Data.MyResourceRequestsByStatus.Sum(s => s.Count)</div>
                            <small class="text-muted">Resources</small>
                        </div>
                        <div class="col-4 text-center mb-3">
                            <i class="bi bi-life-preserver text-danger" style="font-size: 2rem;"></i>
                            <div class="h4 mb-0">@Model.Data.MySupportRequestsByStatus.Sum(s => s.Count)</div>
                            <small class="text-muted">Support</small>
                        </div>
                    </div>
                    <hr />
                    <div class="row small">
                        <div class="col-4">
                            @foreach (var status in Model.Data.MySuggestedActionsByStatus.Take(3))
                            {
                                <div class="d-flex justify-content-between mb-1">
                                    <span>@ActionStatus.DisplayName(status.Status)</span>
                                    <span class="badge bg-secondary">@status.Count</span>
                                </div>
                            }
                        </div>
                        <div class="col-4">
                            @foreach (var status in Model.Data.MyResourceRequestsByStatus.Take(3))
                            {
                                <div class="d-flex justify-content-between mb-1">
                                    <span>@ResourceStatus.DisplayName(status.Status)</span>
                                    <span class="badge bg-secondary">@status.Count</span>
                                </div>
                            }
                        </div>
                        <div class="col-4">
                            @foreach (var status in Model.Data.MySupportRequestsByStatus.Take(3))
                            {
                                <div class="d-flex justify-content-between mb-1">
                                    <span>@SupportStatus.DisplayName(status.Status)</span>
                                    <span class="badge bg-secondary">@status.Count</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Feedback & Decisions -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-chat-dots"></i> Feedback Received</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h3 mb-0 text-primary">@Model.Data.FeedbackReceived</div>
                                <small class="text-muted">Total Feedback</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h3 mb-0 text-warning">@Model.Data.FeedbackPendingMyAcknowledgment</div>
                                <small class="text-muted">Pending Ack.</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-page="/Admin/Downward/Feedback/Index" class="btn btn-sm btn-outline-success">
                        View Feedback
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-check2-circle"></i> Decisions on My Requests</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h3 mb-0 text-info">@Model.Data.DecisionsReceived</div>
                                <small class="text-muted">Total Decisions</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h3 mb-0 text-warning">@Model.Data.DecisionsPendingAcknowledgment</div>
                                <small class="text-muted">Pending Ack.</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-page="/Admin/Downward/Decisions/Index" class="btn btn-sm btn-outline-dark">
                        View Decisions
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmation Tags & Deadlines -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-purple" style="background-color: #6f42c1; color: white;">
                    <h5 class="mb-0"><i class="bi bi-tag"></i> Confirmation Tags</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="text-center">
                                <div class="h4 mb-0 text-warning">@Model.Data.MyConfirmationTagsPending</div>
                                <small class="text-muted">My Pending</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-center">
                                <div class="h4 mb-0 text-success">@Model.Data.MyConfirmationTagsConfirmed</div>
                                <small class="text-muted">Confirmed</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-center">
                                <div class="h4 mb-0 text-danger">@Model.Data.ConfirmationTagsToRespond</div>
                                <small class="text-muted">To Respond</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-page="/Admin/Workflow/Confirmations/Index" class="btn btn-sm btn-outline-secondary">
                        View Confirmations
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-event"></i> Upcoming Deadlines</h5>
                </div>
                <div class="card-body">
                    @if (Model.Data.UpcomingDeadlines.Any())
                    {
                        @foreach (var deadline in Model.Data.UpcomingDeadlines.Take(4))
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2 pb-2 border-bottom">
                                <div>
                                    <strong>@deadline.TemplateName</strong>
                                    <br />
                                    <small class="text-muted">@deadline.PeriodName</small>
                                </div>
                                <div>
                                    @if (deadline.DaysRemaining <= 1)
                                    {
                                        <span class="badge bg-danger">@deadline.DaysRemaining day(s)</span>
                                    }
                                    else if (deadline.DaysRemaining <= 3)
                                    {
                                        <span class="badge bg-warning text-dark">@deadline.DaysRemaining days</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@deadline.DaysRemaining days</span>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-calendar-check display-6 text-success"></i>
                            <p class="text-muted mt-2 mb-0">No upcoming deadlines</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/Reports/Create" class="btn btn-primary w-100">
                                <i class="bi bi-file-earmark-plus"></i> Create New Report
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/Reports/Index" class="btn btn-outline-primary w-100">
                                <i class="bi bi-file-earmark-text"></i> View My Reports
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/Workflow/Comments/Index" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-chat-left-text"></i> View Comments
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/Downward/Recommendations/Index" class="btn btn-outline-info w-100">
                                <i class="bi bi-signpost"></i> View Recommendations
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // My Reports by Status Chart (Doughnut)
            const reportsData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Data.MyReportsByStatus));
            if (reportsData && reportsData.length > 0) {
                const reportsCtx = document.getElementById('myReportsStatusChart').getContext('2d');
                const statusColors = {
                    'draft': '#6c757d',
                    'submitted': '#0d6efd',
                    'under_review': '#0dcaf0',
                    'approved': '#198754',
                    'rejected': '#dc3545',
                    'revision_requested': '#fd7e14'
                };
                new Chart(reportsCtx, {
                    type: 'doughnut',
                    data: {
                        labels: reportsData.map(s => s.status.replace('_', ' ').replace(/\b\w/g, c => c.toUpperCase())),
                        datasets: [{
                            data: reportsData.map(s => s.count),
                            backgroundColor: reportsData.map(s => statusColors[s.status] || '#6c757d'),
                            borderWidth: 2,
                            borderColor: '#fff'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    boxWidth: 12,
                                    padding: 8
                                }
                            }
                        }
                    }
                });
            }

            // Upward Flow Items Chart (Bar)
            const upwardFlowCtx = document.getElementById('upwardFlowChart').getContext('2d');
            const actionsTotal = @Model.Data.MySuggestedActionsByStatus.Sum(s => s.Count);
            const resourcesTotal = @Model.Data.MyResourceRequestsByStatus.Sum(s => s.Count);
            const supportTotal = @Model.Data.MySupportRequestsByStatus.Sum(s => s.Count);

            new Chart(upwardFlowCtx, {
                type: 'bar',
                data: {
                    labels: ['Suggested Actions', 'Resource Requests', 'Support Requests'],
                    datasets: [{
                        label: 'Total Items',
                        data: [actionsTotal, resourcesTotal, supportTotal],
                        backgroundColor: [
                            'rgba(13, 202, 240, 0.7)',
                            'rgba(255, 193, 7, 0.7)',
                            'rgba(220, 53, 69, 0.7)'
                        ],
                        borderColor: [
                            'rgb(13, 202, 240)',
                            'rgb(255, 193, 7)',
                            'rgb(220, 53, 69)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        });
    </script>
}
