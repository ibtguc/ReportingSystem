@page
@model ReportingSystem.Pages.Admin.Dashboards.ReviewerModel
@using ReportingSystem.Models
@{
    ViewData["Title"] = "Reviewer Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-clipboard-check"></i> Reviewer Dashboard</h2>
            <p class="text-muted">
                Review workload and completion statistics
                @if (Model.CurrentUser != null)
                {
                    <span class="badge bg-secondary ms-2">@Model.CurrentUser.Name</span>
                }
            </p>
        </div>
        <div class="col-auto">
            <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Main Dashboard
            </a>
        </div>
    </div>

    <!-- Key Metrics Row -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-warning">
                <div class="card-body text-center">
                    <div class="display-4 text-warning">@Model.Data.PendingReviewCount</div>
                    <div class="text-muted">Pending Reviews</div>
                    <small class="text-secondary">Awaiting action</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-success">
                <div class="card-body text-center">
                    <div class="display-4 text-success">@Model.Data.TotalReviewsCompleted</div>
                    <div class="text-muted">Reviews Completed</div>
                    <small class="text-secondary">All time</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-info">
                <div class="card-body text-center">
                    <div class="display-4 text-info">@Model.Data.ReviewsLast30Days</div>
                    <div class="text-muted">Last 30 Days</div>
                    <small class="text-secondary">Recent reviews</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-primary">
                <div class="card-body text-center">
                    <div class="display-4 text-primary">@Model.Data.MyApprovalRate%</div>
                    <div class="text-muted">Approval Rate</div>
                    <small class="text-secondary">Your average</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Reviews Table -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-hourglass-split"></i> Reports Pending Review</h5>
                </div>
                <div class="card-body">
                    @if (Model.Data.PendingReviews.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Report</th>
                                        <th>Period</th>
                                        <th>Submitted By</th>
                                        <th>Org Unit</th>
                                        <th>Submitted At</th>
                                        <th>Days Pending</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var report in Model.Data.PendingReviews)
                                    {
                                        <tr class="@(report.DaysPending > 5 ? "table-danger" : report.DaysPending > 2 ? "table-warning" : "")">
                                            <td>@report.TemplateName</td>
                                            <td>@report.PeriodName</td>
                                            <td>@report.SubmittedBy</td>
                                            <td>@report.OrgUnitName</td>
                                            <td>@(report.SubmittedAt?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                                            <td>
                                                @if (report.DaysPending > 5)
                                                {
                                                    <span class="badge bg-danger">@report.DaysPending days</span>
                                                }
                                                else if (report.DaysPending > 2)
                                                {
                                                    <span class="badge bg-warning text-dark">@report.DaysPending days</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">@report.DaysPending day(s)</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @ReportStatus.BadgeClass(report.Status)">
                                                    @ReportStatus.DisplayName(report.Status)
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-page="/Admin/Reports/View" asp-route-id="@report.ReportId"
                                                   class="btn btn-sm btn-primary">
                                                    <i class="bi bi-eye"></i> Review
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-check-circle display-3 text-success"></i>
                            <h4 class="mt-3 text-muted">All Caught Up!</h4>
                            <p class="text-muted">No reports pending your review.</p>
                        </div>
                    }
                </div>
                @if (Model.Data.AssignedReports > Model.Data.PendingReviewCount)
                {
                    <div class="card-footer">
                        <span class="text-muted">
                            <i class="bi bi-info-circle"></i> You have @Model.Data.AssignedReports total assigned reports.
                        </span>
                        <a asp-page="/Admin/Reports/Index" class="btn btn-sm btn-outline-warning float-end">
                            View All Assigned
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Review Statistics & Workload Distribution -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> My Review Outcomes</h5>
                </div>
                <div class="card-body">
                    @if (Model.Data.ReviewsByOutcome.Any())
                    {
                        @foreach (var outcome in Model.Data.ReviewsByOutcome.OrderByDescending(o => o.Count))
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge @ReportStatus.BadgeClass(outcome.Status)" style="min-width: 120px;">
                                    @ReportStatus.DisplayName(outcome.Status)
                                </span>
                                <div class="progress flex-grow-1 mx-3" style="height: 20px;">
                                    @{
                                        var percentage = Model.Data.TotalReviewsCompleted > 0
                                            ? (int)((double)outcome.Count / Model.Data.TotalReviewsCompleted * 100)
                                            : 0;
                                    }
                                    <div class="progress-bar @ReportStatus.BadgeClass(outcome.Status).Replace("bg-", "bg-")"
                                         style="width: @percentage%">
                                        @outcome.Count
                                    </div>
                                </div>
                            </div>
                        }

                        <hr />
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Total Reviews:</span>
                            <strong>@Model.Data.TotalReviewsCompleted</strong>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <p class="text-muted mb-0">No completed reviews yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-diagram-3"></i> Workload by Org Unit</h5>
                </div>
                <div class="card-body">
                    @if (Model.Data.WorkloadByOrgUnit.Any())
                    {
                        @foreach (var unit in Model.Data.WorkloadByOrgUnit.OrderByDescending(u => u.Count))
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2 pb-2 border-bottom">
                                <span>@unit.Status</span>
                                <span class="badge bg-warning text-dark">@unit.Count pending</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-inbox display-6 text-muted"></i>
                            <p class="text-muted mt-2 mb-0">No pending reviews</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Workflow & Activity -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-chat-left-text"></i> My Workflow Activity</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4 text-center">
                            <div class="h3 mb-0 text-info">@Model.Data.MyCommentsCount</div>
                            <small class="text-muted">Comments</small>
                        </div>
                        <div class="col-4 text-center">
                            <div class="h3 mb-0 text-success">@Model.Data.MyFeedbackCount</div>
                            <small class="text-muted">Feedback Given</small>
                        </div>
                        <div class="col-4 text-center">
                            <div class="h3 mb-0 text-warning">@Model.Data.PendingConfirmationTags</div>
                            <small class="text-muted">Confirmations</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-page="/Admin/Workflow/Comments/Index" class="btn btn-sm btn-outline-secondary me-1">
                        Comments
                    </a>
                    <a asp-page="/Admin/Downward/Feedback/Index" class="btn btn-sm btn-outline-secondary me-1">
                        Feedback
                    </a>
                    <a asp-page="/Admin/Workflow/Confirmations/Index" class="btn btn-sm btn-outline-secondary">
                        Confirmations
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-speedometer2"></i> Performance Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h3 mb-0 text-primary">@Model.Data.MyApprovalRate%</div>
                                <small class="text-muted">Approval Rate</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h3 mb-0 text-info">@Model.Data.ReviewsLast30Days</div>
                                <small class="text-muted">Reviews (30 days)</small>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between text-muted small">
                        <span>Total Assigned:</span>
                        <strong>@Model.Data.AssignedReports</strong>
                    </div>
                    <div class="d-flex justify-content-between text-muted small">
                        <span>Completed:</span>
                        <strong>@Model.Data.TotalReviewsCompleted</strong>
                    </div>
                    <div class="d-flex justify-content-between text-muted small">
                        <span>Pending:</span>
                        <strong class="text-warning">@Model.Data.PendingReviewCount</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/Reports/Index" class="btn btn-outline-primary w-100">
                                <i class="bi bi-file-earmark-text"></i> View All Reports
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/Downward/Feedback/Index" class="btn btn-outline-info w-100">
                                <i class="bi bi-chat-dots"></i> Give Feedback
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/Workflow/Comments/Index" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-chat-left-text"></i> View Comments
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/Aggregation/Summary/Index" class="btn btn-outline-success w-100">
                                <i class="bi bi-bar-chart-line"></i> View Aggregation
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
