@page
@model ReportingSystem.Pages.Admin.Dashboards.ExecutiveModel
@using ReportingSystem.Models
@{
    ViewData["Title"] = "Executive Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-graph-up-arrow"></i> Executive Dashboard</h2>
            <p class="text-muted">Organization-wide KPIs and performance metrics</p>
        </div>
        <div class="col-auto">
            <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Main Dashboard
            </a>
        </div>
    </div>

    <!-- Key Metrics Row -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-primary">
                <div class="card-body text-center">
                    <div class="display-4 text-primary">@Model.Data.TotalReports</div>
                    <div class="text-muted">Total Reports</div>
                    <small class="text-info">@Model.Data.ReportsThisPeriod this period</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-warning">
                <div class="card-body text-center">
                    <div class="display-4 text-warning">@Model.Data.PendingReviews</div>
                    <div class="text-muted">Pending Reviews</div>
                    <small class="text-secondary">Awaiting approval</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-success">
                <div class="card-body text-center">
                    <div class="display-4 text-success">@Model.Data.ApprovalRate%</div>
                    <div class="text-muted">Approval Rate</div>
                    <small class="text-secondary">Last 30 days</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100 border-info">
                <div class="card-body text-center">
                    <div class="display-4 text-info">@Model.Data.OrganizationCoverage%</div>
                    <div class="text-muted">Org Coverage</div>
                    <small class="text-secondary">Units reporting</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Reports by Status -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> Reports by Status</h5>
                </div>
                <div class="card-body">
                    @if (Model.Data.ReportsByStatus.Any())
                    {
                        <div class="row">
                            @foreach (var status in Model.Data.ReportsByStatus.OrderByDescending(s => s.Count))
                            {
                                <div class="col-6 mb-3">
                                    <div class="d-flex align-items-center">
                                        <span class="badge @ReportStatus.BadgeClass(status.Status) me-2" style="min-width: 100px;">
                                            @ReportStatus.DisplayName(status.Status)
                                        </span>
                                        <span class="fw-bold">@status.Count</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No reports yet</p>
                    }
                </div>
                <div class="card-footer">
                    <a asp-page="/Admin/Reports/Index" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-arrow-right"></i> View All Reports
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Organization Overview</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h4 mb-0">@Model.Data.TotalUsers</div>
                                <small class="text-muted">Active Users</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h4 mb-0">@Model.Data.TotalOrgUnits</div>
                                <small class="text-muted">Org Units</small>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted mb-2">Users by Role</h6>
                    @foreach (var role in Model.Data.UsersByRole.OrderByDescending(r => r.Count).Take(5))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span>@SystemRoles.DisplayName(role.Status)</span>
                            <span class="badge bg-secondary">@role.Count</span>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-page="/Admin/Users/Index" class="btn btn-sm btn-outline-success me-2">
                        <i class="bi bi-people"></i> Users
                    </a>
                    <a asp-page="/Admin/OrgUnits/Index" class="btn btn-sm btn-outline-success">
                        <i class="bi bi-diagram-3"></i> Org Units
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Upward Flow Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-arrow-up-circle"></i> Upward Flow - Pending Items</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="border rounded p-3 text-center h-100">
                                <i class="bi bi-lightbulb display-6 text-info"></i>
                                <div class="h3 mb-0 mt-2">@Model.Data.OpenSuggestedActions</div>
                                <div class="text-muted">Open Suggested Actions</div>
                                <a asp-page="/Admin/UpwardFlow/SuggestedActions/Index" class="btn btn-sm btn-outline-info mt-2">
                                    View All
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="border rounded p-3 text-center h-100">
                                <i class="bi bi-box-seam display-6 text-warning"></i>
                                <div class="h3 mb-0 mt-2">@Model.Data.OpenResourceRequests</div>
                                <div class="text-muted">Open Resource Requests</div>
                                <div class="small text-secondary">
                                    Est. Cost: @Model.Data.PendingResourceCost.ToString("N0") EGP
                                </div>
                                <a asp-page="/Admin/UpwardFlow/ResourceRequests/Index" class="btn btn-sm btn-outline-warning mt-2">
                                    View All
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="border rounded p-3 text-center h-100">
                                <i class="bi bi-life-preserver display-6 text-danger"></i>
                                <div class="h3 mb-0 mt-2">@Model.Data.OpenSupportRequests</div>
                                <div class="text-muted">Open Support Requests</div>
                                <a asp-page="/Admin/UpwardFlow/SupportRequests/Index" class="btn btn-sm btn-outline-danger mt-2">
                                    View All
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Downward Flow & Recent Activity -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-arrow-down-circle"></i> Downward Flow Status</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h3 mb-0 text-warning">@Model.Data.PendingFeedbackAcknowledgments</div>
                                <small class="text-muted">Feedback Pending Ack.</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h3 mb-0 text-primary">@Model.Data.ActiveRecommendations</div>
                                <small class="text-muted">Active Recommendations</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-page="/Admin/Downward/Feedback/Index" class="btn btn-sm btn-outline-secondary me-2">
                        Feedback
                    </a>
                    <a asp-page="/Admin/Downward/Recommendations/Index" class="btn btn-sm btn-outline-secondary">
                        Recommendations
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-activity"></i> Recent Activity (7 days)</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h3 mb-0 text-info">@Model.Data.RecentReportSubmissions</div>
                                <small class="text-muted">Reports Submitted</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <div class="h3 mb-0 text-success">@Model.Data.RecentApprovals</div>
                                <small class="text-muted">Reports Approved</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Deadlines -->
    @if (Model.Data.UpcomingDeadlines.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-calendar-event"></i> Upcoming Deadlines (Next 7 Days)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Template</th>
                                        <th>Period</th>
                                        <th>Deadline</th>
                                        <th>Days Remaining</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var deadline in Model.Data.UpcomingDeadlines)
                                    {
                                        <tr>
                                            <td>@deadline.TemplateName</td>
                                            <td>@deadline.PeriodName</td>
                                            <td>@deadline.Deadline.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (deadline.DaysRemaining <= 1)
                                                {
                                                    <span class="badge bg-danger">@deadline.DaysRemaining day(s)</span>
                                                }
                                                else if (deadline.DaysRemaining <= 3)
                                                {
                                                    <span class="badge bg-warning text-dark">@deadline.DaysRemaining days</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">@deadline.DaysRemaining days</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/Aggregation/Summary/Index" class="btn btn-outline-primary w-100">
                                <i class="bi bi-bar-chart-line"></i> View Aggregation Summary
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/AuditLog/Index" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-journal-text"></i> View Audit Log
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/Templates/Index" class="btn btn-outline-info w-100">
                                <i class="bi bi-file-earmark-ruled"></i> Manage Templates
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-page="/Admin/Periods/Index" class="btn btn-outline-success w-100">
                                <i class="bi bi-calendar3"></i> Manage Periods
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
