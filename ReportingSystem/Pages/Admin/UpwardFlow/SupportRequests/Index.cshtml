@page
@using ReportingSystem.Models
@model ReportingSystem.Pages.Admin.UpwardFlow.SupportRequests.IndexModel
@{
    ViewData["Title"] = "Support Requests";
}

<div class="container-fluid mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-life-preserver text-danger"></i> Support Requests</h2>
            <p class="text-muted mb-0">Manage assistance and coordination requests</p>
        </div>
        <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard
        </a>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Requests</h5>
                    <h2>@Model.TotalCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">Open Requests</h5>
                    <h2>@Model.OpenCount</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select asp-for="StatusFilter" class="form-select">
                        <option value="">All Statuses</option>
                        @foreach (var status in SupportStatus.All)
                        {
                            <option value="@status">@SupportStatus.DisplayName(status)</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Category</label>
                    <select asp-for="CategoryFilter" class="form-select">
                        <option value="">All Categories</option>
                        @foreach (var cat in SupportCategory.All)
                        {
                            <option value="@cat">@SupportCategory.DisplayName(cat)</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Urgency</label>
                    <select asp-for="UrgencyFilter" class="form-select">
                        <option value="">All Urgencies</option>
                        @foreach (var urg in SupportUrgency.All)
                        {
                            <option value="@urg">@urg</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Search</label>
                    <input asp-for="SearchTerm" class="form-control" placeholder="Search title or description..." />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Results</h5>
            <span class="badge bg-danger">@Model.TotalCount items</span>
        </div>
        <div class="card-body p-0">
            @if (Model.SupportRequests.Count == 0)
            {
                <div class="alert alert-info m-3">
                    <i class="bi bi-info-circle"></i> No support requests found matching your criteria.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Report</th>
                                <th>Category</th>
                                <th>Urgency</th>
                                <th>Status</th>
                                <th>Assigned To</th>
                                <th>Created</th>
                                <th style="width:280px">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.SupportRequests)
                            {
                                <tr class="@(request.IsOpen && request.Urgency == SupportUrgency.Critical ? "table-danger" : "")">
                                    <td>
                                        <strong>@request.Title</strong>
                                        @if (!string.IsNullOrEmpty(request.Description))
                                        {
                                            <br /><small class="text-muted">@(request.Description.Length > 60 ? request.Description.Substring(0, 60) + "..." : request.Description)</small>
                                        }
                                    </td>
                                    <td>
                                        <a asp-page="/Admin/Reports/View" asp-route-id="@request.ReportId">
                                            @request.Report.ReportTemplate.Name
                                        </a>
                                        <br /><small class="text-muted">by @request.Report.SubmittedBy.Name</small>
                                    </td>
                                    <td><span class="badge bg-secondary">@SupportCategory.DisplayName(request.Category)</span></td>
                                    <td><span class="badge @SupportUrgency.BadgeClass(request.Urgency)">@request.Urgency</span></td>
                                    <td>
                                        <span class="badge @SupportStatus.BadgeClass(request.Status)">@SupportStatus.DisplayName(request.Status)</span>
                                        @if (request.ResolvedBy != null)
                                        {
                                            <br /><small class="text-muted">by @request.ResolvedBy.Name</small>
                                        }
                                    </td>
                                    <td>
                                        @if (request.AssignedTo != null)
                                        {
                                            <span class="text-primary">@request.AssignedTo.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Unassigned</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@request.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            @if (request.IsOpen)
                                            {
                                                <!-- Assign Dropdown -->
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-primary dropdown-toggle me-1" type="button" data-bs-toggle="dropdown">
                                                        Assign
                                                    </button>
                                                    <div class="dropdown-menu p-2" style="min-width: 200px;">
                                                        <form method="post" asp-page-handler="Assign">
                                                            <input type="hidden" name="id" value="@request.Id" />
                                                            <div class="mb-2">
                                                                <select name="assignedToId" class="form-select form-select-sm" asp-items="Model.UserList">
                                                                    <option value="">Select user...</option>
                                                                </select>
                                                            </div>
                                                            <button type="submit" class="btn btn-sm btn-primary w-100">Assign</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            }

                                            <!-- Status Dropdown -->
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-danger dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    Status
                                                </button>
                                                <ul class="dropdown-menu">
                                                    @foreach (var status in SupportStatus.All.Where(s => s != request.Status))
                                                    {
                                                        <li>
                                                            <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                                <input type="hidden" name="id" value="@request.Id" />
                                                                <input type="hidden" name="newStatus" value="@status" />
                                                                <button type="submit" class="dropdown-item">
                                                                    @SupportStatus.DisplayName(status)
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
