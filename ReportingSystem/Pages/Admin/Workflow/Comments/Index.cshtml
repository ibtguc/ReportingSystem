@page
@using ReportingSystem.Models
@model ReportingSystem.Pages.Admin.Workflow.Comments.IndexModel
@{
    ViewData["Title"] = "Comments";
}

<div class="container-fluid mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-chat-dots text-primary"></i> Comments</h2>
            <p class="text-muted mb-0">View and moderate comments across all reports</p>
        </div>
        <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard
        </a>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select asp-for="StatusFilter" class="form-select">
                        <option value="">All Statuses</option>
                        @foreach (var status in CommentStatus.All)
                        {
                            <option value="@status">@CommentStatus.DisplayName(status)</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Report ID</label>
                    <input asp-for="ReportId" class="form-control" type="number" placeholder="Filter by report..." />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input asp-for="SearchTerm" class="form-control" placeholder="Search content or author..." />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Results</h5>
            <span class="badge bg-primary">@Model.TotalCount comments</span>
        </div>
        <div class="card-body p-0">
            @if (Model.Comments.Count == 0)
            {
                <div class="alert alert-info m-3">
                    <i class="bi bi-info-circle"></i> No comments found matching your criteria.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Content</th>
                                <th>Author</th>
                                <th>Report</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th style="width:180px">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in Model.Comments)
                            {
                                <tr class="@(comment.IsDeleted ? "table-secondary" : "")">
                                    <td>
                                        @if (comment.Content.Length > 100)
                                        {
                                            @comment.Content.Substring(0, 100)<text>...</text>
                                        }
                                        else
                                        {
                                            @comment.Content
                                        }
                                        @if (comment.IsEdited)
                                        {
                                            <span class="badge bg-info ms-1">edited</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@comment.Author.Name</strong>
                                        <br /><small class="text-muted">@comment.Author.Email</small>
                                    </td>
                                    <td>
                                        <a asp-page="/Admin/Reports/View" asp-route-id="@comment.ReportId">
                                            @comment.Report.ReportTemplate.Name
                                        </a>
                                        <br /><small class="text-muted">by @comment.Report.SubmittedBy.Name</small>
                                    </td>
                                    <td>
                                        @if (comment.IsReply)
                                        {
                                            <span class="badge bg-secondary">Reply</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">Top-level</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @CommentStatus.BadgeClass(comment.Status)">
                                            @CommentStatus.DisplayName(comment.Status)
                                        </span>
                                    </td>
                                    <td>
                                        <small>@comment.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    Status
                                                </button>
                                                <ul class="dropdown-menu">
                                                    @foreach (var status in CommentStatus.All.Where(s => s != comment.Status))
                                                    {
                                                        <li>
                                                            <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                                <input type="hidden" name="id" value="@comment.Id" />
                                                                <input type="hidden" name="newStatus" value="@status" />
                                                                <button type="submit" class="dropdown-item">
                                                                    @CommentStatus.DisplayName(status)
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                            @if (!comment.IsDeleted)
                                            {
                                                <form method="post" asp-page-handler="Delete" class="d-inline ms-1">
                                                    <input type="hidden" name="id" value="@comment.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('Delete this comment?')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
