@page
@model ReportingSystem.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
            <p class="text-muted">Welcome to the Reporting Hierarchy Management System</p>
        </div>
    </div>

    <!-- Role-Based Dashboards Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <h5 class="mb-0"><i class="bi bi-graph-up-arrow"></i> Role-Based Dashboards</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Select a dashboard view based on your role for personalized KPIs and metrics:</p>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Dashboards/Executive" class="btn btn-outline-primary btn-lg w-100 py-3">
                                <i class="bi bi-graph-up-arrow d-block mb-2" style="font-size: 2rem;"></i>
                                Executive
                                <br /><small class="text-muted">Org-wide KPIs</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Dashboards/Manager" class="btn btn-outline-success btn-lg w-100 py-3">
                                <i class="bi bi-people-fill d-block mb-2" style="font-size: 2rem;"></i>
                                Manager
                                <br /><small class="text-muted">Team Statistics</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Dashboards/Reviewer" class="btn btn-outline-info btn-lg w-100 py-3">
                                <i class="bi bi-clipboard-check d-block mb-2" style="font-size: 2rem;"></i>
                                Reviewer
                                <br /><small class="text-muted">Review Workload</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Dashboards/Originator" class="btn btn-outline-warning btn-lg w-100 py-3">
                                <i class="bi bi-person-circle d-block mb-2" style="font-size: 2rem;"></i>
                                My Dashboard
                                <br /><small class="text-muted">Personal Reports</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reporting Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-diagram-3"></i> Reporting</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Reports/Create" class="btn btn-outline-primary btn-lg w-100 py-3">
                                <i class="bi bi-file-earmark-plus d-block mb-2" style="font-size: 2rem;"></i>
                                New Report
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Reports/Index" class="btn btn-outline-primary btn-lg w-100 py-3">
                                <i class="bi bi-file-earmark-text d-block mb-2" style="font-size: 2rem;"></i>
                                All Reports
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Templates/Index" class="btn btn-outline-info btn-lg w-100 py-3">
                                <i class="bi bi-file-earmark-ruled d-block mb-2" style="font-size: 2rem;"></i>
                                Templates
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Admin/Dashboards/Executive" class="btn btn-outline-secondary btn-lg w-100 py-3">
                                <i class="bi bi-bar-chart d-block mb-2" style="font-size: 2rem;"></i>
                                Analytics
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upward Flow Section (Phase 4) -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-arrow-up-circle"></i> Upward Flow</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/UpwardFlow/SuggestedActions/Index" class="btn btn-outline-info btn-lg w-100 py-3">
                                <i class="bi bi-lightbulb d-block mb-2" style="font-size: 2rem;"></i>
                                Suggested Actions
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/UpwardFlow/ResourceRequests/Index" class="btn btn-outline-warning btn-lg w-100 py-3">
                                <i class="bi bi-box-seam d-block mb-2" style="font-size: 2rem;"></i>
                                Resource Requests
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/UpwardFlow/SupportRequests/Index" class="btn btn-outline-danger btn-lg w-100 py-3">
                                <i class="bi bi-life-preserver d-block mb-2" style="font-size: 2rem;"></i>
                                Support Requests
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Organization Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-building"></i> Organization</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/OrgUnits/Index" class="btn btn-outline-success btn-lg w-100 py-3">
                                <i class="bi bi-diagram-3-fill d-block mb-2" style="font-size: 2rem;"></i>
                                Organizational Units
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Delegations/Index" class="btn btn-outline-success btn-lg w-100 py-3">
                                <i class="bi bi-arrow-left-right d-block mb-2" style="font-size: 2rem;"></i>
                                Delegations
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Users/Index" class="btn btn-outline-success btn-lg w-100 py-3">
                                <i class="bi bi-people-fill d-block mb-2" style="font-size: 2rem;"></i>
                                Users & Roles
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> System Administration</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Backup/Index" class="btn btn-outline-dark btn-lg w-100 py-3">
                                <i class="bi bi-database-fill-gear d-block mb-2" style="font-size: 2rem;"></i>
                                Database Backups
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="/Auth/Logout" class="btn btn-outline-danger btn-lg w-100 py-3">
                                <i class="bi bi-box-arrow-right d-block mb-2" style="font-size: 2rem;"></i>
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
