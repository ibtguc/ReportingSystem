@page
@model ReportingSystem.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
            <p class="text-muted">Organizational Reporting System</p>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-bg-primary shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-diagram-3 fs-3"></i>
                    <h3 class="mb-0">@Model.OrgStats.committees</h3>
                    <small>Committees</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-success shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-people fs-3"></i>
                    <h3 class="mb-0">@Model.OrgStats.users</h3>
                    <small>Users</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-info shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-check fs-3"></i>
                    <h3 class="mb-0">@Model.OrgStats.memberships</h3>
                    <small>Memberships</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-warning shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge fs-3"></i>
                    <h3 class="mb-0">@Model.OrgStats.shadows</h3>
                    <small>Shadow Assignments</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Organization Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-diagram-3"></i> Organization</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Organization/Index" class="btn btn-outline-primary btn-lg w-100 py-3">
                                <i class="bi bi-diagram-3-fill d-block mb-2" style="font-size: 2rem;"></i>
                                Org Tree
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Organization/Committees/Index" class="btn btn-outline-primary btn-lg w-100 py-3">
                                <i class="bi bi-people-fill d-block mb-2" style="font-size: 2rem;"></i>
                                Committees
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Organization/Committees/Create" class="btn btn-outline-success btn-lg w-100 py-3">
                                <i class="bi bi-plus-circle d-block mb-2" style="font-size: 2rem;"></i>
                                Add Committee
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-start border-4 border-primary shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-text fs-3 text-primary"></i>
                    <h3 class="mb-0">@Model.ReportStats.total</h3>
                    <small class="text-muted">Active Reports</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-start border-4 border-info shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-send fs-3 text-info"></i>
                    <h3 class="mb-0">@Model.ReportStats.submitted</h3>
                    <small class="text-muted">Submitted</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-start border-4 border-warning shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-search fs-3 text-warning"></i>
                    <h3 class="mb-0">@Model.ReportStats.underReview</h3>
                    <small class="text-muted">Under Review</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-start border-4 border-success shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle fs-3 text-success"></i>
                    <h3 class="mb-0">@Model.ReportStats.approved</h3>
                    <small class="text-muted">Approved</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Reporting Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> Reporting</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Reports/Create" class="btn btn-outline-primary btn-lg w-100 py-3">
                                <i class="bi bi-file-earmark-plus d-block mb-2" style="font-size: 2rem;"></i>
                                New Report
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Reports/Index" class="btn btn-outline-secondary btn-lg w-100 py-3">
                                <i class="bi bi-file-earmark-text d-block mb-2" style="font-size: 2rem;"></i>
                                All Reports
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Reports/Index" asp-route-Status="Submitted" class="btn btn-outline-warning btn-lg w-100 py-3">
                                <i class="bi bi-hourglass-split d-block mb-2" style="font-size: 2rem;"></i>
                                Pending Review
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Directive Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-start border-4 border-primary shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-megaphone fs-3 text-primary"></i>
                    <h3 class="mb-0">@Model.DirectiveStats.total</h3>
                    <small class="text-muted">Active Directives</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-start border-4 border-info shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-send fs-3 text-info"></i>
                    <h3 class="mb-0">@Model.DirectiveStats.issued</h3>
                    <small class="text-muted">Issued / Delivered</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-start border-4 border-warning shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-gear fs-3 text-warning"></i>
                    <h3 class="mb-0">@Model.DirectiveStats.inProgress</h3>
                    <small class="text-muted">In Progress</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-start border-4 @(Model.DirectiveStats.overdue > 0 ? "border-danger" : "border-success") shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle fs-3 @(Model.DirectiveStats.overdue > 0 ? "text-danger" : "text-success")"></i>
                    <h3 class="mb-0">@Model.DirectiveStats.overdue</h3>
                    <small class="text-muted">Overdue</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Directives Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-megaphone"></i> Directives</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Directives/Create" class="btn btn-outline-primary btn-lg w-100 py-3">
                                <i class="bi bi-plus-circle d-block mb-2" style="font-size: 2rem;"></i>
                                Issue Directive
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Directives/Index" class="btn btn-outline-secondary btn-lg w-100 py-3">
                                <i class="bi bi-megaphone d-block mb-2" style="font-size: 2rem;"></i>
                                All Directives
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Directives/Track" class="btn btn-outline-warning btn-lg w-100 py-3">
                                <i class="bi bi-exclamation-triangle d-block mb-2" style="font-size: 2rem;"></i>
                                Track Overdue
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/Directives/Index" asp-route-Status="Implemented" class="btn btn-outline-success btn-lg w-100 py-3">
                                <i class="bi bi-check-circle d-block mb-2" style="font-size: 2rem;"></i>
                                Implemented
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> System Administration</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Users/Index" class="btn btn-outline-dark btn-lg w-100 py-3">
                                <i class="bi bi-people-fill d-block mb-2" style="font-size: 2rem;"></i>
                                Users
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Backup/Index" class="btn btn-outline-dark btn-lg w-100 py-3">
                                <i class="bi bi-database-fill-gear d-block mb-2" style="font-size: 2rem;"></i>
                                Database Backups
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="/Auth/Logout" class="btn btn-outline-danger btn-lg w-100 py-3">
                                <i class="bi bi-box-arrow-right d-block mb-2" style="font-size: 2rem;"></i>
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
