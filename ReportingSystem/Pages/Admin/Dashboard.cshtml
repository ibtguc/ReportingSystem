@page
@model ReportingSystem.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
            <p class="text-muted">Welcome to the Reporting Hierarchy Management System</p>
        </div>
    </div>

    <!-- Reporting Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-diagram-3"></i> Reporting</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="btn btn-outline-primary btn-lg w-100 py-3 disabled">
                                <i class="bi bi-file-earmark-text d-block mb-2" style="font-size: 2rem;"></i>
                                Submit Report
                                <br /><small class="text-muted">Coming in Phase 2</small>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="btn btn-outline-success btn-lg w-100 py-3 disabled">
                                <i class="bi bi-check2-square d-block mb-2" style="font-size: 2rem;"></i>
                                Review Reports
                                <br /><small class="text-muted">Coming in Phase 2</small>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="btn btn-outline-info btn-lg w-100 py-3 disabled">
                                <i class="bi bi-bar-chart d-block mb-2" style="font-size: 2rem;"></i>
                                Analytics
                                <br /><small class="text-muted">Coming in Phase 3</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> System Administration</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Users/Index" class="btn btn-outline-dark btn-lg w-100 py-3">
                                <i class="bi bi-people-fill d-block mb-2" style="font-size: 2rem;"></i>
                                Users
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-page="/Admin/Backup/Index" class="btn btn-outline-dark btn-lg w-100 py-3">
                                <i class="bi bi-database-fill-gear d-block mb-2" style="font-size: 2rem;"></i>
                                Database Backups
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="/Auth/Logout" class="btn btn-outline-danger btn-lg w-100 py-3">
                                <i class="bi bi-box-arrow-right d-block mb-2" style="font-size: 2rem;"></i>
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
