@page
@model ReportingSystem.Pages.Admin.Aggregation.Rules.IndexModel
@{
    ViewData["Title"] = "Aggregation Rules";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">Aggregation Rules</h1>
        <p class="text-muted mb-0">Configure how report field values are aggregated up the hierarchy</p>
    </div>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRuleModal">
        <i class="bi bi-plus-lg"></i> New Rule
    </button>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Stats -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h3 class="mb-0">@Model.TotalCount</h3>
                <small class="text-muted">Rules (filtered)</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h3 class="mb-0">@Model.ActiveCount</h3>
                <small>Active Rules</small>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Template</label>
                <select asp-for="TemplateId" asp-items="Model.TemplateOptions" class="form-select">
                    <option value="">All Templates</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Method</label>
                <select asp-for="MethodFilter" asp-items="Model.MethodOptions" class="form-select">
                    <option value="">All Methods</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Search</label>
                <input asp-for="SearchTerm" class="form-control" placeholder="Search rules..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <div class="form-check mt-2">
                    <input asp-for="OnlyActive" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="OnlyActive">Active only</label>
                </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-filter"></i> Filter
                </button>
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Rules Table -->
<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Template / Field</th>
                    <th>Rule Name</th>
                    <th>Method</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Rules.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            No aggregation rules found. Create one to get started.
                        </td>
                    </tr>
                }
                @foreach (var rule in Model.Rules)
                {
                    <tr class="@(!rule.IsActive ? "table-secondary" : "")">
                        <td>
                            <div class="fw-semibold">@rule.ReportField.ReportTemplate.Name</div>
                            <small class="text-muted">@rule.ReportField.Label</small>
                        </td>
                        <td>
                            <span class="fw-medium">@rule.Name</span>
                            @if (!string.IsNullOrEmpty(rule.Description))
                            {
                                <br /><small class="text-muted">@rule.Description</small>
                            }
                        </td>
                        <td>
                            <span class="badge @ReportingSystem.Models.AggregationMethod.BadgeClass(rule.Method)">
                                @rule.MethodDisplayName
                            </span>
                        </td>
                        <td>@rule.Priority</td>
                        <td>
                            @if (rule.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <small>@rule.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        Method
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        @foreach (var method in ReportingSystem.Models.AggregationMethod.All)
                                        {
                                            <li>
                                                <form method="post" asp-page-handler="UpdateMethod" class="d-inline">
                                                    <input type="hidden" name="id" value="@rule.Id" />
                                                    <input type="hidden" name="newMethod" value="@method" />
                                                    <button type="submit" class="dropdown-item @(rule.Method == method ? "active" : "")">
                                                        @ReportingSystem.Models.AggregationMethod.DisplayName(method)
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                    </ul>
                                </div>
                                <form method="post" asp-page-handler="ToggleActive" class="d-inline">
                                    <input type="hidden" name="id" value="@rule.Id" />
                                    <button type="submit" class="btn btn-outline-secondary btn-sm" title="@(rule.IsActive ? "Deactivate" : "Activate")">
                                        <i class="bi @(rule.IsActive ? "bi-pause-fill" : "bi-play-fill")"></i>
                                    </button>
                                </form>
                                <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Delete this rule?');">
                                    <input type="hidden" name="id" value="@rule.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create Rule Modal -->
<div class="modal fade" id="createRuleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="CreateRule">
                <div class="modal-header">
                    <h5 class="modal-title">Create Aggregation Rule</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Report Field <span class="text-danger">*</span></label>
                        <select asp-for="NewRuleFieldId" asp-items="Model.FieldOptions" class="form-select" required>
                            <option value="">-- Select Field --</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Rule Name <span class="text-danger">*</span></label>
                        <input asp-for="NewRuleName" class="form-control" required placeholder="e.g., Sum for Monthly Totals" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Aggregation Method <span class="text-danger">*</span></label>
                        <select asp-for="NewRuleMethod" asp-items="Model.MethodOptions" class="form-select" required></select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea asp-for="NewRuleDescription" class="form-control" rows="2" placeholder="Optional description..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Rule</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Persist filter state
        if (typeof initFilterState === 'function') {
            initFilterState();
        }
    </script>
}
