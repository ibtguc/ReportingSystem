@page
@using ReportingSystem.Models
@model ReportingSystem.Pages.Admin.Periods.CreateModel
@{
    ViewData["Title"] = "Create Report Period";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0"><i class="bi bi-calendar-plus"></i> Create Report Period</h4>
                    <small class="text-muted">
                        Template: <strong>@Model.Template.Name</strong>
                        <span class="badge bg-primary">@ReportSchedule.DisplayName(Model.Template.Schedule)</span>
                    </small>
                </div>
                <div class="card-body">
                    <form method="post" asp-route-templateId="@Model.Template.Id">
                        <input type="hidden" asp-for="Period.ReportTemplateId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Period.Name" class="form-label"></label>
                            <input asp-for="Period.Name" class="form-control" />
                            <span asp-validation-for="Period.Name" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Period.StartDate" class="form-label"></label>
                                <input asp-for="Period.StartDate" class="form-control" type="date" />
                                <span asp-validation-for="Period.StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Period.EndDate" class="form-label"></label>
                                <input asp-for="Period.EndDate" class="form-control" type="date" />
                                <span asp-validation-for="Period.EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Period.SubmissionDeadline" class="form-label"></label>
                                <input asp-for="Period.SubmissionDeadline" class="form-control" type="date" />
                                <span asp-validation-for="Period.SubmissionDeadline" class="text-danger"></span>
                                <div class="form-text">Users must submit by this date (plus any grace period).</div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Period.GracePeriodDays" class="form-label"></label>
                                <input asp-for="Period.GracePeriodDays" class="form-control" type="number" min="0" max="30" />
                                <span asp-validation-for="Period.GracePeriodDays" class="text-danger"></span>
                                <div class="form-text">Additional days after the deadline for late submissions.</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Period.Status" class="form-label"></label>
                            <select asp-for="Period.Status" class="form-select">
                                <option value="@PeriodStatus.Upcoming">Upcoming (not yet open)</option>
                                <option value="@PeriodStatus.Open">Open (accepting submissions now)</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" asp-route-templateId="@Model.Template.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Period
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
