@page "{id:int}"
@using ReportingSystem.Models
@model ReportingSystem.Pages.Admin.Periods.EditModel
@{
    ViewData["Title"] = "Edit Period";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Period: @Model.Period.Name</h4>
                    <small class="text-muted">
                        Template: <strong>@Model.Template.Name</strong>
                    </small>
                </div>
                <div class="card-body">
                    <form method="post" asp-route-templateId="@Model.Template.Id">
                        <input type="hidden" asp-for="Period.Id" />
                        <input type="hidden" asp-for="Period.ReportTemplateId" />
                        <input type="hidden" asp-for="Period.CreatedAt" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Period.Name" class="form-label"></label>
                            <input asp-for="Period.Name" class="form-control" />
                            <span asp-validation-for="Period.Name" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Period.StartDate" class="form-label"></label>
                                <input asp-for="Period.StartDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Period.EndDate" class="form-label"></label>
                                <input asp-for="Period.EndDate" class="form-control" type="date" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Period.SubmissionDeadline" class="form-label"></label>
                                <input asp-for="Period.SubmissionDeadline" class="form-control" type="date" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Period.GracePeriodDays" class="form-label"></label>
                                <input asp-for="Period.GracePeriodDays" class="form-control" type="number" min="0" max="30" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Period.Status" class="form-label"></label>
                                <select asp-for="Period.Status" asp-items="@(new SelectList(Enum.GetValues<PeriodStatus>()))" class="form-select"></select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Active</label>
                                <div class="form-check form-switch mt-2">
                                    <input asp-for="Period.IsActive" class="form-check-input" />
                                    <label asp-for="Period.IsActive" class="form-check-label">Active</label>
                                </div>
                            </div>
                        </div>

                        @if (Model.ReportCount > 0)
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i>
                                This period has <strong>@Model.ReportCount</strong> report(s). Changes may affect submitted reports.
                            </div>
                        }

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" asp-route-templateId="@Model.Template.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
