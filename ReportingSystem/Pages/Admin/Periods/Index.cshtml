@page
@using ReportingSystem.Models
@model ReportingSystem.Pages.Admin.Periods.IndexModel
@{
    ViewData["Title"] = $"Periods - {Model.Template.Name}";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-calendar3"></i> Report Periods</h2>
            <p class="text-muted">
                Template: <strong>@Model.Template.Name</strong>
                <span class="badge bg-primary ms-1">@ReportSchedule.DisplayName(Model.Template.Schedule)</span>
            </p>
        </div>
        <div class="col text-end">
            <a asp-page="Create" asp-route-templateId="@Model.Template.Id" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Period
            </a>
            <a asp-page="/Admin/Templates/Details" asp-route-id="@Model.Template.Id" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Template
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Periods.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No periods defined yet. Click "New Period" to create one.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Period</th>
                            <th>Date Range</th>
                            <th>Deadline</th>
                            <th>Grace</th>
                            <th>Status</th>
                            <th>Reports</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var period in Model.Periods)
                        {
                            var reportCount = Model.ReportCounts.GetValueOrDefault(period.Id);
                            var statusBadge = period.Status switch
                            {
                                PeriodStatus.Upcoming => "bg-secondary",
                                PeriodStatus.Open => period.IsOverdue ? "bg-warning text-dark" : "bg-success",
                                PeriodStatus.Closed => "bg-danger",
                                PeriodStatus.Archived => "bg-dark",
                                _ => "bg-secondary"
                            };
                            var statusText = period.Status switch
                            {
                                PeriodStatus.Open when period.IsOverdue => "Open (Overdue)",
                                _ => period.Status.ToString()
                            };

                            <tr>
                                <td><strong>@period.Name</strong></td>
                                <td>@period.StartDate.ToString("MMM dd") - @period.EndDate.ToString("MMM dd, yyyy")</td>
                                <td>@period.SubmissionDeadline.ToString("MMM dd, yyyy")</td>
                                <td>@period.GracePeriodDays day(s)</td>
                                <td><span class="badge @statusBadge">@statusText</span></td>
                                <td>@reportCount</td>
                                <td class="text-end">
                                    @if (period.Status == PeriodStatus.Upcoming)
                                    {
                                        <form method="post" asp-page-handler="Open" asp-route-templateId="@Model.Template.Id" asp-route-periodId="@period.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success" title="Open for submissions">
                                                <i class="bi bi-play-fill"></i> Open
                                            </button>
                                        </form>
                                    }
                                    @if (period.Status == PeriodStatus.Open)
                                    {
                                        <form method="post" asp-page-handler="Close" asp-route-templateId="@Model.Template.Id" asp-route-periodId="@period.Id" class="d-inline"
                                              onsubmit="return confirm('Close this period? No more submissions will be accepted.');">
                                            <button type="submit" class="btn btn-sm btn-warning" title="Close period">
                                                <i class="bi bi-stop-fill"></i> Close
                                            </button>
                                        </form>
                                    }
                                    <a asp-page="Edit" asp-route-templateId="@Model.Template.Id" asp-route-id="@period.Id"
                                       class="btn btn-sm btn-outline-secondary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
