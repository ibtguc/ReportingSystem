@page
@model ReportingSystem.Pages.Confidentiality.AccessGrantsModel
@{
    ViewData["Title"] = "Access Grants";
}

<div class="container mt-4" style="max-width: 900px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-person-lock"></i> Access Grants & Audit Trail</h2>
            <p class="text-muted mb-0">@Model.ItemType #@Model.ItemId</p>
        </div>
        <a asp-page="Mark" asp-route-itemType="@Model.ItemType" asp-route-itemId="@Model.ItemId"
           class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Confidentiality
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Grant Access Form -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-person-plus"></i> Grant Explicit Access</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="Grant" class="row g-3 align-items-end">
                <input type="hidden" asp-for="ItemType" />
                <input type="hidden" asp-for="ItemId" />
                <div class="col-md-4">
                    <label asp-for="GrantToUserId" class="form-label">User</label>
                    <select asp-for="GrantToUserId" class="form-select">
                        <option value="">Select user...</option>
                        @foreach (var user in Model.AvailableUsers)
                        {
                            <option value="@user.Id">@user.Name (@user.SystemRole)</option>
                        }
                    </select>
                </div>
                <div class="col-md-5">
                    <label asp-for="GrantReason" class="form-label">Reason</label>
                    <input asp-for="GrantReason" class="form-control" placeholder="Why is this user being granted access?" />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-person-plus"></i> Grant Access
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Active Grants -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-people"></i> Active Access Grants (@Model.Grants.Count)</h5>
        </div>
        @if (Model.Grants.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>User</th>
                            <th>Granted By</th>
                            <th>Reason</th>
                            <th>Granted At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var grant in Model.Grants)
                        {
                            <tr>
                                <td>
                                    <a asp-page="/Admin/Users/Details" asp-route-id="@grant.GrantedToUserId" asp-route-returnTo="confidentiality" class="text-decoration-none"><strong>@grant.GrantedTo.Name</strong></a>
                                    <br /><small class="text-muted">@grant.GrantedTo.SystemRole</small>
                                </td>
                                <td><a asp-page="/Admin/Users/Details" asp-route-id="@grant.GrantedById" asp-route-returnTo="confidentiality" class="text-decoration-none">@grant.GrantedBy.Name</a></td>
                                <td>@(grant.Reason ?? "—")</td>
                                <td>@grant.GrantedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    <form method="post" asp-page-handler="Revoke" class="d-inline">
                                        <input type="hidden" asp-for="ItemType" />
                                        <input type="hidden" asp-for="ItemId" />
                                        <input type="hidden" name="grantId" value="@grant.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Revoke access for @grant.GrantedTo.Name?');">
                                            <i class="bi bi-x-circle"></i> Revoke
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="card-body text-muted">
                <i class="bi bi-info-circle"></i> No explicit access grants for this item.
            </div>
        }
    </div>

    <!-- Audit Trail -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Confidentiality Audit Trail</h5>
        </div>
        @if (Model.MarkingHistory.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Action</th>
                            <th>By</th>
                            <th>Committee</th>
                            <th>Level</th>
                            <th>CO Rank</th>
                            <th>Reason</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var marking in Model.MarkingHistory)
                        {
                            <tr>
                                <td>
                                    @if (marking.IsActive)
                                    {
                                        <span class="badge bg-warning text-dark">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Removed</span>
                                    }
                                </td>
                                <td>@marking.MarkedBy.Name</td>
                                <td>@marking.MarkerCommittee.Name</td>
                                <td>@marking.MarkerCommitteeLevel</td>
                                <td>@(marking.MinChairmanOfficeRank?.ToString() ?? "—")</td>
                                <td>@(marking.Reason ?? "—")</td>
                                <td>
                                    @marking.MarkedAt.ToString("MMM dd, yyyy HH:mm")
                                    @if (!marking.IsActive && marking.UnmarkedAt.HasValue)
                                    {
                                        <br /><small class="text-muted">
                                            Removed: @marking.UnmarkedAt.Value.ToString("MMM dd HH:mm")
                                            @if (marking.UnmarkedBy != null)
                                            {
                                                <text>by @marking.UnmarkedBy.Name</text>
                                            }
                                        </small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="card-body text-muted">
                <i class="bi bi-info-circle"></i> No confidentiality history for this item.
            </div>
        }
    </div>
</div>
