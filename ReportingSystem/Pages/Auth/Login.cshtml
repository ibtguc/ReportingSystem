@page
@model ReportingSystem.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // Use a clean layout for login page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reporting System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            max-width: 500px;
            width: 100%;
        }
        .magic-link-box {
            background-color: #f8f9fa;
            border: 2px dashed #0066cc;
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
        }
        .magic-link-url {
            word-break: break-all;
            background-color: white;
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #dee2e6;
            font-family: monospace;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 login-card">
                <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i class="bi bi-diagram-3" style="font-size: 3rem; color: #667eea;"></i>
                            <h2 class="mt-3">Reporting System</h2>
                            <p class="text-muted">Administrator Login</p>
                        </div>

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                            </div>
                        }

                        @if (!Model.ShowMagicLink)
                        {
                            <form method="post">
                                <div class="mb-4">
                                    <label for="email" class="form-label">Email Address</label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                        <input type="email"
                                               class="form-control"
                                               id="email"
                                               asp-for="Email"
                                               placeholder="admin@reporting.com"
                                               required
                                               autofocus />
                                    </div>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="bi bi-box-arrow-in-right"></i> Send Login Link
                                    </button>
                                </div>
                            </form>

                            <div class="mt-4 text-center">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle"></i>
                                    We'll send you a secure login link via email
                                </small>
                            </div>
                        }
                        else
                        {
                            <!-- Email Status -->
                            @if (Model.EmailSent)
                            {
                                <div class="alert alert-success">
                                    <i class="bi bi-envelope-check-fill"></i>
                                    <strong>Login link sent!</strong> Check your email inbox.
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-envelope-x-fill"></i>
                                    <strong>Email not sent.</strong> Use the link below.
                                    @if (!string.IsNullOrEmpty(Model.EmailErrorMessage))
                                    {
                                        <br /><small class="text-muted">@Model.EmailErrorMessage</small>
                                    }
                                </div>
                            }

                            @if (Model.IsDevelopment)
                            {
                                <div class="alert alert-info border-info" style="border: 2px solid #0dcaf0 !important;">
                                    <h6 class="alert-heading">
                                        <i class="bi bi-info-circle-fill"></i>
                                        Development Mode: Magic link displayed below
                                    </h6>
                                    <p class="mb-0 small">
                                        This magic link is only shown in development environment.
                                    </p>
                                </div>
                            }

                            <div class="magic-link-box">
                                <h6 class="mb-3">
                                    <i class="bi bi-link-45deg"></i> Your Login Link:
                                </h6>
                                <div class="magic-link-url mb-3">
                                    @Model.MagicLinkUrl
                                </div>
                                <div class="d-grid gap-2">
                                    <a href="@Model.MagicLinkUrl" class="btn btn-success btn-lg">
                                        <i class="bi bi-box-arrow-in-right"></i> Click Here to Login
                                    </a>
                                    <button class="btn btn-outline-secondary" onclick="copyToClipboard()">
                                        <i class="bi bi-clipboard"></i> Copy Link
                                    </button>
                                </div>
                            </div>

                            <div class="mt-3 text-center">
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i> This link expires in 15 minutes
                                </small>
                            </div>

                            <div class="mt-3 text-center">
                                <a href="/Auth/Login" class="btn btn-link">
                                    <i class="bi bi-arrow-left"></i> Request a new link
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <div class="text-center mt-3">
                    <small class="text-white">
                        <i class="bi bi-shield-lock"></i> Secure passwordless authentication
                    </small>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyToClipboard() {
            const url = '@Model.MagicLinkUrl';
            navigator.clipboard.writeText(url).then(() => {
                alert('Link copied to clipboard!');
            }).catch(err => {
                console.error('Failed to copy:', err);
            });
        }
    </script>
</body>
</html>
