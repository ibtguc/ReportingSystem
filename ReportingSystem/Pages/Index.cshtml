@page
@model ReportingSystem.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-3 fw-bold text-primary">Reporting System</h1>
    <p class="lead text-muted">Hierarchical Organizational Reporting Solution</p>
    <hr class="my-4">
</div>

<div class="row mt-5">
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-diagram-3-fill text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Hierarchical Reporting</h5>
                <p class="card-text">Submit and review periodic reports through organizational hierarchy with upward and downward communication flows.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-arrow-up-circle-fill text-success" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Upward Flow</h5>
                <p class="card-text">Suggested actions, needed resources, and support requests flow up from employees to management.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-arrow-down-circle-fill text-info" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Downward Flow</h5>
                <p class="card-text">Feedback, recommendations, and decisions cascade from management to employees with tracking.</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="alert alert-info">
            <h5 class="alert-heading">Getting Started</h5>
            <p class="mb-0">Welcome to the Reporting System. Log in to access the dashboard and manage reports across your organizational hierarchy.</p>
        </div>
    </div>
</div>
