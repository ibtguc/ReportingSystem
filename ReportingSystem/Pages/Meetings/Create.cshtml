@page
@model ReportingSystem.Pages.Meetings.CreateModel
@{
    ViewData["Title"] = "Schedule Meeting";
}

<div class="container mt-4" style="max-width: 800px;">
    <h2><i class="bi bi-calendar-plus"></i> Schedule Meeting</h2>
    <p class="text-muted">Create a new meeting with agenda and invite attendees.</p>

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <form method="post">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Meeting Details</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="Meeting.Title" class="form-label">Title <span class="text-danger">*</span></label>
                    <input asp-for="Meeting.Title" class="form-control" placeholder="e.g. Weekly Status Review" />
                    <span asp-validation-for="Meeting.Title" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Meeting.CommitteeId" class="form-label">Hosting Committee <span class="text-danger">*</span></label>
                        <select asp-for="Meeting.CommitteeId" asp-items="Model.CommitteeOptions" class="form-select">
                            <option value="">-- Select Committee --</option>
                        </select>
                        <span asp-validation-for="Meeting.CommitteeId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Meeting.MeetingType" class="form-label">Meeting Type</label>
                        <select asp-for="Meeting.MeetingType" asp-items="Html.GetEnumSelectList<ReportingSystem.Models.MeetingType>()" class="form-select"></select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Meeting.ScheduledAt" class="form-label">Date & Time <span class="text-danger">*</span></label>
                        <input asp-for="Meeting.ScheduledAt" type="datetime-local" class="form-control" />
                        <span asp-validation-for="Meeting.ScheduledAt" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Meeting.DurationMinutes" class="form-label">Duration (min)</label>
                        <input asp-for="Meeting.DurationMinutes" type="number" class="form-control" min="15" step="15" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Meeting.RecurrencePattern" class="form-label">Recurrence</label>
                        <select asp-for="Meeting.RecurrencePattern" asp-items="Html.GetEnumSelectList<ReportingSystem.Models.RecurrencePattern>()" class="form-select"></select>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Meeting.Location" class="form-label">Location</label>
                    <input asp-for="Meeting.Location" class="form-control" placeholder="Room 301 or virtual meeting link" />
                </div>

                <div class="mb-3">
                    <label asp-for="Meeting.Description" class="form-label">Description</label>
                    <textarea asp-for="Meeting.Description" class="form-control" rows="3" placeholder="Meeting objectives and notes..."></textarea>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="AddCommitteeMembers" class="form-check-input" />
                    <label asp-for="AddCommitteeMembers" class="form-check-label">
                        Automatically invite all committee members as attendees
                    </label>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-page="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-calendar-check"></i> Schedule Meeting
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
